        // Crear sesi√≥n de pago
        const checkoutResponse = await fetch('/api/checkout/create-session', {
          method: 'POST',
          credentials: 'include',
          headers: {
            'Content-Type': 'application/json',
            ...(userId && { 'x-user-id': userId })
