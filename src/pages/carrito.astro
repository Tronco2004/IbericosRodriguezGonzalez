---
import Layout from '../layouts/Layout.astro';
import { obtenerUsuarioDelToken } from '../lib/auth';

const token = Astro.cookies.get('auth_token')?.value;
const usuario = token ? obtenerUsuarioDelToken(token) : null;

// Datos simulados del carrito
const carrito = {
  items: [
    { id: 1, nombre: 'Jamón Ibérico Reserva', cantidad: 1, precio: 9999 },
    { id: 2, nombre: 'Queso Manchego Premium', cantidad: 1, precio: 2200 }
  ]
};

const total = carrito.items.reduce((sum, item) => sum + (item.precio * item.cantidad), 0);
---

<Layout>
  <div style="max-width: 1000px; margin: 0 auto; padding: 2rem;">
    <h1 style="color: #001a33; margin-bottom: 1rem;">Mi Carrito</h1>
    {usuario && (
      <p style="color: #666; margin-bottom: 2rem;">
        Bienvenido, <strong>{usuario.nombre}</strong> 
        <span style="margin-left: 1rem; background: #a89968; color: white; padding: 0.2rem 0.6rem; border-radius: 4px; font-size: 0.85rem; text-transform: uppercase;">
          {usuario.rol}
        </span>
      </p>
    )}

    {carrito.items.length === 0 ? (
      <div style="
        background: #f5f5f5;
        padding: 3rem;
        border-radius: 8px;
        text-align: center;
      ">
        <p style="color: #666; font-size: 1.1rem;">Tu carrito está vacío</p>
        <a href="/productos" style="
          display: inline-block;
          background: linear-gradient(135deg, #001a33, #2d2d2d);
          color: white;
          padding: 0.75rem 1.5rem;
          border-radius: 4px;
          text-decoration: none;
          margin-top: 1rem;
        ">
          Ver Productos
        </a>
      </div>
    ) : (
      <>
        <table style="width: 100%; margin-bottom: 2rem; border-collapse: collapse;">
          <thead>
            <tr style="background: #f5f5f5;">
              <th style="padding: 1rem; text-align: left; border-bottom: 2px solid #ddd;">Producto</th>
              <th style="padding: 1rem; text-align: center; border-bottom: 2px solid #ddd;">Cantidad</th>
              <th style="padding: 1rem; text-align: right; border-bottom: 2px solid #ddd;">Precio</th>
              <th style="padding: 1rem; text-align: right; border-bottom: 2px solid #ddd;">Total</th>
            </tr>
          </thead>
          <tbody>
            {carrito.items.map((item) => (
              <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 1rem;">{item.nombre}</td>
                <td style="padding: 1rem; text-align: center;">{item.cantidad}</td>
                <td style="padding: 1rem; text-align: right;">€{(item.precio / 100).toFixed(2)}</td>
                <td style="padding: 1rem; text-align: right;">€{((item.precio * item.cantidad) / 100).toFixed(2)}</td>
              </tr>
            ))}
          </tbody>
        </table>

        <div style="
          display: flex;
          justify-content: flex-end;
          align-items: center;
          gap: 2rem;
          margin-bottom: 3rem;
          padding-top: 1rem;
          border-top: 2px solid #ddd;
        ">
          <div style="text-align: right;">
            <p style="color: #666; margin: 0;">Total</p>
            <p style="font-size: 2rem; color: #001a33; font-weight: 700; margin: 0;">
              €{(total / 100).toFixed(2)}
            </p>
          </div>
          <a href="/checkout" style="
            background: linear-gradient(135deg, #a89968, #d4af37);
            color: #001a33;
            padding: 0.75rem 2rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 700;
          ">
            Proceder al Pago
          </a>
        </div>
      </>
    )}
  </div>
</Layout>
