---
import Layout from '../layouts/Layout.astro';

// No verificar autenticaci√≥n en el servidor
// Dejar que sea manejado por el cliente con localStorage
// Permitimos compra como invitado
---

<Layout title="Mi Carrito">
  <div class="carrito-page">
    <div class="carrito-container">
      <p id="loadingMessage" class="loading-message">Cargando tu carrito...</p>
      <div id="carritoContent" style="width: 100%; box-sizing: border-box;"></div>
    </div>
  </div>

  <style>
    .carrito-page {
      min-height: 100vh;
      background: var(--bg-tertiary);
      padding: 2rem 0;
      width: 100%;
      overflow-x: hidden;
    }
    .carrito-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      width: 100%;
      box-sizing: border-box;
    }
    .loading-message {
      color: var(--text-secondary);
      font-size: 1.1rem;
      text-align: center;
    }
    /* Modal de invitado adaptable al tema */
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--overlay-dark);
      z-index: 2000;
      align-items: center;
      justify-content: center;
    }
    .modal-content {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 2rem;
      max-width: 450px;
      width: 90%;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: 0 20px 60px var(--shadow-medium);
    }
    .modal-title {
      color: var(--text-primary);
      margin: 0 0 0.5rem 0;
      font-family: 'Playfair Display', serif;
    }
    .modal-subtitle {
      color: var(--text-secondary);
      margin: 0 0 1.5rem 0;
      font-size: 0.95rem;
    }
    .form-label {
      display: block;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }
    .form-input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      font-size: 1rem;
      box-sizing: border-box;
      background: var(--bg-input);
      color: var(--text-primary);
    }
    .form-input::placeholder {
      color: var(--text-muted);
    }
    .form-hint {
      color: var(--text-muted);
      font-size: 0.8rem;
      margin: 0.25rem 0 0 0;
    }
    .form-divider {
      border-top: 1px solid var(--border-color);
      padding-top: 1rem;
      margin-top: 0.5rem;
    }
    .login-hint {
      color: var(--text-secondary);
      font-size: 0.85rem;
      margin: 0 0 1rem 0;
    }
    .login-hint a {
      color: var(--color-accent);
      text-decoration: underline;
    }
    .btn-cancel {
      flex: 1;
      padding: 0.75rem;
      background: var(--bg-tertiary);
      color: var(--text-primary);
      border: none;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      font-size: 1rem;
    }
    .btn-submit {
      flex: 2;
      padding: 0.75rem;
      background: var(--color-accent);
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      font-size: 1rem;
    }

    /* ===== CARRITO GRID ===== */
    :global(.carrito-grid-layout) {
      display: grid;
      grid-template-columns: 1fr 350px;
      gap: 2rem;
      align-items: start;
      width: 100%;
      box-sizing: border-box;
    }

    :global(.carrito-main-panel) {
      background: var(--bg-card);
      border-radius: 8px;
      overflow: hidden;
      border: 1px solid var(--border-color);
      width: 100%;
      box-sizing: border-box;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    :global(.carrito-header) {
      padding: 1.5rem;
      background: var(--bg-tertiary);
      border-bottom: 1px solid var(--border-color);
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    :global(.carrito-title) {
      color: var(--text-primary);
      margin: 0;
      font-family: 'Playfair Display', serif;
      transition: color 0.3s ease;
    }

    :global(.btn-vaciar-carrito) {
      background: transparent;
      border: 1px solid #ef4444;
      color: #ef4444;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 500;
      cursor: pointer;
      margin-top: 0.75rem;
      transition: all 0.3s ease;
    }

    :global(.btn-vaciar-carrito:hover) {
      background: #ef4444;
      color: #fff;
    }

    :global(.carrito-expira-label) {
      font-size: 0.9rem;
      color: var(--text-muted);
      margin-bottom: 0.25rem;
    }

    :global(.countdown-global) {
      font-size: 1.3rem;
      font-weight: 600;
      color: #d97706;
    }

    /* ===== CART ITEM ===== */
    :global(.cart-item) {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color);
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      align-items: flex-start;
      width: 100%;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    :global(.cart-item-img-wrap) {
      width: 180px;
      height: 180px;
      background: var(--bg-tertiary);
      border-radius: 8px;
      overflow: hidden;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 180px;
    }

    :global(.cart-item-img) {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    :global(.cart-item-info) {
      flex: 1;
      min-width: 200px;
      width: 100%;
      box-sizing: border-box;
    }

    :global(.cart-item-nombre) {
      color: var(--text-primary);
      margin: 0 0 0.5rem 0;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    :global(.cart-item-peso) {
      color: var(--color-accent);
      font-weight: 500;
      font-size: 0.85rem;
    }

    :global(.cart-item-precio-line) {
      color: var(--color-accent);
      margin: 0 0 1rem 0;
      font-weight: 600;
      font-size: 0.95rem;
    }

    :global(.cart-item-controls) {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    :global(.cart-cantidad-wrap) {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      border: 1px solid var(--border-color);
      border-radius: 4px;
      width: fit-content;
      background: var(--bg-card);
      transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    :global(.btn-cantidad) {
      background: none;
      border: none;
      color: var(--text-muted);
      padding: 0.25rem 0.5rem;
      cursor: pointer;
      font-size: 1.2rem;
      transition: color 0.2s;
    }

    :global(.btn-cantidad:hover) {
      color: var(--color-accent);
    }

    :global(.cart-cantidad-num) {
      width: 40px;
      text-align: center;
      color: var(--text-primary);
      font-weight: 600;
      font-size: 0.9rem;
    }

    :global(.cart-cortado-label) {
      display: flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    :global(.cart-item-actions) {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: flex-end;
      flex-shrink: 0;
      width: auto;
      white-space: nowrap;
    }

    :global(.cart-item-total) {
      color: var(--text-primary);
      font-weight: 600;
      margin: 0;
      transition: color 0.3s ease;
    }

    :global(.btn-eliminar) {
      background: #f5576c;
      color: white;
      border: none;
      padding: 0.5rem 0.75rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.85rem;
      transition: background 0.2s;
      white-space: nowrap;
    }

    :global(.btn-eliminar:hover) {
      background: #e63950;
    }

    /* ===== RESUMEN PANEL ===== */
    :global(.resumen-panel) {
      background: var(--bg-card);
      border-radius: 8px;
      padding: 1.5rem;
      border: 1px solid var(--border-color);
      position: sticky;
      top: 1rem;
      width: 100%;
      box-sizing: border-box;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    :global(.resumen-title) {
      color: var(--text-primary);
      margin: 0 0 1.5rem 0;
      font-size: 1.2rem;
      transition: color 0.3s ease;
    }

    :global(.resumen-linea) {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.75rem;
      color: var(--text-muted);
    }

    :global(.resumen-valor-accent) {
      color: var(--color-accent);
      font-weight: 600;
    }

    /* ===== C√ìDIGO DESCUENTO ===== */
    :global(.codigo-descuento-box) {
      margin-bottom: 1.5rem;
      padding: 1rem;
      background: var(--bg-tertiary);
      border-radius: 6px;
      border: 1px solid var(--border-color);
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    :global(.codigo-descuento-label) {
      display: block;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
      font-size: 0.95rem;
    }

    :global(.codigo-input) {
      flex: 1;
      padding: 0.65rem 0.75rem;
      border: 1px solid var(--border-color);
      border-radius: 4px;
      font-size: 0.95rem;
      box-sizing: border-box;
      text-transform: uppercase;
      background: var(--bg-card);
      color: var(--text-primary);
      transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    :global(.codigo-input::placeholder) {
      color: var(--text-muted);
    }

    :global(.btn-validar) {
      padding: 0.65rem 1.25rem;
      background: var(--color-accent);
      color: white;
      border: none;
      border-radius: 4px;
      font-weight: 600;
      cursor: pointer;
      font-size: 0.9rem;
      white-space: nowrap;
      transition: all 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    :global(.btn-validar:hover) {
      opacity: 0.9;
    }

    :global(.descuento-aplicado) {
      display: none;
      margin-bottom: 1rem;
      padding: 0.75rem;
      background: #d1fae5;
      border: 1px solid #a7f3d0;
      border-radius: 4px;
    }

    :global(.descuento-row) {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    :global(.descuento-label) {
      color: #065f46;
      font-weight: 600;
    }

    :global(.descuento-valor) {
      color: #065f46;
      font-weight: 700;
      font-size: 1.1rem;
    }

    /* ===== TOTAL ===== */
    :global(.resumen-total-wrap) {
      padding: 1rem 0;
      border-top: 2px solid var(--border-color);
      border-bottom: 2px solid var(--border-color);
      margin-bottom: 1.5rem;
      transition: border-color 0.3s ease;
    }

    :global(.resumen-total-row) {
      display: flex;
      justify-content: space-between;
    }

    :global(.resumen-total-label) {
      color: var(--text-primary);
      font-weight: 700;
    }

    :global(.resumen-total-valor) {
      color: var(--color-accent);
      font-weight: 700;
      font-size: 1.3rem;
    }

    :global(.btn-checkout) {
      display: block;
      width: 100%;
      background: var(--color-accent);
      color: white;
      padding: 1rem;
      border-radius: 4px;
      text-align: center;
      text-decoration: none;
      font-weight: 600;
      transition: background 0.3s;
      margin-bottom: 0.75rem;
      border: none;
      cursor: pointer;
      font-size: 1rem;
    }

    :global(.btn-checkout:hover) {
      opacity: 0.9;
    }

    :global(.btn-seguir-comprando) {
      display: block;
      background: transparent;
      color: var(--color-accent);
      padding: 0.75rem 1rem;
      border: 2px solid var(--color-accent);
      border-radius: 4px;
      text-align: center;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
    }

    :global(.btn-seguir-comprando:hover) {
      background: var(--color-accent);
      color: white;
    }

    /* ===== CARRITO VAC√çO ===== */
    :global(.carrito-vacio) {
      background: var(--bg-card);
      padding: 2rem;
      border-radius: 8px;
      text-align: center;
      border-left: 4px solid var(--color-accent);
      transition: background-color 0.3s ease;
    }

    :global(.carrito-vacio h2) {
      color: var(--text-primary);
      margin: 0 0 1rem 0;
    }

    :global(.carrito-vacio p) {
      color: var(--text-muted);
      margin: 0 0 1.5rem 0;
    }

    :global(.btn-ver-productos) {
      display: inline-block;
      background: var(--color-accent);
      color: white;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
    }

    /* ===== ALERTA EXPIRACI√ìN ===== */
    :global(.alerta-expiracion) {
      background: #fef3c7;
      border: 1px solid #fcd34d;
      border-left: 4px solid #f59e0b;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    :global(.alerta-expiracion-content) {
      display: flex;
      gap: 1rem;
    }

    :global(.alerta-icon) {
      font-size: 1.5rem;
      color: #f59e0b;
      flex-shrink: 0;
    }

    :global(.alerta-titulo) {
      color: #92400e;
      margin: 0 0 0.5rem 0;
      font-weight: 700;
    }

    :global(.alerta-texto) {
      color: #b45309;
      margin: 0;
    }

    :global(.alerta-texto-mb) {
      color: #b45309;
      margin: 0 0 1rem 0;
    }

    :global(.btn-volver-seleccionar) {
      display: inline-block;
      background: #f59e0b;
      color: white;
      padding: 0.5rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 900px) {
      :global(.carrito-grid-layout) {
        grid-template-columns: 1fr !important;
      }
      :global(.resumen-panel) {
        position: static !important;
      }
    }

    @media (max-width: 600px) {
      :global(.cart-item) {
        flex-direction: column;
      }
      :global(.cart-item-img-wrap) {
        width: 100%;
        min-width: unset;
        height: 200px;
      }
    }
  </style>

  <!-- Modal para datos de invitado -->
  <div id="modalInvitado" class="modal-overlay">
    <div class="modal-content">
      <h2 class="modal-title">Datos de env√≠o</h2>
      <p class="modal-subtitle">Introduce tus datos para completar la compra</p>
      
      <form id="formInvitado" style="display: flex; flex-direction: column; gap: 1rem;">
