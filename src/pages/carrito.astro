    setInterval(actualizarContadores, 1000);

    cargarCarrito();
    
    // Listener para cuando se actualice el contador (se dispara cuando el carrito cambia)
    document.addEventListener('carritoActualizado', () => {
      console.log('üîÑ Carrito actualizado, reiniciando contadores');
      setTimeout(() => {
        actualizarContadores();
      }, 500);
    });

    // ========== MODAL DE ELIMINAR PRODUCTO ==========
    let itemIdAEliminar: string | null = null;

    function mostrarModalEliminar(itemId: string, nombreProducto: string) {
      itemIdAEliminar = itemId;
      const modal = document.getElementById('eliminarModal');
      const nombreElem = document.getElementById('eliminarProductoNombre');
      
      if (nombreElem) {
        nombreElem.textContent = `"${nombreProducto}" ser√° eliminado de tu carrito`;
      }
      
      if (modal) {
        modal.style.display = 'flex';
      }
    }

    function cerrarModalEliminar() {
      const modal = document.getElementById('eliminarModal');
      if (modal) {
        modal.style.display = 'none';
      }
      itemIdAEliminar = null;
    }

    async function confirmarEliminar() {
      if (!itemIdAEliminar) return;
      
      const itemId = itemIdAEliminar;
      cerrarModalEliminar();
      
      const userId = localStorage.getItem('user_id');
      
      // Si es invitado, eliminar del localStorage y devolver stock
      if (!userId) {
        console.log('üëª Eliminando del carrito local (invitado)');
        const carrito = getCarritoLocal();
        console.log('üì¶ Carrito antes:', carrito.length, 'items');
        
        // Encontrar el item a eliminar para devolver su stock
        const itemAEliminar = carrito.find((item: any) => item.id === parseInt(itemId));
        if (itemAEliminar) {
          // Devolver el stock
          console.log('‚Ü©Ô∏è Devolviendo stock para item:', itemAEliminar);
          try {
            const res = await fetch('/api/carrito/reservar', {
              method: 'DELETE',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                producto_id: itemAEliminar.producto_id,
                producto_variante_id: itemAEliminar.producto_variante_id || undefined,
                cantidad: itemAEliminar.cantidad
              })
            });
            const data = await res.json();
            if (data.success) {
              console.log('‚úÖ Stock devuelto:', data);
            } else {
              console.error('‚ùå Error devolviendo stock:', data.error);
            }
          } catch (err) {
            console.error('‚ùå Error en fetch:', err);
          }
        }
        
        const carritoActualizado = carrito.filter((item: any) => item.id !== parseInt(itemId));
        console.log('üì¶ Carrito despu√©s:', carritoActualizado.length, 'items');
        setCarritoLocal(carritoActualizado);
        console.log('‚úÖ Item eliminado, localStorage actualizado');
      } else {
        // Si est√° logueado, usar API
        console.log('üë§ Eliminando del carrito (usuario logueado)');
        const response = await fetch(`/api/carrito/${itemId}`, {
          method: 'DELETE',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ user_id: userId })
        });
        
        if (!response.ok) {
          console.error('‚ùå Error eliminando:', response.status);
        }
      }
      
      // Recargar el carrito completo
      console.log('üîÑ Recargando carrito...');
      await cargarCarrito();
      console.log('‚úÖ Carrito recargado');
    }

    // Funci√≥n para vaciar todo el carrito
    async function vaciarCarrito() {
      const modal = document.getElementById('vaciarCarritoModal');
      if (modal) {
        modal.style.display = 'flex';
      }
    }

    // Funci√≥n para confirmar vaciar carrito
    async function confirmarVaciarCarrito() {
      const modal = document.getElementById('vaciarCarritoModal');
      if (modal) {
        modal.style.display = 'none';
      }

      const userId = localStorage.getItem('user_id');
      console.log('üë§ Usuario ID:', userId);
      
      try {
        if (userId) {
          // Usuario logueado: eliminar de la API (el API se encarga de devolver stock)
          console.log('üîÑ Enviando solicitud para vaciar carrito...');
          const response = await fetch('/api/carrito/vaciar', {
            method: 'DELETE',
            credentials: 'include',
            headers: {
              'Content-Type': 'application/json',
            }
          });
          
          console.log('üì° Respuesta del servidor:', response.status, response.statusText);
          
          if (!response.ok) {
            const errorData = await response.json();
            console.error('‚ùå Error:', errorData);
            throw new Error(errorData.message || 'Error al vaciar carrito');
          }

          const data = await response.json();
          console.log('‚úÖ Respuesta:', data);
        } else {
          // Invitado: devolver stock de cada item y limpiar localStorage
          const carrito = getCarritoLocal();
          console.log('üëª Vaciando carrito local (invitado):', carrito.length, 'items');
          
          // Devolver el stock de cada item
          for (const item of carrito) {
            try {
              await fetch('/api/carrito/reservar', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  producto_id: item.producto_id,
                  producto_variante_id: item.producto_variante_id || undefined,
                  cantidad: item.cantidad
                })
              });
            } catch (err) {
              console.error('Error devolviendo stock:', err);
            }
          }
          
          // Limpiar localStorage
          localStorage.removeItem('carrito_invitado');
        }
        
        // Recargar el carrito
        console.log('üîÑ Recargando carrito...');
        await cargarCarrito();
        console.log('‚úÖ Carrito recargado');
        
      } catch (error) {
        console.error('‚ùå Error vaciando carrito:', error);
        alert('Error al vaciar el carrito: ' + error);
      }
    }

    // Funci√≥n para cerrar modal
    function cerrarModalVaciar() {
      const modal = document.getElementById('vaciarCarritoModal');
      if (modal) {
        modal.style.display = 'none';
      }
    }

    // Exponer funci√≥n globalmente
    (window as any).vaciarCarrito = vaciarCarrito;

    // Event listeners del modal de eliminar
    document.getElementById('btnCancelarEliminar')?.addEventListener('click', cerrarModalEliminar);
    document.getElementById('btnConfirmarEliminar')?.addEventListener('click', confirmarEliminar);
    
    // Event listeners del modal de vaciar carrito
    document.getElementById('btnCancelarVaciar')?.addEventListener('click', cerrarModalVaciar);
    document.getElementById('btnConfirmarVaciar')?.addEventListener('click', confirmarVaciarCarrito);
    
    // Cerrar al hacer clic fuera del modal
    document.getElementById('eliminarModal')?.addEventListener('click', (e) => {
      if ((e.target as HTMLElement).id === 'eliminarModal') {
        cerrarModalEliminar();
      }
    });

    document.getElementById('vaciarCarritoModal')?.addEventListener('click', (e) => {
      if ((e.target as HTMLElement).id === 'vaciarCarritoModal') {
        cerrarModalVaciar();
      }
    });
  </script>

