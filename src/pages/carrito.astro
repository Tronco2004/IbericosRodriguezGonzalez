---
import Layout from '../layouts/Layout.astro';

// No verificar autenticaci√≥n en el servidor
// Dejar que sea manejado por el cliente con localStorage
// Permitimos compra como invitado
---

<Layout title="Mi Carrito">
  <div style="min-height: 100vh; background: #f8f4f0; padding: 2rem 0; width: 100%; overflow-x: hidden;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem; width: 100%; box-sizing: border-box;">
      <p id="loadingMessage" style="color: #5c4a3d; font-size: 1.1rem; text-align: center;">Cargando tu carrito...</p>
      <div id="carritoContent" style="width: 100%; box-sizing: border-box;"></div>
    </div>
  </div>

  <!-- Modal para datos de invitado -->
  <div id="modalInvitado" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 2000; align-items: center; justify-content: center;">
    <div style="background: white; border-radius: 12px; padding: 2rem; max-width: 450px; width: 90%; max-height: 90vh; overflow-y: auto; box-shadow: 0 20px 60px rgba(0,0,0,0.3);">
      <h2 style="color: #001a33; margin: 0 0 0.5rem 0; font-family: 'Playfair Display', serif;">Datos de env√≠o</h2>
      <p style="color: #5c4a3d; margin: 0 0 1.5rem 0; font-size: 0.95rem;">Introduce tus datos para completar la compra</p>
      
      <form id="formInvitado" style="display: flex; flex-direction: column; gap: 1rem;">
        <div>
          <label style="display: block; font-weight: 600; color: #001a33; margin-bottom: 0.5rem; font-size: 0.9rem;">Nombre completo *</label>
          <input 
            type="text" 
            id="guestNombre" 
            required 
            placeholder="Tu nombre y apellidos"
            style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem; box-sizing: border-box;"
          />
        </div>
        
        <div>
          <label style="display: block; font-weight: 600; color: #001a33; margin-bottom: 0.5rem; font-size: 0.9rem;">Email *</label>
          <input 
            type="email" 
            id="guestEmail" 
            required 
            placeholder="tu@email.com"
            style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem; box-sizing: border-box;"
          />
          <p style="color: #666; font-size: 0.8rem; margin: 0.25rem 0 0 0;">Recibir√°s la confirmaci√≥n del pedido aqu√≠</p>
        </div>
        
        <div>
          <label style="display: block; font-weight: 600; color: #001a33; margin-bottom: 0.5rem; font-size: 0.9rem;">Tel√©fono *</label>
          <input 
            type="tel" 
            id="guestTelefono" 
            required 
            placeholder="612 345 678"
            style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem; box-sizing: border-box;"
          />
        </div>

        <div style="border-top: 1px solid #e0d5c7; padding-top: 1rem; margin-top: 0.5rem;">
          <p style="color: #5c4a3d; font-size: 0.85rem; margin: 0 0 1rem 0;">
            <strong>¬øYa tienes cuenta?</strong> 
            <a href="/login?redirect=/carrito" style="color: #a89968; text-decoration: underline;">Inicia sesi√≥n</a> 
            para guardar tus pedidos.
          </p>
        </div>
        
        <div style="display: flex; gap: 1rem; margin-top: 0.5rem;">
          <button 
            type="button" 
            id="btnCancelarModal"
            style="flex: 1; padding: 0.75rem; background: #f3f4f6; color: #374151; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 1rem;"
          >
            Cancelar
          </button>
          <button 
            type="submit" 
            style="flex: 2; padding: 0.75rem; background: #a89968; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 1rem;"
          >
            Continuar al pago
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // ========== GESTI√ìN DE CARRITO PARA INVITADOS ==========
    
    // Funciones para carrito en localStorage (invitados)
    function getCarritoLocal() {
      const carrito = localStorage.getItem('carrito_invitado');
      return carrito ? JSON.parse(carrito) : [];
    }

    function setCarritoLocal(items) {
      localStorage.setItem('carrito_invitado', JSON.stringify(items));
    }

    function esUsuarioLogueado() {
      return !!localStorage.getItem('user_id');
    }

    async function cargarCarrito() {
      try {
        const userId = localStorage.getItem('user_id');
        
        console.log('=== DEBUG CARRITO ===');
        console.log('Usuario logueado:', !!userId);
        
        let items = [];
        let itemsExpirados = false;

        if (userId) {
          // Usuario logueado: cargar desde API
          const response = await fetch('/api/carrito', {
            credentials: 'include',
            headers: { 'x-user-id': userId }
          });

          if (!response.ok) throw new Error('Error cargando carrito');

          const data = await response.json();
          items = data.items || [];
          itemsExpirados = data.itemsExpirados || false;
        } else {
          // Invitado: cargar desde localStorage
          items = getCarritoLocal();
          console.log('Carrito invitado desde localStorage:', items);
        }

        // Guardar items en variable global
        window.carritoItems = items;

        if (!items || items.length === 0) {
          document.getElementById('loadingMessage').style.display = 'none';
          
          let html = '';
          if (itemsExpirados) {
            window.dispatchEvent(new CustomEvent('carritoActualizado'));
            html += `
              <div style="background: #fef3c7; border: 1px solid #fcd34d; border-left: 4px solid #f59e0b; border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem;">
                <div style="display: flex; gap: 1rem;">
                  <div style="font-size: 1.5rem; color: #f59e0b; flex-shrink: 0;">‚ö†</div>
                  <div>
                    <h3 style="color: #92400e; margin: 0 0 0.5rem 0; font-weight: 700;">Tu carrito ha expirado</h3>
                    <p style="color: #b45309; margin: 0 0 1rem 0;">Algunos productos fueron reservados por 15 minutos y han expirado.</p>
                    <a href="/productos" style="display: inline-block; background: #f59e0b; color: white; padding: 0.5rem 1.5rem; border-radius: 4px; text-decoration: none; font-weight: 600;">
                      Volver a Seleccionar
                    </a>
                  </div>
                </div>
              </div>
            `;
          }
          
          document.getElementById('carritoContent').innerHTML = html + `
            <div style="background: white; padding: 2rem; border-radius: 8px; text-align: center; border-left: 4px solid #a89968;">
              <h2 style="color: #001a33; margin: 0 0 1rem 0;">Tu carrito est√° vac√≠o</h2>
              <p style="color: #5c4a3d; margin: 0 0 1.5rem 0;">Empieza a agregar productos para tu compra.</p>
              <a href="/productos" style="display: inline-block; background: #a89968; color: white; padding: 0.75rem 2rem; border-radius: 4px; text-decoration: none; font-weight: 600;">
                Ver Productos
              </a>
            </div>
          `;
          return;
        }

        // Calcular totales
        const totalItems = items.reduce((total, item) => total + item.cantidad, 0);
        const subtotal = items.reduce((total, item) => {
          // FIX: Si el precio es muy grande (> 100000), dividir por 100 autom√°ticamente
          let precioUnitario = item.precio_unitario;
          if (precioUnitario > 100000) {
            precioUnitario = Math.round(precioUnitario / 100);
          }
          let precioItem = precioUnitario * item.cantidad;
          // Agregar 20‚Ç¨ (2000 centimos) si tiene cortado
          if (item.cortado) {
            precioItem += 2000;
          }
          return total + precioItem;
        }, 0);
        const envio = 500; // 5‚Ç¨ en centimos
        const total = subtotal + envio;

        // Renderizar carrito
        let htmlContent = ``;
        
        // Agregar alerta de expiraci√≥n si es necesario
        if (itemsExpirados) {
          htmlContent += `
            <div style="background: #fef3c7; border: 1px solid #fcd34d; border-left: 4px solid #f59e0b; border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem;">
              <div style="display: flex; gap: 1rem;">
                <div style="font-size: 1.5rem; color: #f59e0b; flex-shrink: 0;">‚ö†</div>
                <div>
                  <h3 style="color: #92400e; margin: 0 0 0.5rem 0; font-weight: 700;">Tu carrito ha expirado parcialmente</h3>
                  <p style="color: #b45309; margin: 0;">Algunos productos fueron reservados por 15 minutos y han expirado. Los productos que ves abajo siguen disponibles.</p>
                </div>
              </div>
            </div>
          `;
        }

        htmlContent += `
          <div class="carrito-grid-layout" style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem; align-items: start; width: 100%; box-sizing: border-box;">
            <div style="background: white; border-radius: 8px; overflow: hidden; border: 1px solid #e0d5c7; width: 100%; box-sizing: border-box;">
              <div style="padding: 1.5rem; background: #f8f4f0; border-bottom: 1px solid #e0d5c7; display: flex; justify-content: space-between; align-items: center;">
                <h2 style="color: #001a33; margin: 0;">Carrito (${totalItems} ${totalItems === 1 ? 'producto' : 'productos'})</h2>
                <div style="text-align: right;">
                  <div style="font-size: 0.9rem; color: #5c4a3d; margin-bottom: 0.25rem;">Expira en:</div>
                  <span id="countdownGlobal" class="countdown-global" style="font-size: 1.3rem; font-weight: 600; color: #d97706;">cargando...</span>
                </div>
              </div>
              <div>
        `;

        items.forEach(item => {
          // Obtener nombre e imagen - compatible con usuarios (item.productos) e invitados (item directo)
          const nombre = item.productos?.nombre || item.nombre || 'Producto';
          const imagen = item.productos?.imagen_url || item.imagen || 'https://images.unsplash.com/photo-1557803104268-0ef0f060e15f?w=500&h=500&fit=crop';
          const categoria = item.productos?.categoria || item.categoria || '';
          
          // FIX: Si el precio es muy grande (> 100000), dividir por 100 autom√°ticamente
          let precioUnitario = item.precio_unitario;
          if (precioUnitario > 100000) {
            precioUnitario = Math.round(precioUnitario / 100);
          }
          
          console.log('üîç Item en carrito:', { 
            id: item.id, 
            nombre, 
            categoria,
            esJamon: categoria === 'Jamones',
            cortado: item.cortado,
            precioOriginal: item.precio_unitario,
            precioCorregido: precioUnitario
          });
          
          htmlContent += `
            <div class="cart-item" data-item-id="${item.id}" style="
              padding: 1.5rem;
              border-bottom: 1px solid #e0d5c7;
              display: flex;
              flex-wrap: wrap;
              gap: 1.5rem;
              align-items: flex-start;
              width: 100%;
              box-sizing: border-box;
            ">
              <div style="
                width: 180px;
                height: 180px;
                background: #f8f4f0;
                border-radius: 8px;
                overflow: hidden;
                flex-shrink: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                min-width: 180px;
              ">
                <img 
                  src="${imagen}" 
                  alt="${nombre}"
                  style="
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                  "
                />
              </div>
              <div style="flex: 1; min-width: 200px; width: 100%; box-sizing: border-box;">
                <h3 style="color: #001a33; margin: 0 0 0.5rem 0; font-size: 1rem;">
                  ${nombre}
                  ${item.peso_kg ? ` <span style="color: #a89968; font-weight: 500; font-size: 0.85rem;">(${item.peso_kg.toFixed(3)} kg)</span>` : ''}
                </h3>
                <p style="color: #a89968; margin: 0 0 1rem 0; font-weight: 600; font-size: 0.95rem;">
                  ${(precioUnitario / 100).toFixed(2)}‚Ç¨ x ${item.cantidad}
                </p>
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                  <div style="display: flex; align-items: center; gap: 0.5rem; border: 1px solid #e0d5c7; border-radius: 4px; width: fit-content;">
                    <button class="btn-cantidad" data-item-id="${item.id}" data-action="decrease" style="
                      background: none;
                      border: none;
                      color: #5c4a3d;
                      padding: 0.25rem 0.5rem;
                      cursor: pointer;
                      font-size: 1.2rem;
                      transition: color 0.2s;
                    ">‚àí</button>
                    <span style="
                      width: 40px;
                      text-align: center;
                      color: #001a33;
                      font-weight: 600;
                      font-size: 0.9rem;
                    ">${item.cantidad}</span>
                    <button class="btn-cantidad" data-item-id="${item.id}" data-action="increase" style="
                      background: none;
                      border: none;
                      color: #5c4a3d;
                      padding: 0.25rem 0.5rem;
                      cursor: pointer;
                      font-size: 1.2rem;
                      transition: color 0.2s;
                    ">+</button>
                  </div>
                  ${categoria === 'Jamones' && item.productos ? `
                    <label style="display: flex; align-items: center; gap: 10px; cursor: pointer; font-size: 0.9rem;">
                      <input type="checkbox" class="cortado-checkbox" data-item-id="${item.id}" ${item.cortado ? 'checked' : ''} style="width: 16px; height: 16px; cursor: pointer;">
                      <span style="color: #5c4a3d;">¬øCortado?</span>
                    </label>
                  ` : ''}
                </div>
              </div>
              <div style="display: flex; flex-direction: column; gap: 1rem; align-items: flex-end; flex-shrink: 0; width: auto; white-space: nowrap;">
                <div style="text-align: right;">
                  <p style="color: #001a33; font-weight: 600; margin: 0;">
                    ${((precioUnitario * item.cantidad + (item.cortado ? 2000 : 0)) / 100).toFixed(2)}‚Ç¨
                  </p>
                </div>
                <button class="btn-eliminar" data-item-id="${item.id}" style="
                  background: #f5576c;
                  color: white;
                  border: none;
                  padding: 0.5rem 0.75rem;
                  border-radius: 4px;
                  cursor: pointer;
                  font-size: 0.85rem;
                  transition: background 0.2s;
                  white-space: nowrap;
                ">
                  Eliminar
                </button>
              </div>
            </div>
          `;
        });

        htmlContent += `
              </div>
            </div>
            <div style="background: white; border-radius: 8px; padding: 1.5rem; border: 1px solid #e0d5c7; position: sticky; top: 1rem; width: 100%; box-sizing: border-box;">
              <h3 style="color: #001a33; margin: 0 0 1.5rem 0; font-size: 1.2rem;">Resumen</h3>
              <div style="margin-bottom: 1rem;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; color: #5c4a3d;">
                  <span>Subtotal (${totalItems} ${totalItems === 1 ? 'producto' : 'productos'})</span>
                  <span id="subtotalAmount">${(subtotal / 100).toFixed(2)}‚Ç¨</span>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; color: #5c4a3d;">
                  <span>Env√≠o</span>
                  <span style="color: #a89968; font-weight: 600;">${(envio / 100).toFixed(2)}‚Ç¨</span>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; color: #5c4a3d;">
                  <span>Impuestos</span>
                  <span style="color: #a89968; font-weight: 600;">Incluidos</span>
                </div>
              </div>

              <!-- Campo de C√≥digo de Descuento -->
              <div style="margin-bottom: 1.5rem; padding: 1rem; background: #f8f7f4; border-radius: 6px; border: 1px solid #e0d5c7;">
                <label style="display: block; font-weight: 600; color: #001a33; margin-bottom: 0.75rem; font-size: 0.95rem;">C√≥digo de Descuento</label>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                  <input 
                    id="inputCodigo"
                    type="text"
                    placeholder="Ingresa tu c√≥digo"
                    style="
                      flex: 1;
                      padding: 0.65rem 0.75rem;
                      border: 1px solid #d1d5db;
                      border-radius: 4px;
                      font-size: 0.95rem;
                      box-sizing: border-box;
                      text-transform: uppercase;
                      background: white;
                    "
                  />
                  <button 
                    id="btnValidarCodigo"
                    style="
                      padding: 0.65rem 1.25rem;
                      background: #a89968;
                      color: white;
                      border: none;
                      border-radius: 4px;
                      font-weight: 600;
                      cursor: pointer;
                      font-size: 0.9rem;
                      white-space: nowrap;
                      transition: all 0.2s;
                      text-transform: uppercase;
                      letter-spacing: 0.5px;
                    "
                  >
                    Validar
                  </button>
                </div>
                <div id="mensajeCodigoStatus" style="display: none; margin-top: 0.75rem; padding: 0.65rem; border-radius: 4px; font-size: 0.85rem; text-align: center; font-weight: 600;"></div>
              </div>

              <!-- Descuento aplicado -->
              <div id="descuentoInfo" style="display: none; margin-bottom: 1rem; padding: 0.75rem; background: #d1fae5; border: 1px solid #a7f3d0; border-radius: 4px;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                  <span style="color: #065f46; font-weight: 600;">Descuento aplicado</span>
                  <span id="descuentoAmount" style="color: #065f46; font-weight: 700; font-size: 1.1rem;">-0.00‚Ç¨</span>
                </div>
              </div>

              <div style="
                padding: 1rem 0;
                border-top: 2px solid #e0d5c7;
                border-bottom: 2px solid #e0d5c7;
                margin-bottom: 1.5rem;
              ">
                <div style="display: flex; justify-content: space-between;">
                  <span style="color: #001a33; font-weight: 700;">Total</span>
                  <span id="totalAmount" style="color: #a89968; font-weight: 700; font-size: 1.3rem;">
                    ${(total / 100).toFixed(2)}‚Ç¨
                  </span>
                </div>
              </div>
              <button id="btnCheckout" style="
                display: block;
                width: 100%;
                background: #a89968;
                color: white;
                padding: 1rem;
                border-radius: 4px;
                text-align: center;
                text-decoration: none;
                font-weight: 600;
                transition: background 0.3s;
                margin-bottom: 0.75rem;
                border: none;
                cursor: pointer;
                font-size: 1rem;
              ">
                Proceder al Checkout
              </button>
              <a href="/productos" style="
                display: block;
                background: transparent;
                color: #a89968;
                padding: 0.75rem 1rem;
                border: 2px solid #a89968;
                border-radius: 4px;
                text-align: center;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s;
              ">
                Seguir Comprando
              </a>
            </div>
          </div>
        `;

        document.getElementById('loadingMessage').style.display = 'none';
        document.getElementById('carritoContent').innerHTML = htmlContent;

        // Event listeners
        document.querySelectorAll('.btn-cantidad').forEach(btn => {
          btn.addEventListener('click', async () => {
            const itemId = btn.getAttribute('data-item-id');
            const action = btn.getAttribute('data-action');
            const cartItem = btn.closest('.cart-item');
            
            // Buscar el span de cantidad que est√° entre los dos botones (no el countdown)
            const cantidadSpans = cartItem.querySelectorAll('span');
            let cantidadSpan = null;
            for (const span of cantidadSpans) {
              // El span de cantidad tiene width: 40px
              if (span.style.width === '40px') {
                cantidadSpan = span;
                break;
              }
            }
            
            if (!cantidadSpan) {
              console.error('No se encontr√≥ el span de cantidad');
              return;
            }

            let cantidad = parseInt(cantidadSpan.textContent);

            if (action === 'increase') {
              cantidad++;
            } else if (action === 'decrease' && cantidad > 1) {
              cantidad--;
            } else if (action === 'decrease' && cantidad === 1) {
              // Si es 1 y decrece, eliminar el item
              const userId = localStorage.getItem('user_id');
              if (!userId) {
                const carrito = getCarritoLocal();
                const itemAEliminar = carrito.find(item => item.id === parseInt(itemId));
                if (itemAEliminar) {
                  // Devolver el stock
                  fetch('/api/carrito/reservar', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                      producto_id: itemAEliminar.producto_id,
                      producto_variante_id: itemAEliminar.producto_variante_id || undefined,
                      cantidad: itemAEliminar.cantidad
                    })
                  })
                    .then(res => res.json())
                    .then(data => {
                      if (data.success) {
                        console.log('‚úÖ Stock devuelto al decrementar a 0:', data);
                      }
                    })
                    .catch(err => console.error('‚ùå Error devolviendo stock:', err));
                }
                const carritoActualizado = carrito.filter(item => item.id !== parseInt(itemId));
                setCarritoLocal(carritoActualizado);
              } else {
                await fetch(`/api/carrito/${itemId}`, {
                  method: 'DELETE',
                  credentials: 'include',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ user_id: userId })
                });
              }
              cargarCarrito();
              return;
            }

            try {
              const userId = localStorage.getItem('user_id');
              
              // Si es invitado, actualizar localStorage
              if (!userId) {
                const carrito = getCarritoLocal();
                const item = carrito.find(i => i.id === itemId);
                if (item) {
                  item.cantidad = cantidad;
                  setCarritoLocal(carrito);
                  console.log('‚úÖ Cantidad actualizada en carrito local (invitado)');
                  cargarCarrito();
                  return;
                }
              }
              
              // Si est√° logueado, usar API
              const response = await fetch(`/api/carrito/${itemId}`, {
                method: 'PUT',
                credentials: 'include',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                  item_id: itemId, 
                  cantidad,
                  user_id: userId
                })
              });

              if (response.ok) {
                // Recargar el carrito completo para actualizar todos los valores
                cargarCarrito();
              }
            } catch (error) {
              console.error('Error:', error);
              alert('Error al actualizar la cantidad');
            }
          });
        });

        document.querySelectorAll('.btn-eliminar').forEach(btn => {
          btn.addEventListener('click', async () => {
            const itemId = btn.getAttribute('data-item-id');
            console.log('üóëÔ∏è Click en eliminar item:', itemId);
            if (confirm('¬øEst√°s seguro de que deseas eliminar este producto?')) {
              const userId = localStorage.getItem('user_id');
              
              // Si es invitado, eliminar del localStorage y devolver stock
              if (!userId) {
                console.log('üëª Eliminando del carrito local (invitado)');
                const carrito = getCarritoLocal();
                console.log('üì¶ Carrito antes:', carrito.length, 'items');
                
                // Encontrar el item a eliminar para devolver su stock
                const itemAEliminar = carrito.find(item => item.id === parseInt(itemId));
