---
import Layout from '../layouts/Layout.astro';

// No verificar autenticaci√≥n en el servidor
// Dejar que sea manejado por el cliente con localStorage
---

<Layout title="Mi Carrito">
  <div style="min-height: 100vh; background: #f8f4f0; padding: 2rem 0;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;">
      <p id="loadingMessage" style="color: #5c4a3d; font-size: 1.1rem; text-align: center;">Cargando tu carrito...</p>
      <div id="carritoContent"></div>
    </div>
  </div>

  <script>
    async function cargarCarrito() {
      try {
        const userId = localStorage.getItem('user_id');
        
        // DEBUG: Mostrar qu√© hay en localStorage
        console.log('=== DEBUG CARRITO ===');
        console.log('localStorage.getItem("user_id"):', userId);
        console.log('Todos los valores en localStorage:');
        for (let i = 0; i < localStorage.length; i++) {
          const key = localStorage.key(i);
          const value = localStorage.getItem(key);
          console.log(`  ${key}: ${value}`);
        }
        
        if (!userId) {
          document.getElementById('loadingMessage').style.display = 'none';
          document.getElementById('carritoContent').innerHTML = `
            <div style="background: white; padding: 2rem; border-radius: 8px; text-align: center; border-left: 4px solid #a89968;">
              <h2 style="color: #001a33; margin: 0 0 1rem 0;">Debes iniciar sesi√≥n</h2>
              <p style="color: #5c4a3d; margin: 0 0 1.5rem 0;">Por favor, inicia sesi√≥n para ver y gestionar tu carrito. (localStorage vac√≠o)</p>
              <a href="/login" style="
                display: inline-block;
                background: #a89968;
                color: white;
                padding: 0.75rem 2rem;
                border-radius: 4px;
                text-decoration: none;
                font-weight: 600;
                transition: background 0.3s;
              ">
                Ir a Login
              </a>
            </div>
          `;
          return;
        }

        // Obtener carrito del usuario
        const response = await fetch('/api/carrito', {
          credentials: 'include',
          headers: {
            'x-user-id': userId
          }
        });

        console.log('üì° Response status:', response.status);
        
        if (!response.ok) {
          console.log('‚ùå Response no OK:', response.statusText);
          throw new Error('Error cargando carrito');
        }

        const data = await response.json();
        console.log('üì¶ Datos recibidos del API:', JSON.stringify(data));
        const carrito = data.carrito;
        const items = data.items || [];
        const itemsExpirados = data.itemsExpirados || false;

        // Guardar items en variable global para el contador
        window.carritoItems = items;

        let html = '';

        if (!items || items.length === 0) {
          document.getElementById('loadingMessage').style.display = 'none';
          
          if (itemsExpirados) {
            // Notificar que el carrito expir√≥ (devuelve stock)
            window.dispatchEvent(new CustomEvent('carritoActualizado'));
            html += `
              <div style="background: #fef3c7; border: 1px solid #fcd34d; border-left: 4px solid #f59e0b; border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem;">
                <div style="display: flex; gap: 1rem;">
                  <div style="font-size: 1.5rem; color: #f59e0b; flex-shrink: 0;">‚ö†</div>
                  <div>
                    <h3 style="color: #92400e; margin: 0 0 0.5rem 0; font-weight: 700;">Tu carrito ha expirado</h3>
                    <p style="color: #b45309; margin: 0 0 1rem 0;">Algunos productos fueron reservados por 15 minutos y han expirado. Por favor, vuelve a seleccionar los productos que deseas comprar.</p>
                    <a href="/productos" style="
                      display: inline-block;
                      background: #f59e0b;
                      color: white;
                      padding: 0.5rem 1.5rem;
                      border-radius: 4px;
                      text-decoration: none;
                      font-weight: 600;
                      transition: background 0.3s;
                    " onmouseover="this.style.background='#d97706'" onmouseout="this.style.background='#f59e0b'">
                      Volver a Seleccionar
                    </a>
                  </div>
                </div>
              </div>
            `;
          }
          
          document.getElementById('carritoContent').innerHTML = html + `
            <div style="background: white; padding: 2rem; border-radius: 8px; text-align: center; border-left: 4px solid #a89968;">
              <h2 style="color: #001a33; margin: 0 0 1rem 0;">Tu carrito est√° vac√≠o</h2>
              <p style="color: #5c4a3d; margin: 0 0 1.5rem 0;">Empieza a agregar productos para tu compra.</p>
              <a href="/productos" style="
                display: inline-block;
                background: #a89968;
                color: white;
                padding: 0.75rem 2rem;
                border-radius: 4px;
                text-decoration: none;
                font-weight: 600;
                transition: background 0.3s;
              ">
                Ver Productos
              </a>
            </div>
          `;
          return;
        }

        // Calcular totales
        const totalItems = items.reduce((total, item) => total + item.cantidad, 0);
        const subtotal = items.reduce((total, item) => {
          return total + (item.precio_unitario * item.cantidad);
        }, 0);
        const envio = 500; // 5‚Ç¨ en centimos
        const total = subtotal + envio;

        // Renderizar carrito
        let htmlContent = ``;
        
        // Agregar alerta de expiraci√≥n si es necesario
        if (itemsExpirados) {
          htmlContent += `
            <div style="background: #fef3c7; border: 1px solid #fcd34d; border-left: 4px solid #f59e0b; border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem;">
              <div style="display: flex; gap: 1rem;">
                <div style="font-size: 1.5rem; color: #f59e0b; flex-shrink: 0;">‚ö†</div>
                <div>
                  <h3 style="color: #92400e; margin: 0 0 0.5rem 0; font-weight: 700;">Tu carrito ha expirado parcialmente</h3>
                  <p style="color: #b45309; margin: 0;">Algunos productos fueron reservados por 15 minutos y han expirado. Los productos que ves abajo siguen disponibles.</p>
                </div>
              </div>
            </div>
          `;
        }

        htmlContent += `
          <div class="carrito-layout">
            <div class="carrito-productos">
              <div class="carrito-header">
                <h2>Carrito (${totalItems} ${totalItems === 1 ? 'producto' : 'productos'})</h2>
                <div class="carrito-expira">
                  <div>Expira en:</div>
                  <span id="countdownGlobal" class="countdown-global">cargando...</span>
                </div>
              </div>
              <div class="carrito-items">
        `;

        items.forEach(item => {
          htmlContent += `
            <div class="cart-item" data-item-id="${item.id}">
              <div class="cart-item-imagen">
                <img 
                  src="${item.productos?.imagen_url || ''}" 
                  alt="${item.productos?.nombre || 'Producto'}"
                />
              </div>
              <div class="cart-item-info">
                <h3>
                  ${item.productos?.nombre || 'Producto'}
                  ${item.peso_kg ? ` <span class="peso">(${item.peso_kg.toFixed(3)} kg)</span>` : ''}
                </h3>
                <p class="precio-unitario">
                  ${(item.precio_unitario / 100).toFixed(2)}‚Ç¨ x ${item.cantidad}
                </p>
                <div class="cantidad-control">
                  <button class="btn-cantidad" data-item-id="${item.id}" data-action="decrease">‚àí</button>
                  <span>${item.cantidad}</span>
                  <button class="btn-cantidad" data-item-id="${item.id}" data-action="increase">+</button>
                </div>
              </div>
              <div class="cart-item-acciones">
                <p class="precio-total">
                  ${((item.precio_unitario * item.cantidad) / 100).toFixed(2)}‚Ç¨
                </p>
                <button class="btn-eliminar" data-item-id="${item.id}">
                  Eliminar
                </button>
              </div>
            </div>
          `;
        });

        htmlContent += `
              </div>
            </div>
            <div class="carrito-resumen">
              <h3>Resumen</h3>
              <div class="resumen-lineas">
                <div class="resumen-linea">
                  <span>Subtotal (${totalItems} ${totalItems === 1 ? 'producto' : 'productos'})</span>
                  <span id="subtotalDisplay">${(subtotal / 100).toFixed(2)}‚Ç¨</span>
                </div>
                <div class="resumen-linea">
                  <span>Env√≠o</span>
                  <span class="precio-envio">${(envio / 100).toFixed(2)}‚Ç¨</span>
                </div>
                <div class="resumen-linea">
                  <span>Impuestos</span>
                  <span class="precio-envio">Incluidos</span>
                </div>
              </div>

              <!-- Campo de C√≥digo de Descuento -->
              <div class="codigo-descuento-box">
                <label>C√≥digo de Descuento</label>
                <div class="codigo-input-group">
                  <input 
                    id="inputCodigo"
                    type="text"
                    placeholder="Ingresa tu c√≥digo"
                  />
                  <button id="btnValidarCodigo">Validar</button>
                </div>
                <div id="mensajeCodigoStatus" class="codigo-status"></div>
              </div>

              <!-- Descuento aplicado -->
              <div id="descuentoInfo" class="descuento-info">
                <div class="descuento-linea">
                  <span>Descuento aplicado</span>
                  <span id="descuentoAmount">-0.00‚Ç¨</span>
                </div>
              </div>

              <div class="resumen-total">
                <div class="total-linea">
                  <span>Total</span>
                  <span id="totalDisplay">${(total / 100).toFixed(2)}‚Ç¨</span>
                </div>
              </div>
              <button id="btnCheckout" class="btn-checkout">Proceder al Checkout</button>
              <a href="/productos" class="btn-seguir">Seguir Comprando</a>
            </div>
          </div>
        `;

        document.getElementById('loadingMessage').style.display = 'none';
        document.getElementById('carritoContent').innerHTML = htmlContent;

        // Event listeners
        document.querySelectorAll('.btn-cantidad').forEach(btn => {
          btn.addEventListener('click', async () => {
            const itemId = btn.getAttribute('data-item-id');
            const action = btn.getAttribute('data-action');
            const cartItem = btn.closest('.cart-item');
            
            // Buscar el span de cantidad dentro del control de cantidad
            const cantidadControl = cartItem.querySelector('.cantidad-control');
            const cantidadSpan = cantidadControl ? cantidadControl.querySelector('span') : null;
            
            if (!cantidadSpan) {
              console.error('No se encontr√≥ el span de cantidad');
              return;
            }

            let cantidad = parseInt(cantidadSpan.textContent);

            if (action === 'increase') {
              cantidad++;
            } else if (action === 'decrease' && cantidad > 1) {
              cantidad--;
            } else if (action === 'decrease' && cantidad === 1) {
              await eliminarItem(itemId);
              // Recargar el carrito completo
              cargarCarrito();
              return;
            }

            try {
              const response = await fetch(`/api/carrito/${itemId}`, {
                method: 'PUT',
                credentials: 'include',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                  item_id: itemId, 
                  cantidad,
                  user_id: localStorage.getItem('user_id')
                })
              });

              if (response.ok) {
                // Recargar el carrito completo para actualizar todos los valores
                cargarCarrito();
              }
            } catch (error) {
              console.error('Error:', error);
              alert('Error al actualizar la cantidad');
            }
          });
        });

        document.querySelectorAll('.btn-eliminar').forEach(btn => {
          btn.addEventListener('click', async () => {
            const itemId = btn.getAttribute('data-item-id');
            if (confirm('¬øEst√°s seguro de que deseas eliminar este producto?')) {
              await eliminarItem(itemId);
              // Recargar el carrito completo
              cargarCarrito();
            }
          });
        });

        // Hover effects
        document.querySelectorAll('.btn-cantidad').forEach(btn => {
          btn.addEventListener('mouseover', () => {
            btn.style.color = '#a89968';
          });
          btn.addEventListener('mouseout', () => {
            btn.style.color = '#5c4a3d';
          });
        });

        document.querySelectorAll('.btn-eliminar').forEach(btn => {
          btn.addEventListener('mouseover', () => {
            btn.style.background = '#d63e56';
          });
          btn.addEventListener('mouseout', () => {
            btn.style.background = '#f5576c';
          });
        });

        // Evento para el bot√≥n de checkout
        const btnCheckout = document.getElementById('btnCheckout');
        if (btnCheckout) {
          btnCheckout.addEventListener('click', irAStripe);
          btnCheckout.addEventListener('mouseover', () => {
            btnCheckout.style.background = '#8a7658';
          });
          btnCheckout.addEventListener('mouseout', () => {
            btnCheckout.style.background = '#a89968';
          });
        }

        // Event listener para validar c√≥digo
        const btnValidarCodigo = document.getElementById('btnValidarCodigo');
        if (btnValidarCodigo) {
          btnValidarCodigo.addEventListener('click', validarCodigo);
          btnValidarCodigo.addEventListener('mouseover', () => {
            if (!btnValidarCodigo.disabled) {
              btnValidarCodigo.style.background = '#8a7658';
              btnValidarCodigo.style.transform = 'translateY(-2px)';
              btnValidarCodigo.style.boxShadow = '0 4px 12px rgba(168, 153, 104, 0.3)';
            }
          });
          btnValidarCodigo.addEventListener('mouseout', () => {
            if (!btnValidarCodigo.disabled) {
              btnValidarCodigo.style.background = '#a89968';
              btnValidarCodigo.style.transform = 'translateY(0)';
              btnValidarCodigo.style.boxShadow = 'none';
            }
          });
        }

        // Permitir validar con Enter
        const inputCodigo = document.getElementById('inputCodigo');
        if (inputCodigo) {
          inputCodigo.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
              validarCodigo();
            }
          });
        }

      } catch (error) {
        console.error('Error:', error);
        document.getElementById('loadingMessage').style.display = 'none';
        document.getElementById('carritoContent').innerHTML = `
          <div style="background: white; padding: 2rem; border-radius: 8px; text-align: center; border-left: 4px solid #f5576c;">
            <h2 style="color: #001a33; margin: 0 0 1rem 0;">Error</h2>
            <p style="color: #5c4a3d; margin: 0 0 1.5rem 0;">No se pudo cargar tu carrito. Por favor, intenta de nuevo.</p>
            <a href="/productos" style="
              display: inline-block;
              background: #a89968;
              color: white;
              padding: 0.75rem 2rem;
              border-radius: 4px;
              text-decoration: none;
              font-weight: 600;
            ">
              Volver a Cat√°logo
            </a>
          </div>
        `;
      }
    }

    async function eliminarItem(itemId) {
      try {
        await fetch(`/api/carrito/${itemId}`, {
          method: 'DELETE',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            user_id: localStorage.getItem('user_id')
          })
        });
        // Disparar evento para que se actualicen los productos
        window.dispatchEvent(new CustomEvent('carritoActualizado'));
      } catch (error) {
        console.error('Error eliminando item:', error);
      }
    }

    // Variables globales para el descuento
    let descuentoAplicado = 0;
    let codigoValidado = null;

    async function validarCodigo() {
      const inputCodigo = document.getElementById('inputCodigo');
      const codigo = inputCodigo.value.trim().toUpperCase();
      const statusDiv = document.getElementById('mensajeCodigoStatus');
      const userId = localStorage.getItem('user_id');

      if (!codigo) {
        statusDiv.textContent = 'Por favor ingresa un c√≥digo';
        statusDiv.style.display = 'block';
        statusDiv.style.background = '#fef3c7';
        statusDiv.style.color = '#92400e';
        statusDiv.style.borderLeft = '4px solid #f59e0b';
        return;
      }

      try {
        // Calcular subtotal actual
        const carritoItems = window.carritoItems || [];
        const subtotal = carritoItems.reduce((total, item) => total + (item.precio_unitario * item.cantidad), 0);

        // Validar c√≥digo en el servidor
        const response = await fetch('/api/codigos/validar', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'x-user-id': userId
          },
          body: JSON.stringify({
            codigo,
            monto_carrito: subtotal / 100 // Convertir a euros
          })
        });

        const data = await response.json();

        if (!data.success) {
          statusDiv.textContent = data.mensaje || 'C√≥digo inv√°lido';
          statusDiv.style.display = 'block';
          statusDiv.style.background = '#fee2e2';
          statusDiv.style.color = '#991b1b';
          statusDiv.style.borderLeft = '4px solid #ef4444';
          inputCodigo.value = '';
          descuentoAplicado = 0;
          codigoValidado = null;
          actualizarDescuentoUI();
          return;
        }

        // Aqu√≠ agregamos la verificaci√≥n de si el usuario ya us√≥ este c√≥digo
        // Consultamos si ya existe un registro de uso
        const verificarResponse = await fetch(`/api/codigos/verificar-uso?codigo_id=${data.codigo_id}&usuario_id=${userId}`, {
          headers: {
            'x-user-id': userId
          }
        });

        const verificarData = await verificarResponse.json();

        if (verificarData.yaUsado) {
          // Mostrar popup de error
          mostrarPopupError('Este c√≥digo de descuento ya ha sido utilizado');
          inputCodigo.value = '';
          statusDiv.style.display = 'none';
          return;
        }

        // Calcular descuento
        let descuento = 0;
        if (data.tipo_descuento === 'porcentaje') {
          // subtotal est√° en centimos, calcular porcentaje y convertir a euros
          const descuentoCentimos = (subtotal * data.valor) / 100;
          descuento = descuentoCentimos / 100;
        } else {
          // data.valor ya est√° en euros
          descuento = data.valor;
        }

        descuentoAplicado = descuento;
        codigoValidado = {
          id: data.codigo_id,
          codigo: codigo,
          descuento: descuento
        };

        statusDiv.textContent = `C√≥digo aplicado: ${descuento.toFixed(2)}‚Ç¨ de descuento`;
        statusDiv.style.display = 'block';
        statusDiv.style.background = '#d1fae5';
        statusDiv.style.color = '#065f46';
        statusDiv.style.borderLeft = '4px solid #10b981';

        actualizarDescuentoUI();
        inputCodigo.disabled = true;
        document.getElementById('btnValidarCodigo').disabled = true;
        document.getElementById('btnValidarCodigo').textContent = 'C√≥digo Aplicado';

      } catch (error) {
        console.error('Error:', error);
        statusDiv.textContent = 'Error al validar el c√≥digo';
        statusDiv.style.display = 'block';
        statusDiv.style.background = '#fee2e2';
        statusDiv.style.color = '#991b1b';
        statusDiv.style.borderLeft = '4px solid #ef4444';
      }
    }

    function actualizarDescuentoUI() {
      const descuentoInfo = document.getElementById('descuentoInfo');
      const descuentoAmount = document.getElementById('descuentoAmount');
      const totalDisplay = document.getElementById('totalDisplay');

      if (descuentoAplicado > 0) {
        descuentoInfo.style.display = 'block';
        descuentoAmount.textContent = `-${descuentoAplicado.toFixed(2)}‚Ç¨`;

        // Obtener valores actuales
        const carritoItems = window.carritoItems || [];
        const subtotal = carritoItems.reduce((total, item) => total + (item.precio_unitario * item.cantidad), 0);
        const envio = 500; // 5‚Ç¨ en centimos
        const totalConDescuento = (subtotal + envio) / 100 - descuentoAplicado;

        totalDisplay.textContent = `${totalConDescuento.toFixed(2)}‚Ç¨`;
      } else {
        descuentoInfo.style.display = 'none';
        
        // Restaurar total original
        const carritoItems = window.carritoItems || [];
        const subtotal = carritoItems.reduce((total, item) => total + (item.precio_unitario * item.cantidad), 0);
        const envio = 500;
        const total = (subtotal + envio) / 100;
        
        totalDisplay.textContent = `${total.toFixed(2)}‚Ç¨`;
      }
    }

    function mostrarPopupError(mensaje) {
      const popup = document.createElement('div');
      popup.style.cssText = `
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        z-index: 3000;
        max-width: 500px;
        text-align: center;
      `;

      popup.innerHTML = `
        <div style="
          font-size: 3rem;
          color: #ef4444;
          margin-bottom: 1rem;
        ">!</div>
        <h3 style="color: #001a33; margin: 0 0 0.5rem 0; font-size: 1.3rem;">${mensaje}</h3>
        <p style="color: #5c4a3d; margin: 0 0 1.5rem 0;">Este c√≥digo ya ha sido canjeado por tu cuenta.</p>
        <button id="btnCerrarPopup" style="
          background: #a89968;
          color: white;
          border: none;
          padding: 0.75rem 2rem;
          border-radius: 6px;
          font-weight: 600;
          cursor: pointer;
          font-size: 1rem;
        ">
          Entendido
        </button>
      `;

      document.body.appendChild(popup);

      // Crear overlay
      const overlay = document.createElement('div');
      overlay.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        z-index: 2999;
      `;
      document.body.appendChild(overlay);

      document.getElementById('btnCerrarPopup').addEventListener('click', () => {
        popup.remove();
        overlay.remove();
      });

      overlay.addEventListener('click', () => {
        popup.remove();
        overlay.remove();
      });
    }

    async function irAStripe() {
      try {
        const userId = localStorage.getItem('user_id');
        if (!userId) {
          alert('Por favor inicia sesi√≥n primero');
          window.location.href = '/login';
          return;
        }

        // Obtener los items del carrito
        const response = await fetch('/api/carrito', {
          credentials: 'include',
          headers: { 'x-user-id': userId }
        });

        const data = await response.json();
        const items = data.items || [];

        if (!items || items.length === 0) {
          // Silenciosamente no hacer nada si el carrito est√° vac√≠o
          return;
        }

        // Formatear items para Stripe
        const cartItems = items.map(item => ({
          nombre: item.productos?.nombre,
          imagen: item.productos?.imagen,
          precio: item.precio_unitario,
          cantidad: item.cantidad,
          peso_kg: item.peso_kg
        }));

        // Crear sesi√≥n de pago con c√≥digo si existe
        const checkoutResponse = await fetch('/api/checkout/create-session', {
          method: 'POST',
          credentials: 'include',
          headers: {
            'Content-Type': 'application/json',
            'x-user-id': userId
          },
          body: JSON.stringify({ 
            cartItems,
            codigoDescuento: codigoValidado ? codigoValidado.codigo : null,
            descuentoAplicado: descuentoAplicado
          })
        });

        const checkoutData = await checkoutResponse.json();

        if (checkoutData.error) {
          alert('Error: ' + checkoutData.error);
          return;
        }

        // Redirigir a Stripe
        if (checkoutData.url) {
          window.location.href = checkoutData.url;
        }

      } catch (error) {
        console.error('Error en Stripe:', error);
        alert('Error al procesar el pago. Por favor intenta de nuevo.');
      }
    }

    // Asignar evento al bot√≥n de checkout
    const btnCheckoutGlobal = document.getElementById('btnCheckout');
    if (btnCheckoutGlobal) {
      btnCheckoutGlobal.addEventListener('click', irAStripe);
    }

    // Funci√≥n para actualizar contadores de expiraci√≥n (CONTADOR GLOBAL)
    function actualizarContadores() {
      if (!window.carritoItems || window.carritoItems.length === 0) return;

      // Encontrar el item m√°s reciente
      let itemMasReciente = window.carritoItems[0];
      for (const item of window.carritoItems) {
        const fecha1 = new Date(item.fecha_agregado);
        const fecha2 = new Date(itemMasReciente.fecha_agregado);
        if (fecha1 > fecha2) {
          itemMasReciente = item;
        }
      }

      // Calcular tiempo restante basado en el item m√°s reciente
      const ahora = new Date();
      const fechaAgregado = new Date(itemMasReciente.fecha_agregado);
      const tiempoExpiracion = fechaAgregado.getTime() + (15 * 60 * 1000); // 15 minutos
      const diff = tiempoExpiracion - ahora.getTime();

      // Actualizar el countdown global con el tiempo del item m√°s reciente
      const countdownGlobal = document.getElementById('countdownGlobal');
      if (countdownGlobal) {
        if (diff <= 0) {
          countdownGlobal.textContent = '‚ö†Ô∏è EXPIRADO';
          countdownGlobal.style.color = '#dc2626';
          // Redirigir al inicio cuando expire
          window.location.href = '/';
        } else {
          const minutos = Math.floor(diff / (1000 * 60));
          const segundos = Math.floor((diff % (1000 * 60)) / 1000);
          countdownGlobal.textContent = `${minutos}:${segundos.toString().padStart(2, '0')}`;
          
          if (diff < 60000) { // Menos de 1 minuto
            countdownGlobal.style.color = '#dc2626';
          } else {
            countdownGlobal.style.color = '#d97706';
          }
        }
      }
    }

    // Actualizar contadores cada segundo
    actualizarContadores();
    setInterval(actualizarContadores, 1000);

    cargarCarrito();
    
    // Listener para cuando se actualice el contador (se dispara cuando el carrito cambia)
    document.addEventListener('carritoActualizado', () => {
      console.log('üîÑ Carrito actualizado, reiniciando contadores');
      setTimeout(() => {
        actualizarContadores();
      }, 500);
