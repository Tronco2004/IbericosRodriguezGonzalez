    async function procesarCheckout(userId, datosInvitado) {
      try {
        let items = [];

        if (userId) {
          // Usuario logueado: obtener del API
          const response = await fetch('/api/carrito', {
            credentials: 'include',
            headers: { 'x-user-id': userId }
          });
          const data = await response.json();
          items = data.items || [];
        } else {
          // Invitado: obtener del localStorage
          items = getCarritoLocal();
