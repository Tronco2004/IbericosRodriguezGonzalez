        // Guardar datos temporales para despu√©s del pago
        if (datosInvitado) {
          localStorage.setItem('checkout_invitado', JSON.stringify({
            ...datosInvitado,
            cartItems,
            codigoDescuento: codigoValidado ? codigoValidado.codigo : null,
            descuentoAplicado
          }));
        }

        // Redirigir a Stripe
        if (checkoutData.url) {
          window.location.href = checkoutData.url;
        }

      } catch (error) {
        console.error('Error en checkout:', error);
        alert('Error al procesar el pago. Por favor intenta de nuevo.');
