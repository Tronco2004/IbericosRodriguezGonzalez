      </div>

      <!-- Separador -->
      <div class="separator">
        <div class="separator-line"></div>
        <span class="separator-text">o</span>
        <div class="separator-line"></div>
      </div>

      <!-- Formulario de Email/Contrase√±a -->
      <form id="loginForm" class="login-form">
        <div class="form-group">
          <label class="form-label">Email</label>
          <input 
            type="email" 
            name="email" 
            required 
            placeholder="tu@email.com"
            class="form-input"
          />
        </div>

        <div class="form-group" style="margin-bottom: 2rem;">
          <label class="form-label">Contrase√±a</label>
          <input 
            type="password" 
            name="password" 
            required 
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            class="form-input"
          />
        </div>

        <button type="submit" class="submit-btn">
          Iniciar Sesi√≥n
        </button>
      </form>

      <!-- Enlace para registro -->
      <div class="register-box">
        <p class="register-text">¬øNo tienes cuenta?</p>
        <a href="/registro" class="register-link">
          Crear nueva cuenta
        </a>
      </div>

      <div id="errorMessage" class="error-message"></div>
      <div id="expiredMessage" style="display: none; background: #fff3cd; border: 1px solid #ffc107; border-radius: 8px; padding: 1rem; margin-bottom: 1rem; color: #856404; font-size: 0.9rem; text-align: center;">
        ‚è∞ Tu sesi√≥n ha expirado por inactividad. Por favor, inicia sesi√≥n de nuevo.
      </div>
      <div id="loadingMessage" class="loading-text">Verificando credenciales...</div>

      <div class="info-box">
        <p class="info-text">
          <strong>üí° Nota:</strong> Puedes usar email/contrase√±a o cualquiera de los proveedores de autenticaci√≥n social. Tu informaci√≥n est√° protegida.
        </p>
      </div>
    </div>
  </div>

  <script>
    const googleBtn = document.getElementById('googleBtn');
    const appleBtn = document.getElementById('appleBtn');
    const facebookBtn = document.getElementById('facebookBtn');
    const errorMessage = document.getElementById('errorMessage');
    const loadingMessage = document.getElementById('loadingMessage');

    async function handleSocialLogin(provider) {
      try {
        loadingMessage.style.display = 'block';
        errorMessage.style.display = 'none';

        // Llamar al endpoint de login social
        const response = await fetch('/api/auth/social-login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            provider,
            redirectTo: new URLSearchParams(window.location.search).get('redirect') || '/'
          })
        });

        const data = await response.json();
        
        if (data.success && data.url) {
          // Redirigir a Supabase Auth
          window.location.href = data.url;
        } else {
          throw new Error(data.error || 'Error al iniciar sesi√≥n');
        }
      } catch (error) {
        loadingMessage.style.display = 'none';
        errorMessage.style.display = 'block';
        errorMessage.textContent = '' + (error instanceof Error ? error.message : 'Error desconocido');
      }
    }

    googleBtn.addEventListener('click', () => handleSocialLogin('google'));
    appleBtn.addEventListener('click', () => handleSocialLogin('apple'));
    facebookBtn.addEventListener('click', () => handleSocialLogin('facebook'));

    // Mostrar mensaje de sesi√≥n expirada si viene de cierre autom√°tico
    if (new URLSearchParams(window.location.search).get('expired') === '1') {
      const expMsg = document.getElementById('expiredMessage');
      if (expMsg) expMsg.style.display = 'block';
    }
  </script>
