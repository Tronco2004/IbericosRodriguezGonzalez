    <div class="login-container">
      <div class="login-header">
        <h1 class="login-title">Iniciar Sesi√≥n</h1>
        <p class="login-subtitle">Accede a tu cuenta de Ib√©ricos RG</p>
      </div>

      <!-- Botones de Login Social -->
      <div class="social-buttons">
        <!-- Bot√≥n Google -->
