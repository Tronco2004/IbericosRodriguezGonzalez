---
import Layout from '../../layouts/Layout.astro';

const productos = {
  '1': { nombre: "Jam√≥n Ib√©rico Reserva", precio: 9999, categoria: "jamones", imagen: "https://images.unsplash.com/photo-1565299585323-38d6b0865b47?w=800&h=800&fit=crop", rating: 4.9, descripcion: "Jam√≥n ib√©rico de bellota, curado durante 48 meses en las bodegas de las mejores dehesas. Sabor intenso y aroma incomparable." },
  '2': { nombre: "Queso Manchego Premium", precio: 2200, categoria: "quesos", imagen: "https://images.unsplash.com/photo-1452195463300-e83e0a2a7a25?w=800&h=800&fit=crop", rating: 4.8, descripcion: "Queso Manchego elaborado con leche de oveja manchega. Textura cremosa y sabor equilibrado con notas de nuez." },
  '3': { nombre: "Chorizo de Bellota", precio: 1800, categoria: "embutidos", imagen: "https://images.unsplash.com/photo-1557803104268-0ef0f060e15f?w=800&h=800&fit=crop", rating: 4.7, descripcion: "Chorizo elaborado con carnes de cerdo ib√©rico de bellota. Curado lentamente para desarrollar un sabor profundo y complejo." }
};

export function getStaticPaths() {
  return [
    { params: { id: '1' } },
    { params: { id: '2' } },
    { params: { id: '3' } }
  ];
}

const { id } = Astro.params;
const producto = productos[id as string];
---

<Layout>
  {producto ? (
    <div>
      <a href="/productos" style="
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #a89968;
        text-decoration: none;
        font-weight: 600;
        margin-bottom: 2rem;
        transition: all 0.3s;
      " onmouseover="this.style.transform='translateX(-4px)'" onmouseout="this.style.transform='translateX(0)'">
        ‚Üê Volver al cat√°logo
      </a>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start;">
        {/* Galer√≠a */}
        <div>
          <div style="
            position: relative;
            background: linear-gradient(135deg, #f8f7f4 0%, #e8e6e0 100%);
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
          ">
            <img src={producto.imagen} alt={producto.nombre} style="
              width: 100%;
              height: 100%;
              object-fit: cover;
              transition: transform 0.4s;
            " onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'" />
          </div>
        </div>

        {/* Detalles */}
        <div>
          <span style="color: #a89968; font-size: 0.85rem; text-transform: uppercase; font-weight: 700; letter-spacing: 1px;">{producto.categoria}</span>
          <h1 style="font-size: 2.5rem; margin: 0.5rem 0 1rem 0; color: #001a33;">{producto.nombre}</h1>
          
          {/* Rating */}
          <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1.5rem;">
            <span style="color: #a89968; font-size: 1.1rem;">‚òÖ {producto.rating}</span>
            <span style="opacity: 0.6;">(47 rese√±as)</span>
          </div>

          {/* Precio */}
          <p style="font-size: 2.2rem; color: #001a33; font-weight: 700; margin-bottom: 2rem;">‚Ç¨{(producto.precio / 100).toFixed(2)}</p>

          {/* Descripci√≥n */}
          <p style="font-size: 1.05rem; line-height: 1.7; opacity: 0.85; margin-bottom: 2rem;">{producto.descripcion}</p>

          {/* Selectors */}
          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
            <div>
              <label style="display: block; font-weight: 600; font-size: 0.9rem; margin-bottom: 0.5rem; color: #001a33;">Tama√±o</label>
              <select style="
                width: 100%;
                padding: 0.6rem;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 0.95rem;
                background: #fff;
                cursor: pointer;
              ">
                <option>200g - Est√°ndar</option>
                <option>500g - Econ√≥mico</option>
                <option>1kg - Familiar</option>
              </select>
            </div>
            <div>
              <label style="display: block; font-weight: 600; font-size: 0.9rem; margin-bottom: 0.5rem; color: #001a33;">Cantidad</label>
              <input type="number" min="1" max="10" value="1" style="
                width: 100%;
                padding: 0.6rem;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 0.95rem;
                text-align: center;
              " />
            </div>
          </div>

          {/* CTA Button */}
          <button style="
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #001a33, #2d2d2d);
            color: #f8f7f4;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
          " onmouseover="this.style.boxShadow='0 8px 24px rgba(0, 26, 51, 0.2)'" onmouseout="this.style.boxShadow='0 4px 12px rgba(0, 26, 51, 0.1)'">
            A√±adir al Carrito
          </button>

          {/* Info banner */}
          <div style="
            background: #f8f7f4;
            border-left: 4px solid #a89968;
            padding: 1rem;
            margin-top: 2rem;
            border-radius: 4px;
          ">
            <p style="margin: 0; font-size: 0.9rem; font-weight: 600; color: #001a33;">üì¶ Env√≠o gratis en pedidos mayores a ‚Ç¨30</p>
            <p style="margin: 0.5rem 0 0 0; font-size: 0.85rem; opacity: 0.7;">Entrega en 2-3 d√≠as laborales en tu hogar</p>
          </div>
        </div>
      </div>
    </div>
  ) : (
    <div style="text-align: center; padding: 3rem;">
      <h2 style="color: #001a33; margin-bottom: 1rem;">Producto no encontrado</h2>
      <a href="/productos" style="color: #a89968; font-weight: 600;">Volver al cat√°logo</a>
    </div>
  )}
</Layout>
