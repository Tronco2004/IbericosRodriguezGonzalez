---
import Layout from '../../layouts/Layout.astro';

// Los productos se cargarán dinámicamente desde Supabase con JavaScript
---

<Layout>
  <div style="text-align: center; margin-bottom: 4rem; padding: 2rem 0;">
    <span style="color: #a89968; font-size: 0.75rem; font-weight: 800; text-transform: uppercase; letter-spacing: 3px; display: inline-block; padding: 0.5rem 1.5rem; background: rgba(168, 153, 104, 0.08); border-radius: 50px; margin-bottom: 1rem;">CATÁLOGO COMPLETO</span>
    <h1 style="font-size: 3.5rem; margin: 1rem 0 0.8rem 0; color: #001a33; font-weight: 800; letter-spacing: -1px;">Todos los Productos</h1>
    <div style="width: 80px; height: 3px; background: linear-gradient(90deg, #a89968, #d4a574); margin: 1.5rem auto; border-radius: 10px;"></div>
    <p style="opacity: 0.6; font-size: 1.1rem; max-width: 700px; margin: 1.5rem auto 0; font-weight: 500; letter-spacing: 0.3px;">Descubre nuestra colección completa de productos ibéricos premium</p>
  </div>
  
  <div id="productosGrid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem; margin-top: 3rem; padding: 0 1rem; max-width: 100%;">
    <!-- Cargará con JavaScript -->
  </div>

  <style>
    article {
      background: white;
      border-radius: 0;
      overflow: hidden;
      box-shadow: none;
      transition: opacity 0.3s ease;
      cursor: pointer;
      display: flex;
      flex-direction: column;
    }

    article:hover {
      opacity: 0.8;
    }

    .product-image-wrapper {
      display: none;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    article:hover img {
      transform: scale(1.02);
    }

    .product-info {
      padding: 1rem 0;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .product-header {
      display: none;
    }

    .product-rating {
      display: none;
    }

    .product-name {
      font-size: 0.9rem;
      font-weight: 500;
      color: #333;
      margin: 0.5rem 0 0 0;
      line-height: 1.3;
      order: 3;
    }

    .product-description {
      display: none;
    }

    .product-footer {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      padding: 0;
      margin: 0;
      border-top: none;
      gap: 0.6rem;
      order: 2;
    }

    .product-price {
      font-size: 0.95rem;
      font-weight: 700;
      color: #d4495a;
    }

    .product-price-original {
      font-size: 0.8rem;
      font-weight: 500;
      color: #333;
      text-decoration: line-through;
    }

    .btn-comprar {
      display: none;
    }

    @media (max-width: 1200px) {
      #productosGrid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 768px) {
      #productosGrid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      .product-image-wrapper {
        height: 250px;
      }
    }

    @media (max-width: 640px) {
      #productosGrid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .product-image-wrapper {
        height: 300px;
      }
    }
  </style>

  <script>
    // Cargar productos desde Supabase
    async function cargarProductos() {
      try {
        const response = await fetch('/api/admin/productos');
        const data = await response.json();
        
        let productos = [];
        
        if (data.success && data.productos && data.productos.length > 0) {
          // Convertir productos de Supabase al formato esperado
          productos = data.productos.map((p) => ({
            id: p.id,
            nombre: p.nombre,
            precio: (p.precio_centimos / 100).toFixed(2),
            categoria: p.categorias?.slug || 'desconocida',
            imagen: p.imagen_url || 'https://images.unsplash.com/photo-1557803104268-0ef0f060e15f?w=500&h=500&fit=crop',
            descripcion: p.descripcion || 'Sin descripción',
            rating: p.rating || 4.8
          }));
        }

        const grid = document.getElementById('productosGrid');
        if (productos.length === 0) {
          grid.innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 4rem 2rem;"><p style="opacity: 0.6; font-size: 1.1rem; margin: 0;">No hay productos disponibles</p></div>';
          return;
        }

        grid.innerHTML = productos.map((p) => `
          <article data-id="${p.id}">
            <div class="product-image-wrapper">
              <img src="${p.imagen}" alt="${p.nombre}" loading="lazy" />
            </div>
            <div class="product-info">
              <div class="product-footer">
                <span class="product-price-original">Antes €${(p.precio * 1.2).toFixed(2)}</span>
                <span class="product-price">€${p.precio}</span>
              </div>
              <h3 class="product-name">${p.nombre}</h3>
              <button class="btn-agregar-carrito" data-id="${p.id}" style="
                width: 100%;
                margin-top: 0.75rem;
                background: #a89968;
                color: white;
                border: none;
                padding: 0.6rem;
                border-radius: 4px;
                font-weight: 600;
                cursor: pointer;
                transition: background 0.3s;
                font-size: 0.85rem;
              ">
                Agregar al Carrito
              </button>
            </div>
          </article>
        `).join('');

        // Agregar event listeners a los botones
        document.querySelectorAll('.btn-agregar-carrito').forEach(btn => {
          btn.addEventListener('click', async (e) => {
            e.stopPropagation();
            const productoId = btn.getAttribute('data-id');
            await agregarAlCarrito(productoId, 1);
          });

          btn.addEventListener('mouseover', () => {
            btn.style.background = '#9a8560';
          });

          btn.addEventListener('mouseout', () => {
            btn.style.background = '#a89968';
          });
        });
      } catch (error) {
        console.error('Error cargando productos:', error);
        const grid = document.getElementById('productosGrid');
        grid.innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 4rem 2rem;"><p style="color: #999;">Error al cargar los productos</p></div>';
      }
    }

    async function agregarAlCarrito(productoId: string, cantidad: number = 1) {
      try {
        // Obtener user_id del localStorage
        const userId = localStorage.getItem('user_id');
        if (!userId) {
          alert('Por favor, inicia sesión para agregar productos al carrito');
          window.location.href = '/login';
          return;
        }

        const response = await fetch('/api/carrito', {
          method: 'POST',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            producto_id: parseInt(productoId), 
            cantidad,
            user_id: userId
          })
        });

        if (!response.ok) {
          if (response.status === 401) {
            alert('Por favor, inicia sesión para agregar productos al carrito');
            window.location.href = '/login';
            return;
          }
          throw new Error('Error agregando al carrito');
        }

        const result = await response.json();
        if (result.success) {
          alert('Producto agregado al carrito');
          // Actualizar contador del carrito si existe
          actualizarContadorCarrito();
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al agregar el producto al carrito');
      }
    }

    function actualizarContadorCarrito() {
      // Esta función se puede llamar cuando el contador del navbar esté implementado
      const evento = new CustomEvent('carritoActualizado');
      document.dispatchEvent(evento);
    }

    // Cargar al iniciar
    cargarProductos();
  </script>
</Layout>
