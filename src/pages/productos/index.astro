              button.style.color = '#888';
              button.style.boxShadow = 'none';
            } else {
              button.style.background = 'linear-gradient(135deg, #a89968 0%, #9a8a5c 100%)';
              button.style.color = '#fff';
              button.style.boxShadow = '0 4px 12px rgba(168, 153, 104, 0.3)';
