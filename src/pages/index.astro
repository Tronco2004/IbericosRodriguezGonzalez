import Layout from '../layouts/Layout.astro';
import { supabaseClient } from '../lib/supabase';

// Cargar ofertas en el servidor para evitar llamadas bloqueantes en el cliente
const ahora = new Date().toISOString();
const { data: ofertasData } = await supabaseClient
  .from('ofertas')
  .select(`
    id,
    porcentaje_descuento,
    fecha_inicio,
    fecha_fin,
    activa,
    nombre_oferta,
    productos(id, nombre)
  `)
  .eq('activa', true)
  .lte('fecha_inicio', ahora)
  .gte('fecha_fin', ahora)
  .order('fecha_fin', { ascending: true })
  .limit(20);

const ofertas = ofertasData || [];
const totalOfertas = ofertas.length;

// Encontrar la oferta m√°s urgente (la que expira primero)
const ofertaUrgente = ofertas.find(o => o.fecha_fin) || null;

const productos = [
  {
    id: 1,
    nombre: "Jam√≥n Ib√©rico Reserva",
    precio: 9999,
    imagen: "https://images.unsplash.com/photo-1565299585323-38d6b0865b47?w=500&h=500&fit=crop",
    categoria: "jamones",
    descripcion: "Jam√≥n ib√©rico de bellota curado 48 meses",
    rating: 4.9
  },
  {
    id: 2,
    nombre: "Queso Manchego Premium",
    precio: 2200,
    imagen: "https://images.unsplash.com/photo-1452195463300-e83e0a2a7a25?w=500&h=500&fit=crop",
    categoria: "quesos",
    descripcion: "Queso artesanal de oveja manchega",
    rating: 4.8
  },
  {
    id: 3,
    nombre: "Chorizo de Bellota",
    precio: 1800,
    imagen: "https://images.unsplash.com/photo-1557803104268-0ef0f060e15f?w=500&h=500&fit=crop",
    categoria: "embutidos",
    descripcion: "Chorizo ib√©rico con piment√≥n de la Vera",
    rating: 4.7
  }
];
