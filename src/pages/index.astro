  <script>
    // ===== BANNER DE URGENCIA CON TEMPORIZADOR =====
    let timerInterval = null;
    
    function iniciarBannerUrgencia() {
      const banner = document.getElementById('urgencyBanner');
      if (!banner) return;
      
      // Verificar si fue cerrado en esta sesi√≥n
      if (sessionStorage.getItem('urgencyBannerClosed')) {
        banner.style.display = 'none';
        return;
      }
      
      const fechaFinStr = banner.dataset.fechaFin;
      if (!fechaFinStr) return;
      
      const fechaFin = new Date(fechaFinStr);
      
      // Si la oferta ya expir√≥, ocultar el banner
      if (fechaFin <= new Date()) {
        banner.style.display = 'none';
        return;
      }
      
      // Iniciar el temporizador
      actualizarTemporizador(fechaFin);
      timerInterval = setInterval(() => actualizarTemporizador(fechaFin), 1000);
    }
    
    function actualizarTemporizador(fechaFin) {
      const ahora = new Date();
      const diferencia = fechaFin - ahora;
      
      if (diferencia <= 0) {
        // La oferta ha expirado
        clearInterval(timerInterval);
        const banner = document.getElementById('urgencyBanner');
        if (banner) banner.style.display = 'none';
        return;
      }
      
      const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
      const horas = Math.floor((diferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutos = Math.floor((diferencia % (1000 * 60 * 60)) / (1000 * 60));
      const segundos = Math.floor((diferencia % (1000 * 60)) / 1000);
      
      const timerDays = document.getElementById('timerDays');
      const timerHours = document.getElementById('timerHours');
      const timerMinutes = document.getElementById('timerMinutes');
      const timerSeconds = document.getElementById('timerSeconds');
      
      if (timerDays) timerDays.textContent = dias.toString().padStart(2, '0');
      if (timerHours) timerHours.textContent = horas.toString().padStart(2, '0');
      if (timerMinutes) timerMinutes.textContent = minutos.toString().padStart(2, '0');
      if (timerSeconds) timerSeconds.textContent = segundos.toString().padStart(2, '0');
    }
    
    // Cerrar el banner
    document.getElementById('urgencyClose')?.addEventListener('click', () => {
      const banner = document.getElementById('urgencyBanner');
      if (banner) banner.style.display = 'none';
      clearInterval(timerInterval);
      sessionStorage.setItem('urgencyBannerClosed', 'true');
    });
    
    // Iniciar el temporizador al cargar la p√°gina
    iniciarBannerUrgencia();
  </script>

