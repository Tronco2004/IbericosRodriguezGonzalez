---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <style>
    .contact-page {
      max-width: 800px;
      margin: 4rem auto;
      padding: 0 2rem;
    }
    .contact-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    .contact-title {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, var(--text-primary), var(--color-accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .contact-subtitle {
      color: var(--text-muted);
      font-size: 1.1rem;
    }
    .contact-form {
      background: var(--bg-tertiary);
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 6px var(--shadow-color);
    }
    .form-group {
      margin-bottom: 1.5rem;
    }
    .form-label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: var(--text-primary);
    }
    .form-label span {
      color: var(--color-accent);
    }
    .form-input {
      width: 100%;
      padding: 0.75rem;
      border: 2px solid var(--border-color);
      border-radius: 6px;
      font-size: 1rem;
      font-family: 'Inter', sans-serif;
      box-sizing: border-box;
      transition: border-color 0.3s;
      background: var(--bg-input);
      color: var(--text-primary);
    }
    .form-input::placeholder {
      color: var(--text-muted);
    }
    .form-input:focus {
      outline: none;
      border-color: var(--color-accent);
    }
    .form-textarea {
      width: 100%;
      padding: 0.75rem;
      border: 2px solid var(--border-color);
      border-radius: 6px;
      font-size: 1rem;
      font-family: 'Inter', sans-serif;
      box-sizing: border-box;
      resize: vertical;
      min-height: 150px;
      transition: border-color 0.3s;
      background: var(--bg-input);
      color: var(--text-primary);
    }
    .form-textarea::placeholder {
      color: var(--text-muted);
    }
    .form-textarea:focus {
      outline: none;
      border-color: var(--color-accent);
    }
    .submit-btn {
      width: 100%;
      padding: 1rem;
      background: var(--gradient-cta);
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px var(--shadow-medium);
    }
    .form-message {
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 6px;
      display: none;
      text-align: center;
      font-weight: 600;
    }
    .contact-info {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 2px solid var(--border-color);
    }
    .contact-info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }
    .contact-info-item {
      text-align: center;
    }
    .contact-info-title {
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }
    .contact-info-text {
      color: var(--text-muted);
    }
  </style>

  <div class="contact-page">
    <!-- Header -->
    <div class="contact-header">
      <h1 class="contact-title">Contáctanos</h1>
      <p class="contact-subtitle">
        ¿Tienes dudas o sugerencias? Nos gustaría saber de ti. Completa el formulario y nos pondremos en contacto pronto.
      </p>
    </div>

    <!-- Formulario -->
    <form id="contactForm" class="contact-form">
      <div class="form-group">
        <label for="email" class="form-label">
          Email <span>*</span>
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          placeholder="tu@email.com"
          class="form-input"
        >
      </div>

      <div class="form-group">
        <label for="asunto" class="form-label">
          Asunto <span>*</span>
        </label>
        <input 
          type="text" 
          id="asunto" 
          name="asunto" 
          required
          placeholder="¿Cuál es el tema de tu consulta?"
          class="form-input"
        >
      </div>

      <div class="form-group">
        <label for="mensaje" class="form-label">
          Mensaje <span>*</span>
        </label>
        <textarea 
          id="mensaje" 
          name="mensaje" 
          required
          rows="6"
          placeholder="Cuéntanos en detalle..."
          class="form-textarea"
        ></textarea>
      </div>

      <button type="submit" id="submitBtn" class="submit-btn">
        Enviar Mensaje
      </button>

      <!-- Mensaje de respuesta -->
      <div id="formMessage" class="form-message"></div>
    </form>

    <!-- Info de contacto adicional -->
    <div class="contact-info">
      <div class="contact-info-grid">
        <div class="contact-info-item">
          <h3 class="contact-info-title">Email</h3>
          <p class="contact-info-text">contacto@ibericorg.es</p>
        </div>
        <div class="contact-info-item">
          <h3 class="contact-info-title">Teléfono</h3>
          <p class="contact-info-text">+34 XXX XX XX XX</p>
        </div>
        <div class="contact-info-item">
          <h3 class="contact-info-title">Horario</h3>
          <p class="contact-info-text">L-V: 9:00 - 18:00 CET</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    const contactForm = document.getElementById('contactForm');
    const formMessage = document.getElementById('formMessage');
    const submitBtn = document.getElementById('submitBtn');

    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = document.getElementById('email').value.trim();
      const asunto = document.getElementById('asunto').value.trim();
      const mensaje = document.getElementById('mensaje').value.trim();

      if (!email || !asunto || !mensaje) {
        formMessage.textContent = '⚠️ Por favor completa todos los campos';
        formMessage.style.background = '#fef3c7';
        formMessage.style.color = '#92400e';
        formMessage.style.display = 'block';
        return;
      }

      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';
      formMessage.style.display = 'none';

      try {
        const res = await fetch('/api/contacto', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, asunto, mensaje })
        });

        const data = await res.json();

        if (data.success) {
          formMessage.textContent = '✓ ¡Mensaje enviado correctamente! Nos pondremos en contacto pronto.';
          formMessage.style.background = '#d1fae5';
          formMessage.style.color = '#065f46';
          contactForm.reset();
        } else {
          formMessage.textContent = `❌ ${data.error || 'Error al enviar el mensaje'}`;
          formMessage.style.background = '#fee2e2';
          formMessage.style.color = '#991b1b';
        }
      } catch (err) {
        formMessage.textContent = '❌ Error de conexión. Por favor intenta más tarde.';
        formMessage.style.background = '#fee2e2';
        formMessage.style.color = '#991b1b';
      }

      formMessage.style.display = 'block';
      submitBtn.disabled = false;
      submitBtn.textContent = 'Enviar Mensaje';
    });
  </script>
</Layout>
