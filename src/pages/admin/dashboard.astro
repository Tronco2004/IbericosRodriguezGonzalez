        " onmouseover="this.style.boxShadow='0 12px 24px rgba(0, 0, 0, 0.08)'; this.style.transform='translateY(-2px)'; this.style.borderColor='#cbd5e1'" onmouseout="this.style.boxShadow='0 2px 8px rgba(0, 0, 0, 0.04)'; this.style.transform='translateY(0)'; this.style.borderColor='#e2e8f0'">
          <div style="position: absolute; top: 0; right: 0; width: 120px; height: 120px; background: linear-gradient(135deg, #001a33 0%, #2d2d2d 100%); border-radius: 50%; opacity: 0.05; transform: translate(40%, -40%);"></div>
          <div style="position: relative; z-index: 1;">
            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1.5rem;">
              <div>
                <p style="color: #94a3b8; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin: 0;">Clientes Activos</p>
              </div>
              <div style="font-size: 1.8rem;"></div>
            </div>
            <div style="font-size: 2.5rem; font-weight: 800; color: #0f172a; margin-bottom: 0.5rem;" id="clientesCount">0</div>
            <p style="color: #94a3b8; font-size: 0.9rem; margin: 0;">Conectados ahora</p>
          </div>
        </div>

        <!-- KPI Card 4 -->
        <div style="
          background: white;
          border-radius: 16px;
          padding: 2rem;
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
          border: 1px solid #e2e8f0;
          transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
          position: relative;
          overflow: hidden;
        " onmouseover="this.style.boxShadow='0 12px 24px rgba(0, 0, 0, 0.08)'; this.style.transform='translateY(-2px)'; this.style.borderColor='#cbd5e1'" onmouseout="this.style.boxShadow='0 2px 8px rgba(0, 0, 0, 0.04)'; this.style.transform='translateY(0)'; this.style.borderColor='#e2e8f0'">
          <div style="position: absolute; top: 0; right: 0; width: 120px; height: 120px; background: linear-gradient(135deg, #a89968 0%, #c4956f 100%); border-radius: 50%; opacity: 0.05; transform: translate(40%, -40%);"></div>
          <div style="position: relative; z-index: 1;">
            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1.5rem;">
              <div>
                <p style="color: #94a3b8; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin: 0;">Ingresos</p>
              </div>
              <div style="font-size: 1.8rem;"></div>
            </div>
            <div style="font-size: 2.5rem; font-weight: 800; color: #0f172a; margin-bottom: 0.5rem;" id="ingresosCount">€0</div>
            <p style="color: #94a3b8; font-size: 0.9rem; margin: 0;">Este mes</p>
          </div>
        </div>
      </div>

      <!-- Charts Section - Elegant Design -->
      <div style="margin-top: 3rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(500px, 1fr)); gap: 2rem;">
        <!-- Ingresos Chart -->
        <div style="
          background: white;
          border-radius: 16px;
          padding: 2rem;
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
          border: 1px solid #e2e8f0;
          transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        " onmouseover="this.style.boxShadow='0 12px 24px rgba(0, 0, 0, 0.08)'; this.style.transform='translateY(-2px)'; this.style.borderColor='#cbd5e1'" onmouseout="this.style.boxShadow='0 2px 8px rgba(0, 0, 0, 0.04)'; this.style.transform='translateY(0)'; this.style.borderColor='#e2e8f0'">
