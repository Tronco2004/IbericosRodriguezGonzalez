      </div>
    </div>
  </div>

  <script>
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const sideMenu = document.getElementById('sideMenu');
    const closeMenuBtn = document.getElementById('closeMenuBtn');
    const menuOverlay = document.getElementById('menuOverlay');

    // Abrir menÃº
    hamburgerBtn.addEventListener('click', () => {
      sideMenu.style.right = '0';
      menuOverlay.style.display = 'block';
      menuOverlay.style.pointerEvents = 'auto';
      menuOverlay.style.background = 'rgba(0, 0, 0, 0.5)';
    });

    // Cerrar menÃº
    const closeMenu = () => {
      sideMenu.style.right = '-350px';
      menuOverlay.style.background = 'rgba(0, 0, 0, 0)';
      menuOverlay.style.pointerEvents = 'none';
    };

    closeMenuBtn.addEventListener('click', closeMenu);
    menuOverlay.addEventListener('click', closeMenu);

    // Cerrar menÃº al hacer clic en un enlace
    sideMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    async function cargarEstadisticas() {
      try {
        const response = await fetch('/api/admin/dashboard-stats');
        const data = await response.json();

        if (data.success) {
          document.getElementById('clientesCount').textContent = data.clientesActivos || 0;
        }
      } catch (error) {
        console.error('Error cargando estadÃ­sticas:', error);
      }
    }

    // Cargar al iniciar la pÃ¡gina
    cargarEstadisticas();
  </script>
