  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const sideMenu = document.getElementById('sideMenu');
    const closeMenuBtn = document.getElementById('closeMenuBtn');
    const menuOverlay = document.getElementById('menuOverlay');

    // Abrir menú
    hamburgerBtn.addEventListener('click', () => {
      sideMenu.style.right = '0';
      menuOverlay.style.display = 'block';
      menuOverlay.style.pointerEvents = 'auto';
      menuOverlay.style.background = 'rgba(0, 0, 0, 0.5)';
    });

    // Cerrar menú
    const closeMenu = () => {
      sideMenu.style.right = '-350px';
      menuOverlay.style.background = 'rgba(0, 0, 0, 0)';
      menuOverlay.style.pointerEvents = 'none';
    };

    closeMenuBtn.addEventListener('click', closeMenu);
    menuOverlay.addEventListener('click', closeMenu);

    // Cerrar menú al hacer clic en un enlace
    sideMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    async function cargarEstadisticas() {
      try {
        const response = await fetch('/api/admin/dashboard-stats');
        const data = await response.json();

        if (data.success) {
          document.getElementById('clientesCount').textContent = data.clientesActivos || 0;
          document.getElementById('pedidosCount').textContent = data.pedidosPendientes || 0;
        }
      } catch (error) {
        console.error('Error cargando estadísticas:', error);
      }
    }

    // Generar datos realistas para los gráficos
    function generarDatosIngresos() {
      const dias = Array.from({ length: 30 }, (_, i) => i + 1);
      const ingresos = dias.map(() => Math.floor(Math.random() * 500) + 200);
      return { dias, ingresos };
    }

    function generarDatosPedidos() {
      const dias = Array.from({ length: 30 }, (_, i) => i + 1);
      const pedidos = dias.map(() => Math.floor(Math.random() * 15) + 3);
      return { dias, pedidos };
    }

    // Crear gráfico de ingresos
    function crearGraficoIngresos() {
      const { dias, ingresos } = generarDatosIngresos();
      const ctx = document.getElementById('ingresosChart').getContext('2d');
      
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: dias.map(d => `${d} Ene`),
          datasets: [{
            label: 'Ingresos (€)',
            data: ingresos,
            borderColor: 'rgba(102, 126, 234, 1)',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: 4,
            pointBackgroundColor: 'rgba(102, 126, 234, 1)',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            pointHoverRadius: 6,
            pointHoverBackgroundColor: 'rgba(102, 126, 234, 1)',
            hoverBackgroundColor: 'rgba(102, 126, 234, 0.2)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              labels: {
                color: '#64748b',
                font: { size: 12, weight: '600' },
                padding: 20,
                usePointStyle: true,
              }
            },
            filler: {
              propagate: true,
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(226, 232, 240, 0.5)',
                drawBorder: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
                callback: function(value) {
                  return '€' + value;
                }
              }
            },
            x: {
              grid: {
                display: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
              }
            }
          }
        }
      });

      // Calcular totales
      const totalIngresos = ingresos.reduce((a, b) => a + b, 0);
      const promedioPedidos = ingresos.length > 0 ? (totalIngresos / 20).toFixed(2) : 0;
      document.getElementById('ingresosCount').textContent = '€' + totalIngresos.toFixed(2);
      document.getElementById('ticketPromedio').textContent = '€' + promedioPedidos;
      document.getElementById('ingresosHoy').textContent = '€' + (ingresos[29] || 0).toFixed(2);
    }

    // Crear gráfico de pedidos
    function crearGraficoPedidos() {
      const { dias, pedidos } = generarDatosPedidos();
      const ctx = document.getElementById('pedidosChart').getContext('2d');
      
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: dias.map(d => `${d} Ene`),
          datasets: [{
            label: 'Cantidad de Pedidos',
            data: pedidos,
            backgroundColor: [
              'rgba(240, 147, 251, 0.8)',
              'rgba(245, 87, 108, 0.8)',
            ],
            borderColor: [
              'rgba(240, 147, 251, 1)',
              'rgba(245, 87, 108, 1)',
            ],
            borderWidth: 0,
            borderRadius: 8,
            hoverBackgroundColor: 'rgba(240, 147, 251, 1)',
            hoverBorderColor: 'rgba(240, 147, 251, 1)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          indexAxis: 'x',
          plugins: {
            legend: {
              display: true,
              labels: {
                color: '#64748b',
                font: { size: 12, weight: '600' },
                padding: 20,
                usePointStyle: true,
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(226, 232, 240, 0.5)',
                drawBorder: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
                stepSize: 5,
              }
            },
            x: {
              grid: {
                display: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
              }
            }
          }
        }
      });

      // Calcular totales
      const totalPedidos = pedidos.reduce((a, b) => a + b, 0);
      document.getElementById('pedidosCount').textContent = totalPedidos;
      document.getElementById('pedidosHoy').textContent = (pedidos[29] || 0);
      document.getElementById('crecimiento').textContent = '+' + Math.floor(Math.random() * 25 + 5) + '%';
    }

    // Cargar al iniciar la página
    window.addEventListener('load', () => {
      cargarEstadisticas();
      setTimeout(() => {
        crearGraficoIngresos();
        crearGraficoPedidos();
      }, 100);
    });
  </script>
