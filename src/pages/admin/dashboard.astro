---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
---

<ProtectedLayout requireAdmin={true}>
  <style>
    @media (max-width: 768px) {
      #sideMenu {
        width: 100% !important;
        right: -100% !important;
      }
    }
  </style>
  <div style="min-height: 100vh; background: linear-gradient(135deg, #fafbfc 0%, #f3f4f6 100%); padding: 3rem 2rem;">
    <div style="max-width: 1600px; margin: 0 auto;">
      <!-- Header Premium with Hamburger Menu -->
      <div style="margin-bottom: 2.5rem; display: flex; justify-content: space-between; align-items: flex-start;">
        <div>
          <h1 style="color: #0f172a; font-size: 3rem; margin: 0; font-weight: 900; letter-spacing: -0.5px;">Dashboard</h1>
          <p style="color: #64748b; margin: 0.5rem 0 0 0; font-size: 1.05rem; font-weight: 400;">Bienvenido al centro de control de tu tienda</p>
        </div>
        
        <!-- Hamburger Menu -->
        <div style="position: relative;">
          <button 
            id="hamburgerBtn"
            style="
              background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
              border: none;
              padding: 0.75rem 1rem;
              border-radius: 8px;
              cursor: pointer;
              transition: all 0.3s;
              box-shadow: 0 4px 12px rgba(168, 153, 104, 0.3);
              display: flex;
              flex-direction: column;
              gap: 0.35rem;
              width: 45px;
              height: 45px;
              justify-content: center;
              align-items: center;
            "
            onmouseover="this.style.boxShadow='0 8px 24px rgba(168, 153, 104, 0.4)'; this.style.transform='scale(1.05)'"
            onmouseout="this.style.boxShadow='0 4px 12px rgba(168, 153, 104, 0.3)'; this.style.transform='scale(1)'"
          >
            <span style="width: 24px; height: 2px; background: white; border-radius: 1px;"></span>
            <span style="width: 24px; height: 2px; background: white; border-radius: 1px;"></span>
            <span style="width: 24px; height: 2px; background: white; border-radius: 1px;"></span>
          </button>

          <!-- Sliding Menu Panel -->
          <div 
            id="sideMenu"
            style="
              position: fixed;
              top: 0;
              right: -350px;
              width: 350px;
              height: 100vh;
              background: white;
              box-shadow: -10px 0 40px rgba(0, 0, 0, 0.15);
              transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
              z-index: 2000;
              overflow-y: auto;
            "
          >
            <!-- Menu Header -->
            <div style="
              background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
              color: white;
              padding: 2rem 1.5rem;
              display: flex;
              justify-content: space-between;
              align-items: center;
            ">
              <h2 style="margin: 0; font-size: 1.5rem;">Menú</h2>
              <button
                id="closeMenuBtn"
                style="
                  background: rgba(255,255,255,0.2);
                  border: none;
                  color: white;
                  font-size: 1.5rem;
                  cursor: pointer;
                  width: 40px;
                  height: 40px;
                  border-radius: 6px;
                  transition: all 0.3s;
                "
                onmouseover="this.style.background='rgba(255,255,255,0.3)'"
                onmouseout="this.style.background='rgba(255,255,255,0.2)'"
              >
                ✕
              </button>
            </div>

            <!-- Menu Items -->
            <nav style="padding: 1.5rem 0;">
              <!-- Menu Item 1 -->
              <a href="/admin/productos" style="
                display: flex;
                align-items: center;
                padding: 1.25rem 1.5rem;
                text-decoration: none;
                color: #0f172a;
                border-left: 4px solid transparent;
                transition: all 0.3s;
              "
              onmouseover="this.style.backgroundColor='#f8fafc'; this.style.borderLeftColor='#a89968'; this.style.paddingLeft='2rem'"
              onmouseout="this.style.backgroundColor='transparent'; this.style.borderLeftColor='transparent'; this.style.paddingLeft='1.5rem'"
              >
                <div style="font-size: 1.5rem; margin-right: 1rem;"></div>
                <div>
                  <div style="font-weight: 700; font-size: 0.95rem;">Productos</div>
                  <div style="color: #64748b; font-size: 0.85rem; margin-top: 0.25rem;">Administra tu catálogo</div>
                </div>
              </a>

              <!-- Menu Item 2 -->
              <a href="/admin/categorias" style="
                display: flex;
                align-items: center;
                padding: 1.25rem 1.5rem;
                text-decoration: none;
