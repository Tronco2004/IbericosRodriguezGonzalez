      <div style="margin-top: 3rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1.5rem;">
        <!-- Ticket Promedio -->
        <div style="
          background: linear-gradient(135deg, rgba(168, 153, 104, 0.1) 0%, rgba(212, 165, 116, 0.1) 100%);
          border-radius: 16px;
          padding: 1.8rem;
          border: 1px solid rgba(168, 153, 104, 0.2);
          backdrop-filter: blur(10px);
        ">
          <p style="color: #64748b; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin: 0 0 0.8rem 0; letter-spacing: 0.5px;">Ticket Promedio</p>
          <div style="font-size: 2.2rem; font-weight: 800; color: #a89968; margin-bottom: 0.5rem;" id="ticketPromedio">€0</div>
          <p style="color: #94a3b8; font-size: 0.85rem; margin: 0;">Por pedido</p>
        </div>

        <!-- Pedidos Hoy -->
        <div style="
          background: linear-gradient(135deg, rgba(92, 74, 61, 0.1) 0%, rgba(139, 111, 71, 0.1) 100%);
          border-radius: 16px;
          padding: 1.8rem;
          border: 1px solid rgba(92, 74, 61, 0.2);
          backdrop-filter: blur(10px);
        ">
