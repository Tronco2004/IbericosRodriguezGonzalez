---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
---

<ProtectedLayout requireAdmin={true}>
  <style is:global>
    /* ===== ESTILOS ADMIN - MODO OSCURO/CLARO ===== */
    .admin-page {
      min-height: 100vh;
      background: var(--bg-primary);
      padding: 3rem 2rem;
      transition: background 0.3s ease;
    }

    .admin-container {
      max-width: 1600px;
      margin: 0 auto;
    }

    .admin-header {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    .admin-title {
      color: var(--text-primary);
      font-size: 3rem;
      margin: 0;
      font-weight: 900;
      letter-spacing: -0.5px;
    }

    .admin-subtitle {
      color: var(--text-muted);
      margin: 0.5rem 0 0 0;
      font-size: 1.05rem;
      font-weight: 400;
    }

    /* Hamburger Button */
    .hamburger-btn {
      background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
      border: none;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 12px rgba(168, 153, 104, 0.3);
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
      width: 45px;
      height: 45px;
      justify-content: center;
      align-items: center;
    }

    .hamburger-btn:hover {
      box-shadow: 0 8px 24px rgba(168, 153, 104, 0.4);
      transform: scale(1.05);
    }

    .hamburger-line {
      width: 24px;
      height: 2px;
      background: white;
      border-radius: 1px;
    }

    /* Side Menu */
    .side-menu {
      position: fixed;
      top: 0;
      right: -350px;
      width: 350px;
      height: 100vh;
      background: var(--bg-card);
      box-shadow: -10px 0 40px rgba(0, 0, 0, 0.15);
      transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 2000;
      overflow-y: auto;
    }

    .side-menu.open { right: 0; }

    .menu-header {
      background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
      color: white;
      padding: 2rem 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .menu-header h2 { margin: 0; font-size: 1.5rem; }

    .close-menu-btn {
      background: rgba(255,255,255,0.2);
      border: none;
      color: white;
      font-size: 1.5rem;
      cursor: pointer;
      width: 40px;
      height: 40px;
      border-radius: 6px;
      transition: all 0.3s;
    }

    .close-menu-btn:hover { background: rgba(255,255,255,0.3); }

    .menu-nav { padding: 1.5rem 0; }

    .menu-item {
      display: flex;
      align-items: center;
      padding: 1.25rem 1.5rem;
      text-decoration: none;
      color: var(--text-primary);
      border-left: 4px solid transparent;
      transition: all 0.3s;
    }

    .menu-item:hover {
      background: var(--bg-tertiary);
      border-left-color: var(--color-accent);
      padding-left: 2rem;
    }

    .menu-item-title { font-weight: 700; font-size: 0.95rem; }
    .menu-item-desc { color: var(--text-muted); font-size: 0.85rem; margin-top: 0.25rem; }

    .menu-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0);
      transition: background 0.4s;
      z-index: 1999;
      pointer-events: none;
      display: none;
    }

    .menu-overlay.active {
      background: rgba(0, 0, 0, 0.5);
      pointer-events: auto;
      display: block;
    }

    /* KPI Cards */
    .kpi-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .kpi-card {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 2px 8px var(--shadow-color);
      border: 1px solid var(--border-color);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      text-decoration: none;
      display: block;
    }

    .kpi-card:hover {
      box-shadow: 0 12px 24px var(--shadow-color);
      transform: translateY(-2px);
      border-color: var(--color-accent);
    }

    .kpi-card-bg {
      position: absolute;
      top: 0;
      right: 0;
      width: 120px;
      height: 120px;
      background: linear-gradient(135deg, var(--color-accent) 0%, #d4a574 100%);
      border-radius: 50%;
      opacity: 0.08;
      transform: translate(40%, -40%);
    }

    .kpi-card-content { position: relative; z-index: 1; }

    .kpi-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.5rem;
    }

    .kpi-label {
      color: var(--text-muted);
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin: 0;
    }

    .kpi-icon { font-size: 1.8rem; }

    .kpi-value {
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .kpi-desc { color: var(--text-muted); font-size: 0.9rem; margin: 0; }

    /* Charts */
    .charts-grid {
      margin-top: 3rem;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
      gap: 2rem;
    }

    @media (max-width: 1100px) {
      .charts-grid { grid-template-columns: 1fr; }
    }

    .chart-card {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 2px 8px var(--shadow-color);
      border: 1px solid var(--border-color);
      transition: all 0.4s;
    }

    .chart-card:hover {
      box-shadow: 0 12px 24px var(--shadow-color);
      transform: translateY(-2px);
    }

    .chart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .chart-title { margin: 0; color: var(--text-primary); font-size: 1.3rem; font-weight: 700; }
    .chart-icon { font-size: 2rem; }
    .chart-subtitle { color: var(--text-muted); margin: 0 0 1.5rem 0; font-size: 0.95rem; }
    .chart-container { position: relative; height: 300px; }

    /* Analytics Cards */
    .analytics-grid {
      margin-top: 3rem;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
    }

    .analytics-card {
      background: var(--bg-tertiary);
      border-radius: 16px;
      padding: 1.8rem;
      border: 1px solid var(--border-light);
    }

    .analytics-card.accent-gold {
      background: linear-gradient(135deg, rgba(168, 153, 104, 0.15) 0%, rgba(212, 165, 116, 0.1) 100%);
      border-color: rgba(168, 153, 104, 0.3);
    }

    .analytics-card.accent-brown {
      background: linear-gradient(135deg, rgba(139, 111, 71, 0.15) 0%, rgba(139, 111, 71, 0.1) 100%);
      border-color: rgba(139, 111, 71, 0.3);
    }

    .analytics-card.accent-dark {
      background: linear-gradient(135deg, rgba(100, 116, 139, 0.15) 0%, rgba(71, 85, 105, 0.1) 100%);
      border-color: rgba(100, 116, 139, 0.3);
    }

    .analytics-card.accent-green {
      background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(22, 163, 74, 0.1) 100%);
      border-color: rgba(34, 197, 94, 0.3);
    }

    .analytics-label {
      color: var(--text-muted);
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: uppercase;
      margin: 0 0 0.8rem 0;
      letter-spacing: 0.5px;
    }

    .analytics-value { font-size: 2.2rem; font-weight: 800; margin-bottom: 0.5rem; }
    .analytics-value.gold { color: var(--color-accent); }
    .analytics-value.brown { color: #8b6f47; }
    .analytics-value.dark { color: var(--text-primary); }
    .analytics-value.green { color: #22c55e; }
    .analytics-desc { color: var(--text-muted); font-size: 0.85rem; margin: 0; }

    @media (max-width: 768px) {
      .side-menu { 
        width: 100%; 
        right: -100%; 
      }
      .side-menu.open { 
        right: 0; 
      }
      .admin-page { padding: 1.5rem 1rem; }
      .admin-title { font-size: 2rem; }
      .kpi-grid { grid-template-columns: 1fr; }
      .charts-grid { 
        grid-template-columns: 1fr; 
        margin-top: 2rem;
      }
      .chart-card {
        padding: 1rem;
      }
      .chart-container {
        height: 200px;
      }
      .analytics-grid {
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 2rem;
      }
      .analytics-card {
        padding: 1rem;
      }
      .analytics-value {
        font-size: 1.6rem;
      }
      .kpi-card {
        padding: 1.5rem;
      }
      .kpi-value {
        font-size: 2rem;
      }
    }
  </style>

  <div class="admin-page">
    <div class="admin-container">
      <!-- Header -->
      <div class="admin-header">
        <div>
          <h1 class="admin-title">Dashboard</h1>
          <p class="admin-subtitle">Bienvenido al centro de control de tu tienda</p>
        </div>
        
        <!-- Hamburger Menu -->
        <div style="position: relative;">
          <button class="hamburger-btn" id="hamburgerBtn">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
          </button>

          <!-- Sliding Menu Panel -->
          <div class="side-menu" id="sideMenu">
            <!-- Menu Header -->
            <div class="menu-header">
              <h2>Menú</h2>
              <button class="close-menu-btn" id="closeMenuBtn">✕</button>
            </div>

            <!-- Menu Items -->
            <nav class="menu-nav">
              <a href="/admin/productos" class="menu-item">
                <div>
                  <div class="menu-item-title">Productos</div>
                  <div class="menu-item-desc">Administra tu catálogo</div>
                </div>
              </a>

              <a href="/admin/categorias" class="menu-item">
                <div>
                  <div class="menu-item-title">Categorías</div>
                  <div class="menu-item-desc">Gestiona categorías</div>
                </div>
              </a>

              <a href="/admin/empresas" class="menu-item">
                <div>
                  <div class="menu-item-title">Empresas</div>
                  <div class="menu-item-desc">Ver todas las empresas</div>
                </div>
              </a>

              <a href="/admin/usuarios" class="menu-item">
                <div>
                  <div class="menu-item-title">Clientes</div>
                  <div class="menu-item-desc">Gestiona usuarios</div>
                </div>
              </a>

              <a href="/admin/pedidos" class="menu-item">
                <div>
                  <div class="menu-item-title">Pedidos</div>
                  <div class="menu-item-desc">Ver órdenes</div>
                </div>
              </a>

              <a href="/admin/ofertas" class="menu-item">
                <div>
                  <div class="menu-item-title">Ofertas</div>
                  <div class="menu-item-desc">Gestiona promociones</div>
                </div>
              </a>

              <a href="/admin/codigos-descuento" class="menu-item">
                <div>
                  <div class="menu-item-title">Códigos Descuento</div>
                  <div class="menu-item-desc">Crear y gestionar códigos</div>
                </div>
              </a>
            </nav>
          </div>

          <!-- Overlay para cerrar menú -->
          <div class="menu-overlay" id="menuOverlay"></div>
        </div>
      </div>

      <!-- KPI Cards Grid - Premium Design -->
      <div class="kpi-grid">
        <!-- KPI Card 1 -->
        <a href="/admin/productos" class="kpi-card">
          <div class="kpi-card-bg"></div>
          <div class="kpi-card-content">
            <div class="kpi-header">
              <p class="kpi-label">Productos</p>
              <div class="kpi-icon"></div>
            </div>
            <div class="kpi-value" id="productosCount">0</div>
            <p class="kpi-desc">Total en stock</p>
          </div>
        </a>

        <!-- KPI Card 2 -->
        <a href="/admin/pedidos" class="kpi-card">
          <div class="kpi-card-bg"></div>
          <div class="kpi-card-content">
            <div class="kpi-header">
              <p class="kpi-label">Pedidos</p>
              <div class="kpi-icon"></div>
            </div>
            <div class="kpi-value" id="pedidosCount">0</div>
            <p class="kpi-desc">Pendientes</p>
          </div>
        </a>

        <!-- KPI Card 3 -->
        <a href="/admin/clientes" class="kpi-card">
          <div class="kpi-card-bg"></div>
          <div class="kpi-card-content">
            <div class="kpi-header">
              <p class="kpi-label">Clientes Activos</p>
              <div class="kpi-icon"></div>
            </div>
            <div class="kpi-value" id="clientesCount">0</div>
            <p class="kpi-desc">Conectados ahora</p>
          </div>
        </a>

        <!-- KPI Card 4 -->
        <a href="/admin/estadisticas" class="kpi-card">
          <div class="kpi-card-bg"></div>
          <div class="kpi-card-content">
            <div class="kpi-header">
              <p class="kpi-label">Ingresos</p>
              <div class="kpi-icon"></div>
            </div>
            <div class="kpi-value" id="ingresosCount">€0</div>
            <p class="kpi-desc">Este mes</p>
          </div>
        </a>
      </div>

      <!-- Charts Section - Elegant Design -->
      <div class="charts-grid">
        <!-- Ingresos Chart -->
        <div class="chart-card">
          <div class="chart-header">
            <h3 class="chart-title">Ingresos Mensuales</h3>
            <div class="chart-icon"></div>
          </div>
          <p class="chart-subtitle">Evolución de ingresos diarios</p>
          <div class="chart-container">
            <canvas id="ingresosChart"></canvas>
          </div>
        </div>

        <!-- Pedidos Chart -->
        <div class="chart-card">
          <div class="chart-header">
            <h3 class="chart-title">Pedidos del Mes</h3>
            <div class="chart-icon"></div>
          </div>
          <p class="chart-subtitle">Cantidad de pedidos diarios</p>
          <div class="chart-container">
            <canvas id="pedidosChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Analytics Cards -->
      <div class="analytics-grid">
        <!-- Ticket Promedio -->
        <div class="analytics-card accent-gold">
          <p class="analytics-label">Ticket Promedio</p>
          <div class="analytics-value gold" id="ticketPromedio">€0</div>
          <p class="analytics-desc">Por pedido</p>
        </div>

        <!-- Pedidos Hoy -->
        <div class="analytics-card accent-brown">
          <p class="analytics-label">Pedidos Hoy</p>
          <div class="analytics-value brown" id="pedidosHoy">0</div>
          <p class="analytics-desc">Órdenes completadas</p>
        </div>

        <!-- Ingresos Hoy -->
        <div class="analytics-card accent-dark">
          <p class="analytics-label">Ingresos Hoy</p>
          <div class="analytics-value dark" id="ingresosHoy">€0</div>
          <p class="analytics-desc">Ventas del día</p>
        </div>

        <!-- Tasa Conversión -->
        <div class="analytics-card accent-gold">
          <p class="analytics-label">Crecimiento</p>
          <div class="analytics-value brown" id="crecimiento">+0%</div>
          <p class="analytics-desc">vs. semana pasada</p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const sideMenu = document.getElementById('sideMenu');
    const closeMenuBtn = document.getElementById('closeMenuBtn');
    const menuOverlay = document.getElementById('menuOverlay');

    // Abrir menú
    hamburgerBtn?.addEventListener('click', () => {
      sideMenu?.classList.add('open');
      menuOverlay?.classList.add('active');
    });

    // Cerrar menú
    const closeMenu = () => {
      sideMenu?.classList.remove('open');
      menuOverlay?.classList.remove('active');
    };

    closeMenuBtn?.addEventListener('click', closeMenu);
    menuOverlay?.addEventListener('click', closeMenu);

    // Cerrar menú al hacer clic en un enlace
    sideMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    async function cargarEstadisticas() {
      try {
        const response = await fetch('/api/admin/dashboard-stats');
        const data = await response.json();

        if (data.success) {
          // Actualizar cards principales
          const productosEl = document.getElementById('productosCount');
          const pedidosEl = document.getElementById('pedidosCount');
          const clientesEl = document.getElementById('clientesCount');
          const ingresosEl = document.getElementById('ingresosCount');
          const ingresosHoyEl = document.getElementById('ingresosHoy');
          const pedidosHoyEl = document.getElementById('pedidosHoy');
          const ticketPromedioEl = document.getElementById('ticketPromedio');
          
          if (productosEl) productosEl.textContent = String(data.stockTotal || 0);
          if (pedidosEl) pedidosEl.textContent = String(data.pedidosPendientes || 0);
          if (clientesEl) clientesEl.textContent = String(data.clientesActivos || 0);
          if (ingresosEl) ingresosEl.textContent = '€' + (data.ingresosTotal || '0.00');
          if (ingresosHoyEl) ingresosHoyEl.textContent = '€' + (data.ingresosHoy || '0.00');
          if (pedidosHoyEl) pedidosHoyEl.textContent = String(data.pedidosHoy || 0);
          if (ticketPromedioEl) ticketPromedioEl.textContent = '€' + (data.ticketPromedio || '0.00');
          
          // Guardar datos para usarlos en los gráficos
          window.dashboardData = data;
          
          console.log('✅ Estadísticas cargadas:', data);
        }
      } catch (error) {
        console.error('Error cargando estadísticas:', error);
      }
    }

    // Obtener datos reales de ingresos por día del mes
    async function obtenerIngresosDelMes() {
      try {
        const response = await fetch('/api/admin/ingresos-diarios');
        const data = await response.json();
        return data.ingresosMatriz || { dias: [], ingresos: [] };
      } catch (error) {
        console.error('Error obteniendo ingresos diarios:', error);
        return { dias: [], ingresos: [] };
      }
    }

    // Generar datos realistas para los gráficos
    function generarDatosIngresos() {
      const dias = Array.from({ length: 30 }, (_, i) => i + 1);
      const ingresos = dias.map(() => Math.floor(Math.random() * 500) + 200);
      return { dias, ingresos };
    }

    function generarDatosPedidos() {
      const dias = Array.from({ length: 30 }, (_, i) => i + 1);
      const pedidos = dias.map(() => Math.floor(Math.random() * 15) + 3);
      return { dias, pedidos };
    }

    // Crear gráfico de ingresos
    async function crearGraficoIngresos() {
      const datosIngresos = await obtenerIngresosDelMes();
      let dias = datosIngresos.dias || [];
      let ingresos = datosIngresos.ingresos || [];
      
      // Si no hay datos reales, usar placeholders
      if (dias.length === 0) {
        const { dias: diasGeneados, ingresos: ingresosGenerados } = generarDatosIngresos();
        dias = diasGeneados;
        ingresos = ingresosGenerados;
      }
      
      const canvas = document.getElementById('ingresosChart') as HTMLCanvasElement | null;
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      if (!ctx) return;
      
      const mesActual = new Date().toLocaleString('es-ES', { month: 'long' });
      
      // @ts-ignore
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: dias.map(d => `${d} ${mesActual[0].toUpperCase() + mesActual.slice(1)}`),
          datasets: [{
            label: 'Ingresos (€)',
            data: ingresos,
            borderColor: 'rgba(102, 126, 234, 1)',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: 4,
            pointBackgroundColor: 'rgba(102, 126, 234, 1)',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            pointHoverRadius: 6,
            pointHoverBackgroundColor: 'rgba(102, 126, 234, 1)',
            hoverBackgroundColor: 'rgba(102, 126, 234, 0.2)',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              labels: {
                color: '#64748b',
                font: { size: 12, weight: '600' },
                padding: 20,
                usePointStyle: true,
              }
            },
            filler: {
              propagate: true,
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(226, 232, 240, 0.5)',
                drawBorder: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
                callback: function(value) {
                  return '€' + value;
                }
              }
            },
            x: {
              grid: {
                display: false,
              },
              ticks: {
                color: '#94a3b8',
                font: { size: 11 },
              }
            }
          }
        }
      });

      // Usar datos del API si están disponibles
      const ticketPromedioEl = document.getElementById('ticketPromedio');
      if (window.dashboardData && ticketPromedioEl) {
        // Calcular ticket promedio
        const totalIngresos = parseFloat(window.dashboardData.ingresosTotal || '0');
        const totalPedidos = window.dashboardData.pedidosPendientes || 1;
        const ticketPromedio = (totalIngresos / totalPedidos).toFixed(2);
        ticketPromedioEl.textContent = '€' + ticketPromedio;
      }
    }

    // Crear gráfico de pedidos
    function crearGraficoPedidos() {
      const dias = Array.from({ length: 30 }, (_, i) => i + 1);
      const pedidos = dias.map(() => Math.floor(Math.random() * 15) + 3);
      const canvas = document.getElementById('pedidosChart') as HTMLCanvasElement | null;
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      if (!ctx) return;
      
      const mesActual = new Date().toLocaleString('es-ES', { month: 'long' });
      
      // @ts-ignore
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: dias.map(d => `${d} ${mesActual[0].toUpperCase() + mesActual.slice(1)}`),
          datasets: [{
            label: 'Cantidad de Pedidos',
            data: pedidos,
            backgroundColor: [
              'rgba(240, 147, 251, 0.8)',
              'rgba(245, 87, 108, 0.8)',
            ],
            borderColor: [
              'rgba(240, 147, 251, 1)',
              'rgba(245, 87, 108, 1)',
            ],
