          <!-- Sliding Menu Panel -->
          <div 
            id="sideMenu"
            style="
              position: fixed;
              top: 0;
              right: -350px;
              width: 350px;
              height: 100vh;
              background: white;
              box-shadow: -10px 0 40px rgba(0, 0, 0, 0.15);
              transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
              z-index: 2000;
              overflow-y: auto;
            "
          >
            <!-- Menu Header -->
            <div style="
              background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
