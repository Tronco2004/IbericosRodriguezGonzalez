---
import ProtectedLayout from '@/layouts/ProtectedLayout.astro';
---

<ProtectedLayout requireAdmin={true}>
  <div class="admin-page">
    <div class="setup-container">
      <div class="admin-card setup-card">
        <h1 class="admin-title">Configuración Inicial</h1>
        <p class="admin-subtitle">Haz clic en el botón para crear las categorías y productos de ejemplo en la base de datos.</p>
        
        <button id="btnSetup" class="admin-btn-primary setup-btn">
          Ejecutar Setup Inicial
        </button>

        <div id="resultado" class="setup-resultado">
          <p id="mensajeResultado"></p>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('btnSetup').addEventListener('click', async () => {
      const btn = document.getElementById('btnSetup') as HTMLButtonElement;
      const resultado = document.getElementById('resultado') as HTMLElement;
      
      btn.disabled = true;
      btn.textContent = 'Procesando...';

      try {
        const response = await fetch('/api/admin/init-data', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'setup_inicial' })
        });

        const data = await response.json();

        resultado.classList.add('visible');
        if (data.success) {
          resultado.classList.remove('error');
          resultado.classList.add('success');
          (document.getElementById('mensajeResultado') as HTMLElement).textContent = 
            `✓ ${data.message}\n- Categorías: ${data.categorias.length}\n- Productos: ${data.productos.length}`;
          btn.textContent = '✓ Setup Completado';
        } else {
          resultado.classList.remove('success');
          resultado.classList.add('error');
          (document.getElementById('mensajeResultado') as HTMLElement).textContent = `✗ Error: ${data.error}`;
          btn.textContent = 'Ejecutar Setup Inicial';
          btn.disabled = false;
        }
      } catch (error: any) {
        resultado.classList.add('visible');
        resultado.classList.remove('success');
        resultado.classList.add('error');
        (document.getElementById('mensajeResultado') as HTMLElement).textContent = `✗ Error: ${error.message}`;
        btn.textContent = 'Ejecutar Setup Inicial';
        btn.disabled = false;
      }
    });
  </script>

  <style is:global>
    .setup-container {
      max-width: 600px;
      margin: 0 auto;
    }

    .setup-card {
      padding: 2rem;
    }

    .setup-btn {
      width: 100%;
    }

    .setup-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .setup-resultado {
      margin-top: 2rem;
      padding: 1rem;
      border-radius: 8px;
      display: none;
    }

    .setup-resultado.visible {
      display: block;
    }

    .setup-resultado.success {
      background: #dcfce7;
      color: #15803d;
    }

    .setup-resultado.error {
      background: #fee2e2;
      color: #b91c1c;
    }

    .setup-resultado p {
      white-space: pre-line;
      margin: 0;
    }
  </style>
</ProtectedLayout>
