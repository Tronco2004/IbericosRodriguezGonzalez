---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
---

<ProtectedLayout requireAdmin={true}>
  <style is:global>
    /* Estilos para tabla de productos en modo oscuro */
    .prod-row {
      border-bottom: 1px solid var(--border-color);
      transition: all 0.3s;
    }
    
    .prod-row:hover {
      background: var(--bg-tertiary);
    }
    
    .prod-cell {
      padding: 1.25rem;
    }
    
    .prod-cell.center {
      text-align: center;
    }
    
    .prod-img {
      width: 50px;
      height: 50px;
      border-radius: 6px;
      object-fit: cover;
    }
    
    .prod-nombre {
      color: var(--text-primary);
      font-weight: 600;
    }
    
    .prod-categoria {
      color: var(--text-muted);
      font-size: 0.9rem;
      text-transform: capitalize;
    }
    
    .prod-precio {
      color: #667eea;
      font-weight: 700;
    }
    
    .prod-precio-empresa {
      color: #16a34a;
      font-weight: 700;
    }
    
    .prod-stock {
      color: var(--text-muted);
    }
    
    .prod-badge {
      display: inline-block;
      padding: 0.4rem 0.8rem;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
    }
    
    .prod-badge.activo {
      background: rgba(22, 163, 52, 0.15);
      color: #16a34a;
    }
    
    .prod-badge.inactivo {
      background: rgba(239, 68, 68, 0.15);
      color: #ef4444;
    }
    
    .prod-actions {
      display: flex;
      gap: 0.5rem;
      justify-content: center;
    }
    
    .prod-btn-edit {
      padding: 0.5rem 1rem;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .prod-btn-edit:hover {
      background: #764ba2;
    }
    
    .prod-btn-delete {
      padding: 0.5rem 1rem;
      background: #ef4444;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .prod-btn-delete:hover {
      background: #dc2626;
    }
    
    .variantes-title {
      margin: 0 0 1rem 0;
      color: var(--text-primary);
      font-weight: 600;
    }
    
    .variantes-placeholder {
      color: var(--text-muted);
      font-size: 0.9rem;
      margin: 0;
    }
    
    .image-drop-title {
      margin: 0;
      color: var(--text-primary);
      font-weight: 600;
    }

    /* Modal de confirmaci√≥n de eliminaci√≥n */
    .delete-confirmation-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--overlay-dark);
      z-index: 2000;
      align-items: center;
      justify-content: center;
    }

    .delete-confirmation-modal {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 2rem;
      max-width: 450px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      animation: slideUp 0.3s ease-out;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .delete-confirmation-title {
      color: var(--text-primary);
      font-size: 1.25rem;
      margin: 0 0 1rem 0;
      font-weight: 700;
    }

    .delete-confirmation-message {
      color: var(--text-secondary);
      font-size: 0.95rem;
      margin: 0 0 2rem 0;
      line-height: 1.5;
    }

    .delete-confirmation-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
    }

    .delete-btn-cancel {
      padding: 0.75rem 1.5rem;
      background: var(--bg-tertiary);
      color: var(--text-primary);
      border: 1px solid var(--border-color);
      border-radius: 6px;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }

    .delete-btn-cancel:hover {
      background: var(--border-color);
    }

    .delete-btn-confirm {
      padding: 0.75rem 1.5rem;
      background: #ef4444;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }

    .delete-btn-confirm:hover {
      background: #dc2626;
    }
  </style>
  
  <div class="admin-page">
    <div class="admin-container">
      <!-- Header -->
      <div class="admin-header">
        <a href="/admin/dashboard" class="admin-back-btn">‚Üê</a>
        <h1 class="admin-title">Gesti√≥n de Productos</h1>
        <p class="admin-subtitle">Administra el cat√°logo completo de jamones, embutidos y productos ib√©ricos</p>
      </div>

      <!-- Action Bar -->
      <div class="admin-action-bar">
        <div class="admin-filters">
          <input type="text" id="searchInput" placeholder="Buscar productos..." class="admin-search-input" />
          
          <select id="filterCategoria" class="admin-select">
            <option value="">Todas las categor√≠as</option>
          </select>
        </div>

        <button id="btnNuevoProducto" class="admin-btn-primary">
          + Nuevo Producto
        </button>
      </div>

      <!-- Tabla de Productos -->
      <div class="admin-table-container">
        <div class="admin-table-scroll">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Categor√≠a</th>
                <th class="center">Precio P√∫blico</th>
                <th class="center">IVA %</th>
                <th class="center">Precio Empresa</th>
                <th class="center">IVA Emp %</th>
                <th class="center">Stock</th>
                <th class="center">Estado</th>
                <th class="center">Acciones</th>
              </tr>
            </thead>
            <tbody id="productosTable">
              <!-- Cargar√° con JavaScript -->
            </tbody>
          </table>
        </div>
        <div id="emptyState" class="admin-empty-state" style="display: none;">
          <div style="font-size: 3rem; margin-bottom: 1rem;">üì¶</div>
          <p>No hay productos que mostrar</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para crear/editar producto -->
  <div id="productModal" class="admin-modal-overlay" style="display: none;">
    <div class="admin-modal">
      <h2 id="modalTitle" class="admin-modal-title">Nuevo Producto</h2>
      
      <form id="productForm" class="admin-form">
        <div class="admin-form-group">
          <label class="admin-label">Imagen del Producto</label>
          <div class="admin-image-drop" id="imageDrop">
            <input type="file" id="imagenInput" accept="image/*" style="display: none;" />
            <div id="imagePreview" style="display: none; margin-bottom: 1rem;">
              <img id="previewImg" src="" style="max-width: 100%; max-height: 200px; border-radius: 6px;" />
              <p class="admin-hint">Click para cambiar imagen</p>
            </div>
            <div id="imagePlaceholder">
              <div style="font-size: 2rem; margin-bottom: 0.5rem;">üñºÔ∏è</div>
              <p class="image-drop-title">Arrastra una imagen aqu√≠</p>
              <p class="admin-hint">o click para seleccionar</p>
            </div>
            <div id="uploadStatus" style="display: none; margin-top: 1rem; padding: 0.75rem; border-radius: 6px; font-size: 0.9rem;">
              <span id="uploadMessage"></span>
            </div>
          </div>
        </div>

        <div class="admin-form-group">
          <label class="admin-label">Nombre del Producto</label>
          <input type="text" id="nombre" placeholder="Ej: Jam√≥n Ib√©rico Reserva" class="admin-input" required />
        </div>

        <div class="admin-form-row">
          <div class="admin-form-group">
            <label class="admin-label">Categor√≠a</label>
            <select id="categoria" class="admin-select" required>
              <option value="">Selecciona categor√≠a</option>
            </select>
          </div>

          <div class="admin-form-group">
            <label class="admin-label">Precio P√∫blico (‚Ç¨)</label>
            <input type="number" id="precio" placeholder="0.00" step="0.01" class="admin-input" required />
          </div>

          <div class="admin-form-group">
            <label class="admin-label">IVA (%)</label>
            <input type="number" id="iva" placeholder="21" step="0.01" min="0" max="100" class="admin-input" required />
          </div>

          <div class="admin-form-group">
            <label class="admin-label">Precio Empresa (‚Ç¨)</label>
            <input type="number" id="precio_empresa" placeholder="0.00" step="0.01" class="admin-input" />
          </div>

          <div class="admin-form-group">
            <label class="admin-label">IVA Empresa (%)</label>
            <input type="number" id="iva_empresa" placeholder="21" step="0.01" min="0" max="100" class="admin-input" />
          </div>
        </div>

        <!-- Opci√≥n: Peso Variable -->
        <div class="admin-form-group" style="background: var(--bg-tertiary); padding: 1.25rem; border-radius: 8px; border: 1px solid var(--border-color);">
          <label style="display: flex; align-items: center; gap: 0.75rem; cursor: pointer;">
            <input type="checkbox" id="esVariable" style="width: 18px; height: 18px; cursor: pointer;" />
            <span style="color: var(--text-primary); font-weight: 600;">Este producto tiene pesos/tama√±os variables</span>
          </label>
          <p class="admin-hint">Ej: Jamones de diferentes pesos, quesos de distintos tama√±os</p>
        </div>

        <!-- Stock (solo para productos NO variables) -->
        <div id="stockSection" class="admin-form-group">
          <label class="admin-label">Stock</label>
          <input type="number" id="stock" placeholder="0" min="0" class="admin-input" required />
        </div>

        <!-- Secci√≥n de Variantes (solo para productos variables) -->
        <div id="variantesSection" style="display: none;">
          <!-- Precio por Kg -->
          <div class="admin-form-group">
            <label class="admin-label">Precio por Kg (‚Ç¨)</label>
            <input type="number" id="precioKg" placeholder="35.00" step="0.01" class="admin-input" />
            <p class="admin-hint">Se usar√° para calcular el precio total de cada peso</p>
          </div>

          <!-- Agregar Variantes -->
          <div style="background: var(--bg-tertiary); padding: 1.25rem; border-radius: 8px; border: 1px solid var(--border-color);">
            <h4 style="margin: 0 0 1rem 0; color: var(--text-primary); font-weight: 600;">Pesos disponibles</h4>
            
            <div class="admin-form-row" style="margin-bottom: 1rem;">
              <div class="admin-form-group">
                <label class="admin-label" style="font-size: 0.9rem;">Peso (kg)</label>
                <input type="number" id="nuevoVariantePeso" placeholder="4.650" step="0.001" min="0.001" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" style="font-size: 0.9rem;">Precio Total (‚Ç¨)</label>
                <input type="number" id="nuevoVariantePrecio" placeholder="162.75" step="0.01" class="admin-input" style="background: var(--bg-input);" readonly />
                <p class="admin-hint" style="font-size: 0.8rem;">Se calcula autom√°ticamente</p>
              </div>
            </div>

            <button type="button" id="btnAgregarVariante" onclick="window.agregarVariante()" class="admin-btn-primary" style="width: 100%;">
              + Agregar Peso
            </button>
          </div>

          <!-- Lista de Variantes Agregadas -->
          <div class="admin-form-group" style="margin-top: 1.5rem;">
            <h4 class="variantes-title">Variantes agregadas:</h4>
            <div id="variantesList" style="display: flex; flex-direction: column; gap: 0.75rem;">
              <p class="variantes-placeholder">Aqu√≠ aparecer√°n los pesos que agregues</p>
            </div>
          </div>
        </div>

        <div class="admin-form-group">
          <label class="admin-label">Descripci√≥n</label>
          <textarea id="descripcion" placeholder="Describe el producto..." rows="3" class="admin-textarea"></textarea>
        </div>

        <div class="admin-form-actions">
          <button type="button" id="cancelBtn" class="admin-btn-secondary">
            Cancelar
          </button>
          <button type="submit" class="admin-btn-primary">
            Guardar Producto
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal de confirmaci√≥n de eliminaci√≥n -->
  <div id="deleteConfirmationModal" class="delete-confirmation-overlay">
    <div class="delete-confirmation-modal">
      <h3 class="delete-confirmation-title">¬øEliminar producto?</h3>
      <p class="delete-confirmation-message">Esta acci√≥n eliminar√° el producto y no se puede deshacer. ¬øEst√°s seguro de que quieres continuar?</p>
      <div class="delete-confirmation-actions">
        <button id="deleteCancelBtn" class="delete-btn-cancel">Cancelar</button>
        <button id="deleteConfirmBtn" class="delete-btn-confirm">Eliminar</button>
      </div>
    </div>
  </div>

  <script>
    const STORAGE_KEY = 'ibericosRG_productos';
    let productos = [];
    let categorias = [];
    let editingId = null;
    let variantesActuales = []; // Array para almacenar variantes del producto actual
    let productoAEliminar = null; // ID del producto a eliminar

    // Funciones globales para variantes (exponidas al window para usar en onclick)
    window.agregarVariante = function() {
      console.log('agregarVariante() ejecutada');
      console.log('variantesActuales:', variantesActuales);
      
      const pesoInput = document.getElementById('nuevoVariantePeso').value.replace(',', '.');
      const precioInput = document.getElementById('nuevoVariantePrecio').value.replace(',', '.');
      
      console.log('pesoInput:', pesoInput, 'precioInput:', precioInput);
      
      const peso = parseFloat(pesoInput);
      const precioTotal = parseFloat(precioInput);
      
      console.log('peso:', peso, 'precioTotal:', precioTotal);
      
      if (!peso || !precioTotal) {
        alert('Por favor completa todos los campos - peso: ' + peso + ', precio: ' + precioTotal);
        return;
      }

      // Verificar que no exista peso duplicado
      if (variantesActuales.some(v => v.peso === peso)) {
        alert('Ya existe una variante con este peso');
        return;
      }

      // Agregar a array
      variantesActuales.push({
        peso: peso,
        precio_total: precioTotal
      });

      console.log('Variante agregada. variantesActuales ahora:', variantesActuales);

      // Limpiar campos
      document.getElementById('nuevoVariantePeso').value = '';
      document.getElementById('nuevoVariantePrecio').value = '';

      // Actualizar lista
      mostrarVariantes();
    };

    window.eliminarVariante = function(index) {
      variantesActuales.splice(index, 1);
      mostrarVariantes();
    };

    // Manejador de imagen
    const imageDrop = document.getElementById('imageDrop');
    const imagenInput = document.getElementById('imagenInput');
    const imagePreview = document.getElementById('imagePreview');
    const imagePlaceholder = document.getElementById('imagePlaceholder');
    const previewImg = document.getElementById('previewImg');
    const uploadStatus = document.getElementById('uploadStatus');
    const uploadMessage = document.getElementById('uploadMessage');
    let uploadedImageUrl = null;

    imageDrop.addEventListener('click', () => imagenInput.click());

    imagenInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        subirImagen(file);
      }
    });

    imageDrop.addEventListener('dragover', (e) => {
      e.preventDefault();
      imageDrop.style.borderColor = '#667eea';
      imageDrop.style.background = '#f1f5f9';
    });

    imageDrop.addEventListener('dragleave', () => {
      imageDrop.style.borderColor = '#e2e8f0';
      imageDrop.style.background = '#f8fafc';
    });

    imageDrop.addEventListener('drop', (e) => {
      e.preventDefault();
      imageDrop.style.borderColor = '#e2e8f0';
      imageDrop.style.background = '#f8fafc';
      const file = e.dataTransfer.files[0];
      if (file && file.type.startsWith('image/')) {
        subirImagen(file);
      }
    });

    async function subirImagen(file) {
      uploadStatus.style.display = 'block';
      uploadStatus.style.background = '#f0f9ff';
      uploadStatus.style.color = '#0369a1';
      uploadMessage.textContent = '‚è≥ Subiendo imagen...';

      const formData = new FormData();
      formData.append('file', file);

      try {
        const response = await fetch('/api/admin/upload', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (data.success) {
          uploadedImageUrl = data.url;
          previewImg.src = uploadedImageUrl;
          imagePreview.style.display = 'block';
          imagePlaceholder.style.display = 'none';
          
          uploadStatus.style.background = '#dcfce7';
          uploadStatus.style.color = '#15803d';
          uploadMessage.textContent = '‚úì Imagen subida correctamente';
        } else {
          uploadStatus.style.background = '#fee2e2';
          uploadStatus.style.color = '#b91c1c';
          uploadMessage.textContent = `‚úó Error: ${data.error}`;
        }
      } catch (error) {
        uploadStatus.style.background = '#fee2e2';
        uploadStatus.style.color = '#b91c1c';
        uploadMessage.textContent = '‚úó Error al subir la imagen';
        console.error('Upload error:', error);
      }
    }

    // Cargar categor√≠as
    async function cargarCategorias() {
      try {
        const response = await fetch('/api/admin/categorias');
        const data = await response.json();
        
        if (data.success && data.categorias && data.categorias.length > 0) {
          categorias = data.categorias;
        } else {
          categorias = [];
        }
        
        actualizarSelectsCategorias();
      } catch (error) {
        console.error('Error cargando categor√≠as:', error);
        categorias = [];
      }
    }

    function actualizarSelectsCategorias() {
      // Actualizar el select de filtro
      const filterCategoria = document.getElementById('filterCategoria');
      const opcionesHtml = '<option value="">Todas las categor√≠as</option>' + 
        categorias.map(c => `<option value="${c.slug}">${c.nombre}</option>`).join('');
      filterCategoria.innerHTML = opcionesHtml;

      // Actualizar el select del formulario de producto
      const selectCategoria = document.getElementById('categoria');
      const opcionesProductoHtml = '<option value="">Selecciona categor√≠a</option>' + 
        categorias.map(c => `<option value="${c.slug}">${c.nombre}</option>`).join('');
      selectCategoria.innerHTML = opcionesProductoHtml;
    }

    // Cargar productos
    async function cargarProductos() {
      try {
        // Cargar desde la API (Supabase)
        const response = await fetch('/api/admin/productos');
        const data = await response.json();
        
        if (data.success && data.productos && data.productos.length > 0) {
          // Convertir productos de Supabase al formato esperado
          productos = data.productos.map((p: any) => ({
            id: p.id,
            nombre: p.nombre,
            categoria: p.categorias?.slug || 'desconocida',
            precio: p.precio_centimos || p.precio,
            iva: p.iva ?? 21,
            precio_empresa: p.precio_empresa_centimos || 0,
            iva_empresa: p.iva_empresa ?? 21,
            stock: p.stock,
            descripcion: p.descripcion || '',
            imagen: p.imagen_url || p.imagen,
            estado: p.activo ? 'activo' : 'inactivo',
            rating: p.rating || 0,
            es_variable: p.es_variable || false,
            precio_por_kg: p.precio_por_kg || null
          }));
        } else {
          // Si no hay productos en Supabase, mostrar vac√≠o
          productos = [];
        }
        renderizarProductos();
      } catch (error) {
        console.error('Error cargando productos de Supabase:', error);
        // En caso de error, mostrar lista vac√≠a
        productos = [];
        renderizarProductos();
      }
    }

    function guardarProductosLocales() {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(productos));
    }

    // Esta funci√≥n ya no es necesaria para Supabase, pero la dejamos para compatibilidad
    function guardarEnSupabase() {
      // Los guardados se hacen directamente en guardarProducto()
    }

    function renderizarProductos() {
      const tabla = document.getElementById('productosTable');
      const emptyState = document.getElementById('emptyState');
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const filterCat = document.getElementById('filterCategoria').value;

      let filtrados = productos.filter(p => {
        const matchSearch = p.nombre.toLowerCase().includes(searchTerm);
        const matchCat = !filterCat || p.categoria === filterCat;
        return matchSearch && matchCat;
      });

      if (filtrados.length === 0) {
        tabla.innerHTML = '';
        emptyState.style.display = 'block';
        return;
      }

      emptyState.style.display = 'none';
      tabla.innerHTML = filtrados.map(p => `
        <tr class="prod-row">
          <td class="prod-cell center">
            <img src="${p.imagen || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22%3E%3Crect fill=%22%23e2e8f0%22 width=%22100%22 height=%22100%22/%3E%3C/svg%3E'}" alt="${p.nombre}" class="prod-img" />
          </td>
          <td class="prod-cell prod-nombre">${p.nombre}</td>
          <td class="prod-cell prod-categoria">${p.categoria}</td>
          <td class="prod-cell center prod-precio">${(p.precio / 100).toFixed(2)} ‚Ç¨</td>
          <td class="prod-cell center prod-precio">${(p.iva ?? 21).toFixed(2)}%</td>
          <td class="prod-cell center prod-precio-empresa">${(p.precio_empresa || 0) / 100 > 0 ? ((p.precio_empresa || 0) / 100).toFixed(2) + ' ‚Ç¨' : '-'}</td>
          <td class="prod-cell center prod-precio-empresa">${(p.precio_empresa || 0) / 100 > 0 ? (p.iva_empresa ?? 21).toFixed(2) + '%' : '-'}</td>
          <td class="prod-cell center prod-stock">${p.stock}</td>
          <td class="prod-cell center">
            <span class="prod-badge ${p.estado === 'activo' ? 'activo' : 'inactivo'}">
              ${p.estado === 'activo' ? '‚úì Activo' : '‚úó Inactivo'}
            </span>
          </td>
          <td class="prod-cell center">
            <div class="prod-actions">
              <button class="btn-editar prod-btn-edit" data-id="${p.id}">
                Editar
              </button>
              <button class="btn-eliminar prod-btn-delete" data-id="${p.id}">
                Eliminar
              </button>
            </div>
          </td>
        </tr>
      `).join('');

      // Agregar event listeners a botones
      document.querySelectorAll('.btn-editar').forEach(btn => {
        btn.addEventListener('click', () => abrirEditar(parseInt(btn.dataset.id)));
      });
      document.querySelectorAll('.btn-eliminar').forEach(btn => {
        btn.addEventListener('click', () => eliminarProducto(parseInt(btn.dataset.id)));
      });
    }

    function abrirNuevo() {
      editingId = null;
      uploadedImageUrl = null;
      document.getElementById('modalTitle').textContent = 'Nuevo Producto';
      document.getElementById('productForm').reset();
      
      // Resetear checkbox y campos
      document.getElementById('esVariable').checked = false;
      document.getElementById('stockSection').style.display = 'block';
      document.getElementById('variantesSection').style.display = 'none';
      variantesActuales = [];
      document.getElementById('variantesList').innerHTML = '<p class="variantes-placeholder">Aqu√≠ aparecer√°n los pesos que agregues</p>';
      
      uploadStatus.style.display = 'none';
      imagePreview.style.display = 'none';
      imagePlaceholder.style.display = 'block';
      document.getElementById('productModal').style.display = 'flex';
    }

    function abrirEditar(id) {
      const producto = productos.find(p => p.id === id);
      if (!producto) return;

      editingId = id;
      uploadedImageUrl = null;
      document.getElementById('modalTitle').textContent = 'Editar Producto';
      document.getElementById('nombre').value = producto.nombre;
      document.getElementById('categoria').value = producto.categoria;
      document.getElementById('precio').value = (producto.precio / 100).toFixed(2);
      document.getElementById('iva').value = (producto.iva ?? 21).toFixed(2);
      document.getElementById('precio_empresa').value = (producto.precio_empresa || 0) / 100;
      document.getElementById('iva_empresa').value = (producto.iva_empresa ?? 21).toFixed(2);
      document.getElementById('stock').value = producto.stock;
      document.getElementById('descripcion').value = producto.descripcion || '';
      
      // Cargar es_variable y precio_por_kg
      const esVariableCheckbox = document.getElementById('esVariable');
      esVariableCheckbox.checked = producto.es_variable || false;
      
      // Mostrar/ocultar campos seg√∫n es_variable
      const stockSection = document.getElementById('stockSection');
      const variantesSection = document.getElementById('variantesSection');
      
      variantesActuales = []; // Resetear variantes
      
      if (producto.es_variable) {
        stockSection.style.display = 'none';
        variantesSection.style.display = 'block';
        document.getElementById('precioKg').value = (producto.precio_por_kg || 0).toFixed(2);
        
        // Limpiar inputs de nuevo peso
        document.getElementById('nuevoVariantePeso').value = '';
        document.getElementById('nuevoVariantePrecio').value = '';
        
        // Cargar variantes existentes del API
        cargarVariantesProducto(id);
      } else {
        stockSection.style.display = 'block';
        variantesSection.style.display = 'none';
        document.getElementById('variantesList').innerHTML = '<p style="color: #808080; font-size: 0.9rem; margin: 0;">Aqu√≠ aparecer√°n los pesos que agregues</p>';
      }
      
      uploadStatus.style.display = 'none';
      
      if (producto.imagen) {
        previewImg.src = producto.imagen;
        imagePreview.style.display = 'block';
        imagePlaceholder.style.display = 'none';
      } else {
        imagePreview.style.display = 'none';
        imagePlaceholder.style.display = 'block';
      }
      
      document.getElementById('productModal').style.display = 'flex';
    }

    async function cargarVariantesProducto(productoId) {
      try {
        const response = await fetch(`/api/admin/variantes?producto_id=${productoId}`);
        const data = await response.json();
        
        if (data.success && data.variantes && data.variantes.length > 0) {
          variantesActuales = data.variantes.map(v => ({
            peso: v.peso_kg,
            precio_total: v.precio_total,
            id: v.id // Guardar ID para poder actualizarlas despu√©s
          }));
          mostrarVariantes();
        }
      } catch (error) {
        console.error('Error cargando variantes:', error);
      }
    }

    function cerrarModal() {
      document.getElementById('productModal').style.display = 'none';
      editingId = null;
      uploadedImageUrl = null;
    }

    async function guardarProducto(e) {
      e.preventDefault();
      
      // Validar categor√≠a
      const categoriaValue = document.getElementById('categoria').value;
      if (!categoriaValue) {
        alert('Por favor selecciona una categor√≠a');
        return;
      }

      // Validar seg√∫n tipo de producto
      const esVariable = document.getElementById('esVariable').checked;
      if (esVariable) {
        const precioKg = parseFloat(document.getElementById('precioKg').value);
        if (!precioKg || precioKg <= 0) {
          alert('Por favor ingresa el precio por kg para productos variables');
          return;
        }
        
        // Validar que haya al menos una variante agregada (solo en CREATE)
        if (!editingId && variantesActuales.length === 0) {
          alert('Por favor agrega al menos una variante (peso) para el producto variable');
          return;
        }
      } else {
        const stock = parseInt(document.getElementById('stock').value);
        if (isNaN(stock) || stock < 0) {
          alert('Por favor ingresa un stock v√°lido');
          return;
        }
      }

      // Obtener la imagen - usar la URL subida o fallback
      let imagenFinal = 'https://images.unsplash.com/photo-1557803104268-0ef0f060e15f?w=500&h=500&fit=crop';
      
      if (uploadedImageUrl) {
        // Usar la imagen que se acaba de subir
        imagenFinal = uploadedImageUrl;
      } else if (editingId) {
        // Al editar sin nueva imagen, mantener la actual
        const productoActual = productos.find(p => p.id === editingId);
        if (productoActual && productoActual.imagen) {
          imagenFinal = productoActual.imagen;
        }
      }

      const nuevoProducto = {
        nombre: document.getElementById('nombre').value,
        categoria: document.getElementById('categoria').value,
        precio: Math.round(parseFloat(document.getElementById('precio').value) * 100),
        iva: parseFloat(document.getElementById('iva').value ?? 21),
        precio_empresa: Math.round(parseFloat(document.getElementById('precio_empresa').value || 0) * 100),
        iva_empresa: parseFloat(document.getElementById('iva_empresa').value ?? 21),
        stock: esVariable ? 0 : parseInt(document.getElementById('stock').value),
        descripcion: document.getElementById('descripcion').value,
        imagen: imagenFinal,
        es_variable: esVariable,
        precio_por_kg: esVariable ? parseFloat(document.getElementById('precioKg').value) : null
      };

      try {
        if (editingId) {
          // Editar - guardar en Supabase
          const response = await fetch('/api/admin/productos', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              action: 'update',
              producto: nuevoProducto,
              id: editingId
            })
          });
          
          const result = await response.json();
          if (!result.success) {
            throw new Error(result.error || 'Error al actualizar');
          }

          // Si es variable, actualizar las variantes
          if (esVariable && variantesActuales.length > 0) {
            console.log('ACTUALIZANDO VARIANTES AL EDITAR...');
            
            // Primero, obtener las variantes existentes de la BD
            const resVariantesExistentes = await fetch(`/api/admin/variantes?producto_id=${editingId}`);
            const dataExistentes = await resVariantesExistentes.json();
            const variantesExistentes = dataExistentes.variantes || [];
            
            // Identificar cu√°les eliminar, cu√°les actualizar y cu√°les crear
            for (const varianteExistente of variantesExistentes) {
              const varianteEnLista = variantesActuales.find(v => v.id === varianteExistente.id);
              
              if (!varianteEnLista) {
                // Eliminar variante que no est√° en la lista actual
                console.log('Eliminando variante:', varianteExistente.id);
                await fetch(`/api/admin/variantes/${varianteExistente.id}`, {
                  method: 'DELETE'
                });
              }
            }
            
            // Crear o actualizar variantes
            for (const variante of variantesActuales) {
              if (variante.id) {
                // Actualizar variante existente
                console.log('Actualizando variante:', variante);
                await fetch(`/api/admin/variantes/${variante.id}`, {
                  method: 'PUT',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    peso_kg: variante.peso,
                    precio_total: variante.precio_total,
                    disponible: true
                  })
                });
              } else {
                // Crear nueva variante (sin ID)
                console.log('Creando nueva variante:', variante);
                await fetch('/api/admin/variantes', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    producto_id: editingId,
                    peso_kg: variante.peso,
                    precio_total: variante.precio_total,
                    disponible: true
                  })
                });
              }
            }
            
            console.log('VARIANTES ACTUALIZADAS EXITOSAMENTE');
          }
        } else {
          // Nuevo - guardar en Supabase
          const response = await fetch('/api/admin/productos', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              action: 'create',
              producto: nuevoProducto
            })
          });
          
          const result = await response.json();
          if (!result.success) {
            throw new Error(result.error || 'Error al crear');
          }

          // DEBUG: Mostrar qu√© se va a guardar
          console.log('Producto creado:', result.producto);
          console.log('esVariable:', esVariable);
          console.log('variantesActuales:', variantesActuales);
          console.log('variantesActuales.length:', variantesActuales.length);

          // Si es variable, crear las variantes
          if (esVariable && variantesActuales.length > 0) {
            console.log('CREANDO VARIANTES...');
            const productoId = result.producto.id;
            let variantesCreadas = 0;
            
            for (const variante of variantesActuales) {
              try {
                console.log('Creando variante:', variante);
                const resVariante = await fetch('/api/admin/variantes', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    producto_id: productoId,
                    peso_kg: variante.peso,
                    precio_total: variante.precio_total,
                    disponible: true
                  })
                });

                console.log('Respuesta del API:', resVariante.status);
                if (resVariante.ok) {
                  variantesCreadas++;
                  const varianteData = await resVariante.json();
                  console.log('Variante creada exitosamente:', varianteData);
                } else {
                  const errorData = await resVariante.json();
                  console.error('Error creando variante:', variante, 'Error:', errorData);
                }
              } catch (error) {
                console.error('Error en fetch de variante:', error);
              }
            }
            
            console.log(`RESUMEN: Variantes creadas: ${variantesCreadas} de ${variantesActuales.length}`);
          } else {
            console.log('NO SE CREAN VARIANTES - esVariable:', esVariable, 'variantesActuales.length:', variantesActuales.length);
          }
        }
        
        cerrarModal();
        cargarProductos(); // Recargar desde Supabase
      } catch (error) {
        console.error('Error guardando producto:', error);
        alert('Error al guardar: ' + (error instanceof Error ? error.message : 'Error desconocido'));
      }
    }

    function abrirConfirmacionEliminar(id) {
      productoAEliminar = id;
      document.getElementById('deleteConfirmationModal').style.display = 'flex';
    }

    async function confirmarEliminacion() {
      if (!productoAEliminar) return;
      
      const id = productoAEliminar;
      cerrarConfirmacionEliminar();
      
      try {
        const response = await fetch('/api/admin/productos', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'delete',
            id
          })
        });
        
        const result = await response.json();
        if (!result.success) {
          throw new Error(result.error || 'Error al eliminar');
        }
        
        cargarProductos(); // Recargar desde Supabase
      } catch (error) {
        console.error('Error eliminando producto:', error);
        alert('Error al eliminar: ' + (error instanceof Error ? error.message : 'Error desconocido'));
      }
    }

    function cerrarConfirmacionEliminar() {
      document.getElementById('deleteConfirmationModal').style.display = 'none';
      productoAEliminar = null;
    }

    async function eliminarProducto(id) {
      abrirConfirmacionEliminar(id);
    }

    // Event listeners para modal de producto
    document.getElementById('btnNuevoProducto').addEventListener('click', abrirNuevo);
    document.getElementById('cancelBtn').addEventListener('click', cerrarModal);
    
    // Event listeners para modal de confirmaci√≥n de eliminaci√≥n
    document.getElementById('deleteCancelBtn').addEventListener('click', cerrarConfirmacionEliminar);
    document.getElementById('deleteConfirmBtn').addEventListener('click', confirmarEliminacion);
    
    // Cerrar modal si se hace clic fuera
    document.getElementById('deleteConfirmationModal').addEventListener('click', (e) => {
      if (e.target.id === 'deleteConfirmationModal') {
        cerrarConfirmacionEliminar();
      }
    });
    
    // Toggle para peso variable
    const esVariableCheckbox = document.getElementById('esVariable');
    if (esVariableCheckbox) {
      esVariableCheckbox.addEventListener('change', (e) => {
        const isVariable = e.target.checked;
        document.getElementById('stockSection').style.display = isVariable ? 'none' : 'block';
        document.getElementById('variantesSection').style.display = isVariable ? 'block' : 'none';
        
        // Limpiar campos
        if (isVariable) {
          document.getElementById('stock').value = '0';
          document.getElementById('stock').removeAttribute('required');
          variantesActuales = [];
          document.getElementById('variantesList').innerHTML = '<p style="color: #808080; font-size: 0.9rem; margin: 0;">Aqu√≠ aparecer√°n los pesos que agregues</p>';
        } else {
          document.getElementById('precioKg').value = '';
          document.getElementById('stock').setAttribute('required', 'required');
          variantesActuales = [];
        }
      });
    }

    // Funciones para manejar variantes
    function calcularPrecioVariante() {
      const pesoInput = document.getElementById('nuevoVariantePeso').value.replace(',', '.');
      const precioKgInput = document.getElementById('precioKg').value.replace(',', '.');
      
      const peso = parseFloat(pesoInput);
      const precioKg = parseFloat(precioKgInput);
      
      if (peso && precioKg) {
        const precioTotal = peso * precioKg;
        document.getElementById('nuevoVariantePrecio').value = precioTotal.toFixed(2);
      } else {
        document.getElementById('nuevoVariantePrecio').value = '';
      }
    }

    function mostrarVariantes() {
      const listDiv = document.getElementById('variantesList');
      
      if (variantesActuales.length === 0) {
        listDiv.innerHTML = '<p style="color: #808080; font-size: 0.9rem; margin: 0;">Aqu√≠ aparecer√°n los pesos que agregues</p>';
        return;
      }

      listDiv.innerHTML = variantesActuales.map((variante, index) => `
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 6px;">
          <div>
            <span style="font-weight: 600; color: var(--text-primary);">${variante.peso.toFixed(3)} kg</span>
            <span style="color: var(--text-muted); margin-left: 1rem;">${variante.precio_total.toFixed(2)}‚Ç¨</span>
          </div>
          <button type="button" onclick="window.eliminarVariante(${index})" style="
            padding: 0.5rem 1rem;
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
          " onmouseover="this.style.background='rgba(239, 68, 68, 0.2)'" onmouseout="this.style.background='rgba(239, 68, 68, 0.1)'">
            Eliminar
          </button>
        </div>
      `).join('');
    }

    // Event listeners para variantes
    const nuevoVariantePeso = document.getElementById('nuevoVariantePeso');
    const precioKgInput = document.getElementById('precioKg');

    if (nuevoVariantePeso) {
      nuevoVariantePeso.addEventListener('input', calcularPrecioVariante);
    }

    if (precioKgInput) {
      precioKgInput.addEventListener('input', calcularPrecioVariante);
    }
    
    const productForm = document.getElementById('productForm');
    if (productForm) {
      productForm.addEventListener('submit', guardarProducto);
    }
    
    document.getElementById('searchInput').addEventListener('input', renderizarProductos);
    document.getElementById('filterCategoria').addEventListener('change', renderizarProductos);

    // Cerrar modal al clickear fuera
    document.getElementById('productModal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('productModal')) {
        cerrarModal();
      }
    });

    // Cargar al iniciar
    cargarCategorias();
    cargarProductos();
  </script>
