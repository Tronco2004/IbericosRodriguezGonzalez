---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
---

<ProtectedLayout requireAdmin={true}>
  <div class="admin-page">
    <div class="admin-container">
      <!-- Header -->
      <div class="admin-header">
        <a href="/admin/dashboard" class="admin-back-btn">←</a>
        <h1 class="admin-title">Empresas</h1>
        <p class="admin-subtitle">Vista general de clientes empresariales, bares, restaurantes y tiendas</p>
      </div>

      <!-- Estadísticas de Empresas -->
      <div class="empresas-stats-grid">
        <!-- Card Total de Empresas -->
        <div class="empresas-stat-card">
          <div class="stat-label">Total de Empresas</div>
          <div class="stat-value" id="totalEmpresas">0</div>
          <div class="stat-hint gold">Clientes registrados</div>
        </div>

        <!-- Card Empresas Activas -->
        <div class="empresas-stat-card">
          <div class="stat-label">Empresas Activas</div>
          <div class="stat-value success" id="empresasActivas">0</div>
          <div class="stat-hint success">En funcionamiento</div>
        </div>

        <!-- Card Tipos de Clientes -->
        <div class="empresas-stat-card">
          <div class="stat-label">Tipos de Cliente</div>
          <div class="stat-value purple" id="tiposClientes">0</div>
          <div class="stat-hint purple">Categorías diferentes</div>
        </div>
      </div>

      <!-- Búsqueda y Filtros -->
      <div class="admin-filters">
        <input type="text" id="searchInput" class="admin-search-input" placeholder="Buscar empresa, NIF, email, representante..." />
        <select id="filterTipo" class="admin-select">
          <option value="">Todos los tipos</option>
          <option value="Bar">Bar</option>
          <option value="Restaurante">Restaurante</option>
          <option value="Tienda">Tienda</option>
          <option value="Particular">Particular</option>
          <option value="Mayorista">Mayorista</option>
          <option value="Otro">Otro</option>
        </select>
      </div>

      <!-- Grid de Empresas -->
      <div class="empresas-grid" id="empresasGrid">
        <div class="admin-loading">Cargando empresas...</div>
      </div>
    </div>
  </div>

  <style>
    /* Estadísticas Grid */
    .empresas-stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .empresas-stat-card {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 2px 8px var(--shadow-color);
      border: 1px solid var(--border-color);
      transition: var(--theme-transition);
    }

    .stat-label {
      color: var(--text-muted);
      font-size: 0.9rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      color: var(--text-primary);
      font-size: 2rem;
      font-weight: 900;
    }

    .stat-value.success { color: #16a34a; }
    .stat-value.purple { color: #667eea; }

    .stat-hint {
      font-size: 0.85rem;
      margin-top: 0.5rem;
    }

    .stat-hint.gold { color: var(--color-accent); }
    .stat-hint.success { color: #16a34a; }
    .stat-hint.purple { color: #667eea; }

    /* Grid de Empresas */
    .empresas-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }

    /* Cards de Empresa */
    .empresa-card {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 8px var(--shadow-color);
      border: 1px solid var(--border-color);
      transition: all 0.3s;
    }

    .empresa-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px var(--shadow-medium);
    }

    .empresa-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 1rem;
    }

    .empresa-nombre {
      color: var(--text-primary);
      font-size: 1.25rem;
      margin: 0 0 0.25rem 0;
      font-weight: 700;
    }

    .empresa-tipo-badge {
      display: inline-block;
      padding: 0.3rem 0.8rem;
      border-radius: 6px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .empresa-tipo-badge.bar { background: #fef3c7; color: #92400e; }
    .empresa-tipo-badge.restaurante { background: #dbeafe; color: #0c2d6b; }
    .empresa-tipo-badge.tienda { background: #dcfce7; color: #166534; }
    .empresa-tipo-badge.mayorista { background: #f3e8ff; color: #581c87; }
    .empresa-tipo-badge.otro { background: #f3f4f6; color: #374151; }

    .empresa-estado-badge {
      display: inline-block;
      padding: 0.3rem 0.8rem;
      border-radius: 6px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .empresa-estado-badge.activo { background: #dcfce7; color: #166534; }
    .empresa-estado-badge.inactivo { background: #fee2e2; color: #991b1b; }

    .empresa-identificacion {
      margin-bottom: 1rem;
      padding: 1rem;
      background: var(--bg-tertiary);
      border-radius: 8px;
    }

    .empresa-section-label {
      color: var(--text-muted);
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .empresa-section-value {
      color: var(--text-primary);
      font-weight: 600;
    }

    .empresa-section {
      margin-bottom: 1rem;
    }

    .empresa-section-text {
      color: var(--text-primary);
      font-weight: 500;
    }

    .empresa-contacto-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .empresa-contacto-item {
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .empresa-contacto-item span {
      color: var(--text-muted);
    }

    .empresa-direccion {
      color: var(--text-primary);
      font-size: 0.9rem;
      line-height: 1.5;
    }

    .empresa-notas {
      margin-bottom: 1rem;
      padding: 1rem;
      background: var(--bg-tertiary);
      border-left: 4px solid #667eea;
      border-radius: 4px;
    }

    .empresa-notas-label {
      color: #667eea;
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .empresa-notas-text {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }

    .empresa-actions {
      display: flex;
      gap: 0.75rem;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
    }

    .empresa-btn-edit {
      flex: 1;
      padding: 0.75rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s;
    }

    .empresa-btn-edit:hover {
      transform: scale(1.02);
    }

    .empresa-btn-delete {
      flex: 1;
      padding: 0.75rem;
      background: #fee2e2;
      color: #991b1b;
      border: 1px solid #fecaca;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s;
    }

    .empresa-btn-delete:hover {
      background: #fecaca;
    }
  </style>

  <script>
    let empresas = [];
    let empresasFiltradas = [];

    async function cargarEmpresas() {
      try {
        const response = await fetch('/api/admin/clientes-empresariales');
        const data = await response.json();
        
        if (data.success && data.clientes && data.clientes.length > 0) {
          empresas = data.clientes;
        } else {
          empresas = [];
        }
        
        actualizarEstadisticas();
        renderizarEmpresas();
      } catch (error) {
        console.error('Error cargando empresas:', error);
        empresas = [];
        renderizarEmpresas();
      }
    }

    function actualizarEstadisticas() {
      const totalEmpresas = empresas.length;
      const empresasActivas = empresas.filter(e => e.estado).length;
      const tiposUnicos = new Set(empresas.map(e => e.tipo_cliente)).size;

      document.getElementById('totalEmpresas').textContent = totalEmpresas;
      document.getElementById('empresasActivas').textContent = empresasActivas;
      document.getElementById('tiposClientes').textContent = tiposUnicos;
    }

    function getTipoBadgeClass(tipo) {
      const tipos = {
        'Bar': 'bar',
        'Restaurante': 'restaurante',
        'Tienda': 'tienda',
        'Mayorista': 'mayorista'
      };
      return tipos[tipo] || 'otro';
    }

    function renderizarEmpresas() {
      const grid = document.getElementById('empresasGrid');
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const filterTipo = document.getElementById('filterTipo').value;

      empresasFiltradas = empresas.filter(e => {
        const matchSearch = 
          e.nombre_empresa.toLowerCase().includes(searchTerm) ||
          e.numero_identificacion.toLowerCase().includes(searchTerm) ||
          e.email_contacto.toLowerCase().includes(searchTerm) ||
          e.nombre_representante.toLowerCase().includes(searchTerm);
        
        const matchTipo = !filterTipo || e.tipo_cliente === filterTipo;
        
        return matchSearch && matchTipo;
      });

      if (empresasFiltradas.length === 0) {
        grid.innerHTML = '<div class="admin-empty-state">No hay empresas que mostrar</div>';
        return;
      }

      grid.innerHTML = empresasFiltradas.map(e => `
        <div class="empresa-card">
          <!-- Encabezado con nombre y estado -->
          <div class="empresa-header">
            <div>
              <h3 class="empresa-nombre">${e.nombre_empresa}</h3>
              <span class="empresa-tipo-badge ${getTipoBadgeClass(e.tipo_cliente)}">${e.tipo_cliente}</span>
            </div>
            <span class="empresa-estado-badge ${e.estado ? 'activo' : 'inactivo'}">${e.estado ? 'Activo' : 'Inactivo'}</span>
          </div>

          <!-- Identificación -->
          <div class="empresa-identificacion">
            <div class="empresa-section-label">Número de Identificación</div>
            <div class="empresa-section-value">${e.tipo_identificacion}: ${e.numero_identificacion}</div>
          </div>

          <!-- Representante -->
          <div class="empresa-section">
            <div class="empresa-section-label">Representante Legal</div>
            <div class="empresa-section-text">${e.nombre_representante}</div>
          </div>

          <!-- Contacto -->
          <div class="empresa-section">
            <div class="empresa-section-label">Contacto</div>
            <div class="empresa-contacto-list">
              <div class="empresa-contacto-item">
                <span>Email:</span> ${e.email_contacto}
              </div>
              ${e.telefono_contacto ? `<div class="empresa-contacto-item">
                <span>Teléfono:</span> ${e.telefono_contacto}
              </div>` : ''}
            </div>
          </div>

          <!-- Dirección -->
          <div class="empresa-section">
            <div class="empresa-section-label">Dirección Fiscal</div>
            <div class="empresa-direccion">${e.direccion_fiscal}</div>
          </div>

          ${e.notas ? `<div class="empresa-notas">
            <div class="empresa-notas-label">Notas</div>
            <div class="empresa-notas-text">${e.notas}</div>
          </div>` : ''}

          <!-- Botones de Acción -->
          <div class="empresa-actions">
            <button onclick="editarEmpresa('${e.id}')" class="empresa-btn-edit">Editar</button>
            <button onclick="eliminarEmpresa('${e.id}')" class="empresa-btn-delete">Eliminar</button>
          </div>
        </div>
      `).join('');
    }

    function editarEmpresa(id) {
      // Redirigir a la página de clientes para editar
      window.location.href = `/admin/clientes?edit=${id}`;
    }

    function eliminarEmpresa(id) {
      if (confirm('¿Estás seguro de que quieres eliminar esta empresa?')) {
        fetch(`/api/admin/clientes-empresariales?id=${id}`, {
          method: 'DELETE'
        }).then(r => r.json()).then(data => {
          if (data.success) {
            cargarEmpresas();
          } else {
            alert('Error al eliminar: ' + data.message);
          }
        }).catch(err => {
          console.error('Error:', err);
          alert('Error al eliminar la empresa');
        });
      }
    }

    // Event listeners
    document.getElementById('searchInput').addEventListener('input', renderizarEmpresas);
    document.getElementById('filterTipo').addEventListener('change', renderizarEmpresas);

    // Cargar al iniciar
    cargarEmpresas();
  </script>
</ProtectedLayout>
