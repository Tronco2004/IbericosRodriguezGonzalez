---
import ProtectedLayout from '../../layouts/ProtectedLayout.astro';
---

<ProtectedLayout>
  <div class="admin-page">
    <div class="admin-container">
      <!-- Header -->
      <div class="admin-header">
        <h1 class="admin-title">Códigos de Descuento</h1>
        <p class="admin-subtitle">Gestiona promociones y ofertas</p>
      </div>

      <!-- Botón crear código -->
      <div class="admin-action-bar">
        <button id="btnCrearCodigo" class="admin-btn-primary" style="background: var(--color-accent); color: #fff; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
          Crear Nuevo Código
        </button>
      </div>

      <!-- Tabla de códigos -->
      <div class="admin-table-container">
        <div id="tablaCodigos" class="admin-table-scroll">
          <p class="admin-empty-state">Cargando códigos...</p>
        </div>
      </div>

      <!-- Toast Notification -->
      <div id="toastNotificacion" style="display: none; position: fixed; top: 2rem; right: 2rem; z-index: 9999; min-width: 320px; padding: 1rem 1.5rem; border-radius: 12px; box-shadow: 0 8px 32px rgba(0,0,0,0.25); animation: toastSlideIn 0.4s ease; align-items: center; gap: 0.75rem;">
        <span id="toastIcon" style="font-size: 1.5rem;"></span>
        <div style="flex: 1;">
          <div id="toastTitulo" style="font-weight: 700; font-size: 0.95rem; margin-bottom: 0.15rem;"></div>
          <div id="toastMensaje" style="font-size: 0.85rem; opacity: 0.85;"></div>
        </div>
      </div>
      <style>
        @keyframes toastSlideIn {
          from { opacity: 0; transform: translateX(100px); }
          to { opacity: 1; transform: translateX(0); }
        }
        @keyframes toastSlideOut {
          from { opacity: 1; transform: translateX(0); }
          to { opacity: 0; transform: translateX(100px); }
        }
      </style>
    </div>
  </div>

  <!-- Modal crear código -->
  <div id="modalCrearCodigo" class="admin-modal-overlay" style="display: none;">
    <div class="admin-modal">
      <h2 class="admin-modal-title">Crear Código de Descuento</h2>
      
      <form id="formCrearCodigo" class="admin-form">
        <!-- Código -->
        <div class="admin-form-group">
          <label for="codigo" class="admin-label">Código</label>
          <input 
            id="codigo"
            type="text" 
            required
            placeholder="Ej: VERANO2024"
            class="admin-input"
          />
        </div>

        <!-- Descripción -->
        <div class="admin-form-group">
          <label for="descripcion" class="admin-label">Descripción</label>
          <input 
            id="descripcion"
            type="text" 
            placeholder="Descripción de la promoción"
            class="admin-input"
          />
        </div>

        <!-- Tipo de descuento -->
        <div class="admin-form-group">
          <label for="tipoDescuento" class="admin-label">Tipo de Descuento</label>
          <select 
            id="tipoDescuento"
            required
            class="admin-input"
          >
            <option value="">Selecciona una opción</option>
            <option value="porcentaje">Porcentaje (%)</option>
            <option value="fijo">Monto Fijo (€)</option>
          </select>
        </div>

        <!-- Valor descuento -->
        <div class="admin-form-group">
          <label for="valorDescuento" class="admin-label">Valor del Descuento</label>
          <input 
            id="valorDescuento"
            type="number" 
            required
            step="0.01"
            min="0"
            placeholder="0.00"
            class="admin-input"
          />
        </div>

        <div class="admin-form-row">
          <!-- Fecha inicio -->
          <div class="admin-form-group">
            <label for="fechaInicio" class="admin-label">Fecha Inicio</label>
            <input 
              id="fechaInicio"
              type="datetime-local" 
              required
              class="admin-input"
            />
          </div>

          <!-- Fecha fin -->
          <div class="admin-form-group">
            <label for="fechaFin" class="admin-label">Fecha Fin</label>
            <input 
              id="fechaFin"
              type="datetime-local" 
              required
              class="admin-input"
            />
          </div>
        </div>

        <div class="admin-form-row">
          <!-- Uso máximo -->
          <div class="admin-form-group">
            <label for="usoMaximo" class="admin-label">Usos Máximos</label>
            <input 
              id="usoMaximo"
              type="number" 
              min="0"
              placeholder="Dejar vacío para ilimitado"
              class="admin-input"
            />
          </div>

          <!-- Monto mínimo -->
          <div class="admin-form-group">
            <label for="montoMinimo" class="admin-label">Monto Mínimo (€)</label>
            <input 
              id="montoMinimo"
              type="number" 
              step="0.01"
              min="0"
              placeholder="Dejar vacío para sin límite"
              class="admin-input"
            />
          </div>
        </div>

        <div id="mensajeFormulario" class="admin-hint" style="display: none;"></div>

        <div class="admin-form-actions">
          <button 
            type="button"
            id="btnCancelarCodigo"
            class="admin-btn-secondary"
          >
            Cancelar
          </button>
          <button 
            type="submit"
            class="admin-btn-primary"
          >
            Crear Código
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal de confirmación para eliminar código -->
  <div id="modalEliminarCodigo" class="admin-modal-overlay" style="display: none;">
    <div class="admin-modal" style="max-width: 400px;">
      <h2 class="admin-modal-title">Confirmar Eliminación</h2>
      <p style="color: var(--text-muted); margin: 1.5rem 0;">
        ¿Está seguro de que desea eliminar este código de descuento? Esta acción no se puede deshacer.
      </p>
      <div class="admin-form-actions" style="gap: 1rem;">
        <button id="btnConfirmarEliminarCodigo" class="admin-btn-primary" style="background: #ef4444;">
          Eliminar
        </button>
        <button id="btnCancelarEliminarCodigo" class="admin-btn-secondary">
          Cancelar
        </button>
      </div>
    </div>
  </div>

  <style>
    /* Estilos específicos de esta página */
    .codigo-cell {
      font-weight: 600;
      color: #a89968;
    }

    .descuento-cell {
      font-weight: 600;
      color: #a89968;
    }

    .btn-small {
      padding: 0.5rem 1rem !important;
      font-size: 0.85rem !important;
    }

    /* Detalles del código */
    .detalles-container {
      padding: 2rem 0;
    }

    .detalles-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: linear-gradient(135deg, rgba(168, 153, 104, 0.05) 0%, rgba(168, 153, 104, 0.02) 100%);
      border-left: 4px solid #a89968;
      border-radius: 8px;
    }

    .detalles-header > div:first-child {
      flex: 1;
    }

    .detalles-title {
      margin: 0 0 0.5rem 0;
      color: #001a33;
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: -0.5px;
    }

    .detalles-descripcion {
      margin: 0;
      color: var(--text-muted);
      font-size: 0.95rem;
    }

    .detalles-info {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: rgba(0, 26, 51, 0.02);
      border-radius: 8px;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 0;
      border-bottom: 1px solid rgba(0, 26, 51, 0.05);
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: var(--text-muted);
      font-size: 0.9rem;
    }

    .info-valor {
      color: #001a33;
      font-weight: 500;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: linear-gradient(135deg, #f8f7f4 0%, rgba(248, 247, 244, 0.7) 100%);
      padding: 1.5rem;
      border-radius: 12px;
      border: 1px solid rgba(168, 153, 104, 0.1);
      box-shadow: 0 2px 8px rgba(0, 26, 51, 0.04);
      transition: all 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 26, 51, 0.08);
      border-color: rgba(168, 153, 104, 0.2);
    }

    .stat-label {
      margin: 0 0 0.75rem 0;
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-value {
      margin: 0;
      font-size: 2rem;
      font-weight: 700;
      color: #a89968;
    }

    .historial-title {
      margin: 2rem 0 1.5rem 0;
      color: #001a33;
      font-size: 1.25rem;
      font-weight: 600;
    }

    .admin-empty-state {
      text-align: center;
      padding: 2rem;
      color: var(--text-muted);
      background: rgba(0, 26, 51, 0.02);
      border-radius: 8px;
    }

    .admin-table-scroll {
      overflow-x: auto;
      border-radius: 8px;
      border: 1px solid rgba(0, 26, 51, 0.05);
    }

    .admin-table {
      width: 100%;
      border-collapse: collapse;
    }

    .admin-table thead {
      background: rgba(168, 153, 104, 0.08);
    }

    .admin-table th {
      padding: 1rem;
      text-align: left;
      font-weight: 600;
      font-size: 0.9rem;
      color: #001a33;
      border-bottom: 2px solid rgba(168, 153, 104, 0.2);
    }

    .admin-table tbody tr {
      border-bottom: 1px solid rgba(0, 26, 51, 0.05);
      transition: background 0.2s ease;
    }

    .admin-table tbody tr:hover {
      background: rgba(168, 153, 104, 0.03);
    }

    .admin-table td {
      padding: 1rem;
      font-size: 0.95rem;
      color: #001a33;
    }

    /* Mensajes del formulario */
    .mensaje-success {
      display: block;
      padding: 1rem;
      background: #d1fae5;
      color: #065f46;
      border-left: 4px solid #10b981;
      border-radius: 8px;
    }

    .mensaje-error {
      display: block;
      padding: 1rem;
      background: #fee2e2;
      color: #991b1b;
      border-left: 4px solid #ef4444;
      border-radius: 8px;
    }

    /* Badge styling */
    .admin-badge {
      display: inline-block;
      padding: 0.35rem 0.75rem;
      border-radius: 4px;
      font-size: 0.8rem;
      font-weight: 600;
    }

    .admin-badge.success {
      background: #d1fae5;
      color: #065f46;
    }

    .admin-badge.danger {
      background: #fee2e2;
      color: #991b1b;
    }

    /* Botones con tema */
    :root .admin-btn-primary {
      background: var(--color-primary);
      color: #fff;
    }

    :root .admin-btn-primary:hover {
      background: var(--color-primary-light);
    }

    [data-theme="dark"] .admin-btn-primary {
      background: var(--color-accent);
      color: #000;
    }

    [data-theme="dark"] .admin-btn-primary:hover {
      background: var(--color-accent-light);
    }

    @media (max-width: 768px) {
      .detalles-header {
        flex-direction: column;
        gap: 1rem;
      }

      .detalles-title {
        font-size: 1.5rem;
      }

      .stats-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .detalles-info {
        grid-template-columns: 1fr;
      }
      
      .admin-table {
        font-size: 0.85rem;
      }

      .admin-table th,
      .admin-table td {
        padding: 0.75rem 0.5rem;
      }
    }
  </style>

  <!-- PopUp de notificaciones -->
  <div id="popupNotificacion" class="popup-notificacion" style="display: none;">
    <div class="popup-icono" id="popupIcono"></div>
    <span class="popup-mensaje" id="popupMensaje"></span>
  </div>

  <script>
    let popupTimeout;
    function showPopup(mensaje, tipo = 'success') {
      const popup = document.getElementById('popupNotificacion');
      const icono = document.getElementById('popupIcono');
      const msg = document.getElementById('popupMensaje');
      if (popupTimeout) clearTimeout(popupTimeout);
      icono.textContent = tipo === 'success' ? '\u2713' : '\u2715';
      msg.textContent = mensaje;
      popup.className = `popup-notificacion popup-${tipo} popup-visible`;
      popup.style.display = 'flex';
      popupTimeout = setTimeout(() => {
        popup.classList.remove('popup-visible');
        popup.classList.add('popup-hide');
        setTimeout(() => { popup.style.display = 'none'; popup.classList.remove('popup-hide'); }, 400);
      }, 3000);
    }

    const modal = document.getElementById('modalCrearCodigo');
    const btnCrear = document.getElementById('btnCrearCodigo');
    const btnCancelar = document.getElementById('btnCancelarCodigo');
    const form = document.getElementById('formCrearCodigo');
    let eliminandoCodigoId = null;

    btnCrear.addEventListener('click', () => {
      modal.style.display = 'flex';
    });

    btnCancelar.addEventListener('click', () => {
      modal.style.display = 'none';
      form.reset();
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
        form.reset();
      }
    });

    async function cargarCodigos() {
      try {
        const response = await fetch('/api/admin/codigos-lista', {
          headers: {
            'x-user-id': localStorage.getItem('user_id') || ''
          }
        });

        const data = await response.json();

        if (data.success) {
          renderizarTabla(data.codigos);
        } else {
          document.getElementById('tablaCodigos').innerHTML = '<p class="admin-empty-state">Error al cargar códigos</p>';
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('tablaCodigos').innerHTML = '<p class="admin-empty-state">Error de conexión</p>';
      }
    }

    function renderizarTabla(codigos) {
      if (codigos.length === 0) {
        document.getElementById('tablaCodigos').innerHTML = '<p class="admin-empty-state">No hay códigos creados aún</p>';
        return;
      }

      const estadoClase = (estado) => {
        if (estado === 'Activo') return 'success';
        if (estado === 'Próximo') return 'warning';
        return 'danger';
      };

      let html = '<table class="admin-table"><thead><tr><th>Código</th><th>Descuento</th><th>Descuento Total</th><th>Estado</th><th>Acciones</th></tr></thead><tbody>';

      codigos.forEach(codigo => {
        const ahora = new Date();
        const inicio = new Date(codigo.fecha_inicio);
        const fin = new Date(codigo.fecha_fin);
        
        let estado = 'Inactivo';
        if (codigo.activo) {
          if (ahora < inicio) estado = 'Próximo';
          else if (ahora > fin) estado = 'Expirado';
          else estado = 'Activo';
        }

        const descuentoDisplay = codigo.tipo_descuento === 'porcentaje' ? `${codigo.valor_descuento}%` : `${codigo.valor_descuento.toFixed(2)}€`;

        html += `
          <tr>
            <td class="codigo-cell">${codigo.codigo}</td>
            <td>${descuentoDisplay}</td>
            <td>${codigo.descuento_total?.toFixed(2) || '0.00'}€</td>
            <td><span class="admin-badge ${estadoClase(estado)}">${estado}</span></td>
            <td>
              <button onclick="window.verDetalles(${codigo.id})" class="admin-btn-secondary btn-small">
                Ver Detalles
              </button>
              <button onclick="eliminarCodigo(${codigo.id})" class="admin-btn-danger btn-small">
                Eliminar
              </button>
            </td>
          </tr>
        `;
      });

      html += '</tbody></table>';
      document.getElementById('tablaCodigos').innerHTML = html;
    }

    async function verDetalles(codigoId) {
      try {
        const response = await fetch(`/api/admin/codigos-detalles?id=${codigoId}`);

        const data = await response.json();

        if (data.success) {
          mostrarDetalles(data);
        } else {
          showPopup('Error: ' + (data.message || 'No se pudo obtener los detalles'), 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        showPopup('Error al obtener detalles', 'error');
      }
    }

    function mostrarDetalles(data) {
      const codigo = data.codigo;

      const badgeColor = codigo.activo ? '#d1fae5' : '#fee2e2';
      const badgeTextColor = codigo.activo ? '#065f46' : '#991b1b';
      const badgeText = codigo.activo ? 'Activo' : 'Inactivo';

      // Formatear fechas para datetime-local input
      const fechaInicio = codigo.fecha_inicio ? new Date(codigo.fecha_inicio).toISOString().slice(0, 16) : '';
      const fechaFin = codigo.fecha_fin ? new Date(codigo.fecha_fin).toISOString().slice(0, 16) : '';

      let html = `
        <div class="detalles-container" style="padding: 2rem 0;">
          <div class="detalles-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 2rem; padding: 1.5rem; background: linear-gradient(135deg, var(--bg-secondary), var(--bg-tertiary)); border-left: 4px solid var(--color-accent); border-radius: 8px; box-shadow: 0 2px 8px var(--shadow-color);">
            <div style="flex: 1;">
              <h2 class="detalles-title" style="margin: 0 0 0.5rem 0; color: var(--text-primary); font-size: 2rem; font-weight: 700; letter-spacing: -0.5px;">Editar Código</h2>
              <p style="margin: 0; color: var(--text-muted); font-size: 0.95rem;">Modifica los campos y pulsa "Guardar Cambios"</p>
            </div>
            <button onclick="window.cargarCodigos()" class="admin-btn-secondary" style="margin-left: 1rem; white-space: nowrap;">← Volver</button>
          </div>
          
          <form id="formEditarCodigo" style="background: var(--bg-tertiary); border-radius: 12px; padding: 2rem; border: 1px solid var(--border-light); box-shadow: 0 2px 8px var(--shadow-color);">
            <input type="hidden" id="editCodigoId" value="${codigo.id}" />

            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem;">
              <div class="admin-form-group">
                <label class="admin-label" for="editCodigo">Código</label>
                <input id="editCodigo" type="text" required value="${codigo.codigo}" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editDescripcion">Descripción</label>
                <input id="editDescripcion" type="text" value="${codigo.descripcion || ''}" placeholder="Descripción de la promoción" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editTipoDescuento">Tipo de Descuento</label>
                <select id="editTipoDescuento" required class="admin-input">
                  <option value="porcentaje" ${codigo.tipo_descuento === 'porcentaje' ? 'selected' : ''}>Porcentaje (%)</option>
                  <option value="fijo" ${codigo.tipo_descuento === 'fijo' ? 'selected' : ''}>Monto Fijo (€)</option>
                </select>
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editValorDescuento">Valor del Descuento</label>
                <input id="editValorDescuento" type="number" required step="0.01" min="0" value="${codigo.valor_descuento}" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editFechaInicio">Fecha Inicio</label>
                <input id="editFechaInicio" type="datetime-local" required value="${fechaInicio}" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editFechaFin">Fecha Fin</label>
                <input id="editFechaFin" type="datetime-local" required value="${fechaFin}" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editUsoMaximo">Usos Máximos</label>
                <input id="editUsoMaximo" type="number" min="0" value="${codigo.uso_maximo || ''}" placeholder="Vacío = ilimitado" class="admin-input" />
              </div>
              <div class="admin-form-group">
                <label class="admin-label" for="editMontoMinimo">Monto Mínimo (€)</label>
                <input id="editMontoMinimo" type="number" step="0.01" min="0" value="${codigo.restriccion_monto_minimo || ''}" placeholder="Vacío = sin límite" class="admin-input" />
              </div>
              <div class="admin-form-group" style="grid-column: 1 / -1;">
                <label class="admin-label">Estado</label>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 0.85rem 1.25rem; background: var(--bg-secondary); border-radius: 8px; border: 1px solid var(--border-light);">
                  <span style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.4rem 1rem; border-radius: 6px; font-size: 0.85rem; font-weight: 600; background: ${badgeColor}; color: ${badgeTextColor};">
                    <span style="width: 8px; height: 8px; border-radius: 50%; background: ${badgeTextColor}; display: inline-block;"></span>
                    ${badgeText}
                  </span>
                  <button type="button" onclick="window.toggleEstadoCodigo(${codigo.id}, ${!codigo.activo})" style="padding: 0.5rem 1.25rem; font-size: 0.85rem; font-weight: 600; border: none; border-radius: 6px; cursor: pointer; color: white; background: ${codigo.activo ? '#ef4444' : '#22c55e'}; transition: all 0.2s ease; box-shadow: 0 2px 6px ${codigo.activo ? 'rgba(239,68,68,0.3)' : 'rgba(34,197,94,0.3)'};">
                    ${codigo.activo ? '✕ Desactivar' : '✓ Activar'}
                  </button>
                </div>
              </div>
            </div>

            <div id="mensajeEditar" class="admin-hint" style="display: none; margin-top: 1rem;"></div>

            <div style="display: flex; justify-content: flex-end; gap: 1rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--border-light);">
              <button type="button" onclick="window.cargarCodigos()" class="admin-btn-secondary">Cancelar</button>
              <button type="submit" class="admin-btn-primary">Guardar Cambios</button>
            </div>
          </form>
        </div>
      `;

      document.getElementById('tablaCodigos').innerHTML = html;

      // Vincular evento submit al formulario de edición
      document.getElementById('formEditarCodigo').addEventListener('submit', guardarEdicion);
    }

    async function guardarEdicion(e) {
      e.preventDefault();
      const id = document.getElementById('editCodigoId').value;
      const mensaje = document.getElementById('mensajeEditar');

      const body = {
        codigo: document.getElementById('editCodigo').value,
        descripcion: document.getElementById('editDescripcion').value,
        tipo_descuento: document.getElementById('editTipoDescuento').value,
        valor_descuento: parseFloat(document.getElementById('editValorDescuento').value),
        fecha_inicio: new Date(document.getElementById('editFechaInicio').value).toISOString(),
        fecha_fin: new Date(document.getElementById('editFechaFin').value).toISOString(),
        uso_maximo: document.getElementById('editUsoMaximo').value ? parseInt(document.getElementById('editUsoMaximo').value) : null,
        restriccion_monto_minimo: document.getElementById('editMontoMinimo').value ? parseFloat(document.getElementById('editMontoMinimo').value) : null
      };

      try {
        const response = await fetch(`/api/admin/codigos-detalles?id=${id}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body)
        });
        const data = await response.json();

        if (data.success) {
          mostrarToast('success', '✓ Actualizado', 'El código de descuento se ha actualizado correctamente.');
          setTimeout(() => cargarCodigos(), 1800);
        } else {
          mensaje.textContent = 'Error: ' + (data.message || 'No se pudo actualizar');
          mensaje.style.display = 'block';
          mensaje.className = 'admin-hint mensaje-error';
        }
      } catch (error) {
        console.error('Error guardando edición:', error);
        mensaje.textContent = 'Error de conexión';
        mensaje.style.display = 'block';
        mensaje.className = 'admin-hint mensaje-error';
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const codigo = document.getElementById('codigo').value;
      const descripcion = document.getElementById('descripcion').value;
      const tipoDescuento = document.getElementById('tipoDescuento').value;
      const valorDescuento = document.getElementById('valorDescuento').value;
      const fechaInicio = document.getElementById('fechaInicio').value;
      const fechaFin = document.getElementById('fechaFin').value;
      const usoMaximo = document.getElementById('usoMaximo').value;
      const montoMinimo = document.getElementById('montoMinimo').value;

      try {
        const response = await fetch('/api/admin/codigos-crear', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'x-user-id': localStorage.getItem('user_id') || ''
          },
          body: JSON.stringify({
            codigo,
            descripcion,
            tipo_descuento: tipoDescuento,
            valor_descuento: parseFloat(valorDescuento),
            fecha_inicio: new Date(fechaInicio).toISOString(),
            fecha_fin: new Date(fechaFin).toISOString(),
            uso_maximo: usoMaximo ? parseInt(usoMaximo) : null,
            restriccion_monto_minimo: montoMinimo ? parseFloat(montoMinimo) : null
          })
        });

        const data = await response.json();
        const mensaje = document.getElementById('mensajeFormulario');

        if (response.ok && data.success) {
          mensaje.textContent = 'Código creado correctamente';
          mensaje.style.display = 'block';
          mensaje.className = 'admin-hint mensaje-success';
          
          form.reset();
          setTimeout(() => {
            modal.style.display = 'none';
            mensaje.style.display = 'none';
            cargarCodigos();
          }, 1500);
        } else {
          mensaje.textContent = 'Error: ' + (data.message || 'No se pudo crear el código');
          mensaje.style.display = 'block';
          mensaje.className = 'admin-hint mensaje-error';
        }
      } catch (error) {
        console.error('Error:', error);
        const mensaje = document.getElementById('mensajeFormulario');
        mensaje.textContent = 'Error de conexión';
        mensaje.style.display = 'block';
        mensaje.className = 'admin-hint mensaje-error';
      }
    });

    function mostrarToast(tipo, titulo, mensaje) {
      const toast = document.getElementById('toastNotificacion');
      const icon = document.getElementById('toastIcon');
      const titleEl = document.getElementById('toastTitulo');
      const msgEl = document.getElementById('toastMensaje');

      const estilos = {
        success: { icon: '✓', bg: '#ecfdf5', color: '#065f46', border: '#10b981' },
        error: { icon: '✕', bg: '#fef2f2', color: '#991b1b', border: '#ef4444' }
      };
      const s = estilos[tipo] || estilos.success;

      icon.textContent = s.icon;
      icon.style.color = s.color;
      titleEl.textContent = titulo;
      titleEl.style.color = s.color;
      msgEl.textContent = mensaje;
      msgEl.style.color = s.color;
      toast.style.display = 'flex';
      toast.style.background = s.bg;
      toast.style.borderLeft = '4px solid ' + s.border;

      setTimeout(() => {
        toast.style.animation = 'toastSlideOut 0.4s ease';
        setTimeout(() => {
          toast.style.display = 'none';
          toast.style.animation = 'toastSlideIn 0.4s ease';
        }, 400);
      }, 3000);
    }

    document.addEventListener('DOMContentLoaded', cargarCodigos);

    // Funciones globales para eliminar código
    window.eliminarCodigo = function(codigoId) {
      eliminandoCodigoId = codigoId;
      document.getElementById('modalEliminarCodigo').style.display = 'flex';
    };

    window.verDetalles = verDetalles;
    window.cargarCodigos = cargarCodigos;

    window.toggleEstadoCodigo = async function(codigoId, nuevoEstado) {
      try {
        const response = await fetch(`/api/admin/codigos-detalles?id=${codigoId}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ activo: nuevoEstado })
        });
        const data = await response.json();
        if (data.success) {
          showPopup('Estado actualizado', 'success');
          verDetalles(codigoId);
        } else {
          showPopup('Error: ' + (data.message || 'No se pudo actualizar'), 'error');
        }
      } catch (error) {
        console.error('Error toggling estado:', error);
        showPopup('Error al cambiar el estado del código', 'error');
      }
    };

    // Event listeners para modal de eliminar código
    document.getElementById('btnConfirmarEliminarCodigo').addEventListener('click', async () => {
      if (eliminandoCodigoId) {
        try {
          const response = await fetch(`/api/admin/codigos-detalles?id=${eliminandoCodigoId}`, {
            method: 'DELETE'
          });
          const data = await response.json();
          
          if (data.success) {
            showPopup('Código eliminado exitosamente', 'success');
            cargarCodigos();
            document.getElementById('modalEliminarCodigo').style.display = 'none';
            eliminandoCodigoId = null;
          } else {
            showPopup('Error: ' + (data.message || 'No se pudo eliminar el código'), 'error');
          }
        } catch (error) {
          console.error('Error eliminando código:', error);
          showPopup('Error al eliminar el código', 'error');
        }
      }
    });

    document.getElementById('btnCancelarEliminarCodigo').addEventListener('click', () => {
      document.getElementById('modalEliminarCodigo').style.display = 'none';
      eliminandoCodigoId = null;
    });

    document.getElementById('modalEliminarCodigo').addEventListener('click', (e) => {
      if (e.target.id === 'modalEliminarCodigo') {
        document.getElementById('modalEliminarCodigo').style.display = 'none';
        eliminandoCodigoId = null;
      }
    });
  </script>

