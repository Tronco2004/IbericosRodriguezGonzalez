---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

export function getStaticPaths() {
  return [
    { params: { slug: 'jamones' } },
    { params: { slug: 'quesos' } },
    { params: { slug: 'embutidos' } }
  ];
}

const { slug } = Astro.params;

const categoryTitles = {
  jamones: { title: 'Jamones Premium', subtitle: 'Nuestros mejores jamones ib√©ricos' },
  quesos: { title: 'Quesos Artesanales', subtitle: 'Quesos de denominaci√≥n de origen' },
  embutidos: { title: 'Embutidos Selectos', subtitle: 'Embutidos tradicionales' }
};

const info = categoryTitles[slug] || {
  title: 'Productos',
  subtitle: 'Nuestros productos'
};
---

<Layout>
  <!-- CABECERA MEJORADA -->
  <div style="
    background: linear-gradient(135deg, #001a33 0%, #5c4a3d 100%);
    color: white;
    text-align: center;
    padding: 4rem 2rem;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
  ">
    <!-- Decoraci√≥n de fondo -->
    <div style="
      position: absolute;
      top: -50%;
      right: -10%;
      width: 400px;
      height: 400px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 50%;
      z-index: 0;
    "></div>
    <div style="
      position: absolute;
      bottom: -30%;
      left: -5%;
      width: 300px;
      height: 300px;
      background: rgba(255, 255, 255, 0.03);
      border-radius: 50%;
      z-index: 0;
    "></div>

    <div style="position: relative; z-index: 1;">
      <span style="
        color: #a89968;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 3px;
        display: inline-block;
        padding: 0.75rem 2rem;
        background: rgba(168, 153, 104, 0.2);
        border: 1px solid rgba(168, 153, 104, 0.4);
        border-radius: 50px;
        margin-bottom: 1.5rem;
      ">
        {slug.toUpperCase()}
      </span>

      <h1 style="
        font-size: 3.5rem;
        margin: 1.5rem 0 0.8rem;
        color: white;
        font-weight: 800;
        letter-spacing: -1px;
      ">
        {info.title}
      </h1>

      <div style="
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #a89968, #d4a574);
        margin: 1.5rem auto;
        border-radius: 10px;
      "></div>

      <p style="
        opacity: 0.9;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 1.5rem auto 0;
        line-height: 1.6;
      ">
        {info.subtitle}
      </p>
    </div>
  </div>

  <!-- GRID MEJORADO -->
  <div style="max-width: 1300px; margin: 0 auto; padding: 0 2rem; margin-bottom: 4rem;">
    <div
      id="productosGrid"
      data-categoria={slug}
      style="
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2.5rem;
        padding: 0;
      ">
    </div>
  </div>

  <!-- ESTILOS -->
  <style>
    article {
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      display: flex;
      flex-direction: column;
      border: 1px solid #f0ebe3;
      position: relative;
      height: 100%;
    }

    article::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, #a89968, transparent);
      z-index: 1;
    }

    article:hover {
      box-shadow: 0 24px 48px rgba(0, 26, 51, 0.15);
      transform: translateY(-12px);
      border-color: #a89968;
    }

    .product-image-wrapper {
      height: 380px;
      overflow: hidden;
      background: linear-gradient(135deg, #faf8f5 0%, #ede7dd 100%);
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .product-image-wrapper::after {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.8) 0%, transparent 50%);
      pointer-events: none;
    }

    .product-image-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 20px;
      transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
      position: relative;
      z-index: 2;
    }

    article:hover img {
      transform: scale(1.12) rotate(2deg);
    }

    .product-badge {
      position: absolute;
      top: 1.25rem;
      right: 1.25rem;
      background: linear-gradient(135deg, #a89968 0%, #c4b896 100%);
      color: white;
      padding: 0.6rem 1.2rem;
      border-radius: 50px;
      font-size: 0.65rem;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 2px;
      z-index: 10;
      box-shadow: 0 8px 16px rgba(168, 153, 104, 0.25);
      backdrop-filter: blur(10px);
    }

    .product-info {
      padding: 2rem 1.75rem 1.75rem;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      background: white;
    }

    .product-category {
      font-size: 0.75rem;
      color: #a89968;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      margin-bottom: 0.75rem;
    }

    .product-name {
      font-weight: 800;
      color: #001a33;
      margin-bottom: 0.75rem;
      font-size: 1.3rem;
      line-height: 1.3;
      letter-spacing: -0.5px;
    }

    .product-description {
      font-size: 0.85rem;
      color: #5c4a3d;
      flex-grow: 1;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      margin-bottom: 1.2rem;
      line-height: 1.5;
      opacity: 0.85;
    }

    .product-specs {
      display: flex;
      gap: 1rem;
      margin-bottom: 1.2rem;
      padding-bottom: 1.2rem;
      border-bottom: 1px solid #f0ebe3;
    }

    .spec-item {
      flex: 1;
      text-align: center;
      padding: 0.75rem;
      background: #faf8f5;
      border-radius: 8px;
      font-size: 0.75rem;
    }

    .spec-label {
      display: block;
      color: #a89968;
      font-weight: 700;
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.3rem;
    }

    .spec-value {
      display: block;
      color: #001a33;
      font-weight: 600;
      font-size: 0.9rem;
    }

    .product-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
    }

    .product-price-wrapper {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .product-price-label {
      font-size: 0.65rem;
      color: #a89968;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.25rem;
    }

    .product-price {
      font-size: 1.8rem;
      font-weight: 900;
      background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -1px;
    }

    .btn-view {
      padding: 0.9rem 1.8rem;
      background: linear-gradient(135deg, #a89968 0%, #8b6f47 100%);
      color: white;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 700;
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      cursor: pointer;
      box-shadow: 0 8px 20px rgba(168, 153, 104, 0.35);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-transform: uppercase;
      letter-spacing: 1px;
      white-space: nowrap;
      position: relative;
      overflow: hidden;
    }

    .btn-view::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      transition: left 0.5s;
    }

    .btn-view:hover::before {
      left: 100%;
    }

    .btn-view:hover {
      background: linear-gradient(135deg, #8f7959 0%, #7a5c3a 100%);
      box-shadow: 0 12px 32px rgba(168, 153, 104, 0.5);
      transform: translateY(-3px);
    }

    .btn-view:active {
      transform: translateY(-1px);
    }

    @media (max-width: 768px) {
      article {
        grid-column: span 1;
      }

      h1 {
        font-size: 2.5rem;
      }

      #productosGrid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
      }

      .product-image-wrapper {
        height: 300px;
      }

      .product-name {
        font-size: 1.1rem;
      }

      .product-price {
        font-size: 1.5rem;
      }
    }
  </style>

  <!-- SCRIPT -->
  <script is:inline>
    const categoria = document.getElementById('productosGrid').dataset.categoria;

    async function cargarProductos() {
      try {
        const res = await fetch('/api/admin/productos');
        const data = await res.json();

        const productos = data.productos
          ?.filter(p => p.categorias?.slug === categoria)
          .map(p => `
            <article>
              <div class="product-image-wrapper">
                <img src="${p.imagen_url}" alt="${p.nombre}" loading="lazy" />
              </div>
              <div class="product-badge">üèÜ Premium</div>
              <div class="product-info">
                <span class="product-category">${categoria}</span>
                <h3 class="product-name">${p.nombre}</h3>
                <p class="product-description">${p.descripcion || 'Producto de calidad superior'}</p>
                
                <div class="product-specs">
                  <div class="spec-item">
                    <span class="spec-label">Origen</span>
                    <span class="spec-value">Espa√±a</span>
                  </div>
                  <div class="spec-item">
                    <span class="spec-label">Calidad</span>
                    <span class="spec-value">Premium</span>
                  </div>
                </div>

                <div class="product-footer">
                  <div class="product-price-wrapper">
                    <span class="product-price-label">Precio</span>
                    <div class="product-price">‚Ç¨${(p.precio_centimos / 100).toFixed(2)}</div>
                  </div>
                  <a href="/productos/${p.id}" class="btn-view">Ver Detalles</a>
                </div>
              </div>
            </article>
          `).join('');

        document.getElementById('productosGrid').innerHTML =
          productos || '<p style="opacity: 0.6; text-align: center; padding: 2rem; grid-column: 1/-1;">No hay productos en esta categor√≠a</p>';

      } catch (e) {
        console.error(e);
      }
    }

    cargarProductos();
  </script>
</Layout>