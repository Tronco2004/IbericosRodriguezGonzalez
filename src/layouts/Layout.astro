    <script is:inline>
      // Live Search - B√∫squeda en tiempo real
      function inicializarBuscador() {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        let timeoutId = null;

        if (!searchInput || !searchResults) {
          console.log('Elementos de b√∫squeda no encontrados');
          return;
        }

        console.log('Buscador inicializado');

        searchInput.addEventListener('input', (e) => {
          const query = e.target.value.trim();
          console.log('B√∫squeda:', query);

          // Limpiar timeout anterior
          clearTimeout(timeoutId);

          // Si menos de 2 caracteres, ocultar resultados
          if (query.length < 2) {
            searchResults.style.display = 'none';
            searchResults.innerHTML = '';
            return;
          }

          // Esperar 300ms antes de buscar
          timeoutId = setTimeout(async () => {
            try {
              console.log('Haciendo b√∫squeda de:', query);
              const response = await fetch(`/api/productos/buscar?q=${encodeURIComponent(query)}`);
              const data = await response.json();

              console.log('Resultados recibidos:', data);

              if (data.success && data.resultados.length > 0) {
                // Mostrar resultados
                searchResults.innerHTML = data.resultados.map(producto => `
                  <a href="/productos/${producto.id}" style="
                    display: flex;
                    align-items: center;
                    padding: 1rem;
                    border-bottom: 1px solid #f0ede9;
                    text-decoration: none;
                    color: inherit;
                    transition: background 0.2s;
                  " onmouseover="this.style.background='#f8f4f0'" onmouseout="this.style.background='transparent'">
                    <img src="${producto.imagen}" alt="${producto.nombre}" style="
                      width: 50px;
                      height: 50px;
                      object-fit: cover;
                      border-radius: 4px;
                      margin-right: 1rem;
                    ">
                    <div style="flex: 1;">
                      <div style="font-weight: 600; color: #001a33; margin-bottom: 0.25rem;">${producto.nombre}</div>
                      <div style="font-size: 0.85rem; color: #a89968;">‚Ç¨${producto.precio}</div>
                    </div>
                  </a>
                `).join('');
                searchResults.style.display = 'block';
              } else {
                // No hay resultados
                searchResults.innerHTML = `
                  <div style="padding: 1.5rem; text-align: center; color: #94a3b8; font-size: 0.9rem;">
                    No se encontraron productos
                  </div>
                `;
                searchResults.style.display = 'block';
              }
            } catch (error) {
              console.error('Error en b√∫squeda:', error);
              searchResults.innerHTML = `
                <div style="padding: 1.5rem; text-align: center; color: #f5576c; font-size: 0.9rem;">
                  Error al buscar
                </div>
              `;
              searchResults.style.display = 'block';
            }
          }, 300);
        });

        // Cerrar resultados al hacer clic fuera
        document.addEventListener('click', (e) => {
          if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
          }
        });
      }

      // Ejecutar cuando el DOM est√© listo
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', inicializarBuscador);
      } else {
        inicializarBuscador();
      }

      // Mostrar modal de promoci√≥n solo para nuevos usuarios
      function mostrarPromocionSiEsNuevo() {
        const promoMostrado = localStorage.getItem('promo_mostrado');
        
        if (!promoMostrado) {
          console.log('Usuario nuevo detectado, mostrando promoci√≥n');
          const modal = document.getElementById('promoModal');
          if (modal) {
            modal.style.display = 'flex';
          }
        }
      }

      function cerrarPromoModal() {
        const modal = document.getElementById('promoModal');
        if (modal) {
          modal.style.display = 'none';
          localStorage.setItem('promo_mostrado', 'true');
          console.log('Promoci√≥n marcada como mostrada');
        }
      }

      function copiarPromo() {
        const code = document.getElementById('promoCode').textContent;
        navigator.clipboard.writeText(code).then(() => {
          alert('C√≥digo copiado: ' + code);
          cerrarPromoModal();
        });
      }

      // Mostrar la promoci√≥n cuando carga la p√°gina
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', mostrarPromocionSiEsNuevo);
      } else {
        mostrarPromocionSiEsNuevo();
      }

      // Cerrar modal si hace clic fuera
      document.getElementById('promoModal')?.addEventListener('click', (e) => {
        if (e.target.id === 'promoModal') {
          cerrarPromoModal();
        }
      });
    </script>
