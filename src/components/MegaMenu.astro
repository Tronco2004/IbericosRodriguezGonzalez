---
interface Props {
  categorias: any[];
}

const { categorias } = Astro.props;

// Organizar categorías por grupos
const grupoCarnes = categorias.filter(c => 
  ['jamones', 'embutidos', 'carnes-ibericas', 'carnes', 'taquitos'].includes(c.slug)
);

const grupoLacteos = categorias.filter(c => 
  ['quesos', 'mantecas'].includes(c.slug)
);

const grupoPacks = categorias.filter(c => 
  ['paquetes-100g', 'paquetes', 'promociones'].includes(c.slug)
);

// Categorías que no encajan en ningún grupo
const otrasIds = [...grupoCarnes, ...grupoLacteos, ...grupoPacks].map(c => c.id);
const otras = categorias.filter(c => !otrasIds.includes(c.id));
---

<div class="mega-menu-container">
  <button class="mega-menu-trigger" id="megaMenuTrigger">
    <span>Productos</span>
    <svg class="chevron-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
      <path d="M2.5 4.5L6 8L9.5 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  
  <div class="mega-menu-dropdown" id="megaMenuDropdown">
    <div class="mega-menu-content">
      
      <!-- Columnas de categorías -->
      <div class="mega-menu-columns">
        {grupoCarnes.length > 0 && (
          <div class="mega-menu-column">
            <h3 class="column-title">Carnes</h3>
            <ul class="category-list">
              {grupoCarnes.map(cat => (
                <li>
                  <a href={`/categoria/${cat.slug}`} class="category-link">
                    {cat.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
        
        {grupoLacteos.length > 0 && (
          <div class="mega-menu-column">
            <h3 class="column-title">Lácteos</h3>
            <ul class="category-list">
              {grupoLacteos.map(cat => (
                <li>
                  <a href={`/categoria/${cat.slug}`} class="category-link">
                    {cat.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
        
        {grupoPacks.length > 0 && (
          <div class="mega-menu-column">
            <h3 class="column-title">Packs</h3>
            <ul class="category-list">
              {grupoPacks.map(cat => (
                <li>
                  <a href={`/categoria/${cat.slug}`} class="category-link">
                    {cat.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}

        {otras.length > 0 && (
          <div class="mega-menu-column">
            <h3 class="column-title">Otros</h3>
            <ul class="category-list">
              {otras.map(cat => (
                <li>
                  <a href={`/categoria/${cat.slug}`} class="category-link">
                    {cat.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
      
      <!-- Banner promocional en la parte inferior -->
      <div class="mega-menu-banner">
        <div class="banner-content">
          <div class="banner-text">
            <span class="banner-tag">Nuevo</span>
            <h4>Descubre nuestros productos</h4>
            <p>La mejor selección de ibéricos premium directamente a tu mesa</p>
          </div>
          <a href="/productos" class="banner-btn">Ver todo el catálogo →</a>
        </div>
      </div>
      
    </div>
  </div>
</div>

<style>
  .mega-menu-container {
    position: relative;
  }

  .mega-menu-trigger {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    background: none;
    border: none;
    font-size: 0.95rem;
    font-weight: 600;
    color: #001a33;
    padding: 0.5rem 0;
    cursor: pointer;
    transition: color 0.3s ease;
    font-family: inherit;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid transparent;
  }

  .mega-menu-trigger:hover {
    color: #8b4513;
    border-bottom-color: #000;
  }

  .chevron-icon {
    transition: transform 0.3s ease;
  }

  .mega-menu-container:hover .chevron-icon,
  .mega-menu-container.active .chevron-icon {
    transform: rotate(180deg);
  }

  /* Dropdown */
  .mega-menu-dropdown {
    position: fixed;
    top: 70px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 900px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
    border: 1px solid #e8e8e8;
  }

  .mega-menu-container:hover .mega-menu-dropdown,
  .mega-menu-container.active .mega-menu-dropdown {
    opacity: 1;
    visibility: visible;
  }

  .mega-menu-content {
    display: flex;
    flex-direction: column;
  }

  /* Columnas */
  .mega-menu-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    padding: 2rem;
    max-width: 100%;
  }

  .mega-menu-column {
    flex: 1;
    width: 100%;
    padding: 0;
    border-right: none;
    text-align: center;
  }

  .mega-menu-column:first-child {
    border-left: none;
  }

  .mega-menu-column:last-child {
    border-right: none;
  }

  .column-title {
    font-size: 0.75rem;
    font-weight: 700;
    color: #8b4513;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.2rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #f5f0eb;
  }

  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category-list li {
    margin-bottom: 0.6rem;
  }

  .category-link {
    display: block;
    padding: 0.4rem 0;
    color: #333;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .category-link:hover {
    color: #8b4513;
    font-weight: 500;
  }

  /* Banner promocional - ABAJO Y OCUPA TODO EL ANCHO */
  .mega-menu-banner {
    background: linear-gradient(135deg, #001a33 0%, #2d4a5e 100%);
    border-radius: 0 0 12px 12px;
    padding: 1.5rem 2rem;
  }

  .banner-content {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 2rem;
  }

  .banner-text {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: white;
    flex: 1;
  }

  .banner-tag {
    display: inline-block;
    background: #d4a574;
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    flex-shrink: 0;
    letter-spacing: 0.5px;
  }

  .banner-text h4 {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
    font-family: 'Playfair Display', serif;
  }

  .banner-text p {
    font-size: 0.85rem;
    opacity: 0.85;
    margin: 0;
  }

  .banner-btn {
    display: inline-block;
    background: white;
    color: #001a33;
    padding: 0.7rem 1.4rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .banner-btn:hover {
    background: #f5f0eb;
    transform: translateY(-2px);
  }

  /* ========== RESPONSIVE ========== */

  @media (max-width: 1024px) {
    .mega-menu-dropdown {
      max-width: 700px;
    }
  }

  @media (max-width: 768px) {
    .mega-menu-container {
      width: 100%;
    }

    .mega-menu-trigger {
      width: 100%;
      justify-content: space-between;
      padding: 1rem 0;
      font-size: 1.1rem;
      border-bottom: 1px solid #eee;
    }

    .mega-menu-dropdown {
      position: static;
      transform: none;
      width: 100%;
      max-width: 100%;
      box-shadow: none;
      border: none;
      border-radius: 0;
      opacity: 1;
      visibility: visible;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .mega-menu-container.active .mega-menu-dropdown {
      max-height: 1000px;
    }

    .mega-menu-columns {
      flex-direction: column;
      gap: 0;
      padding: 0.5rem 0;
    }

    .mega-menu-column {
      max-width: 100%;
      padding: 1rem 0 1rem 1rem;
      border-right: none;
      border-bottom: 1px solid #f0f0f0;
      text-align: left;
    }

    .column-title {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    .category-link {
      padding: 0.5rem 0;
      font-size: 0.95rem;
    }

    .mega-menu-banner {
      border-radius: 0;
      padding: 1rem;
    }

    .banner-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .banner-text {
      flex-direction: column;
      gap: 0.5rem;
    }

    .banner-text h4 {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  // Toggle para móvil
  const trigger = document.getElementById('megaMenuTrigger');
  const container = trigger?.closest('.mega-menu-container');

  if (trigger && container) {
    trigger.addEventListener('click', (e) => {
      if (window.innerWidth <= 768) {
        e.preventDefault();
        container.classList.toggle('active');
      }
    });
  }

  // Cerrar al hacer click fuera
  document.addEventListener('click', (e) => {
    if (container && !container.contains(e.target as Node)) {
      container.classList.remove('active');
    }
  });
</script>
